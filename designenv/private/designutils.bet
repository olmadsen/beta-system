ORIGIN '~beta/basiclib/formatio';
-- lib: attributes --
putPoint:
  (#
     px, py: @Integer
  enter (px,py)
  do '(%d,%d)' -> putFormat(# do  px -> d;  py -> d #)
  #);
putBounds:
  (#
     bndx, bndy, bndw, bndh: @Integer
  enter (bndx, bndy, bndw, bndh)
  do '%dx%d%s%d%s%d' -> putFormat
       (#
       do bndw -> d; bndh -> d;
	  (if bndx < 0 then '' -> s else '+' -> s if); bndx -> d;
	  (if bndy < 0 then '' -> s else '+' -> s if); bndy -> d
       #)
  #)
