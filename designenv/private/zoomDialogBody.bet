ORIGIN 'designobjectbody.bet';
INCLUDE '~beta/guienv/utils/dialogfield';
-- zoomDialogDesc: descriptor --
(# 
   mydialog: @window
     (# 
        (*type::(# do theGUI.windowTypes.dialog->value #);*)
        factor:@real;
        setZoom:
          (# 
          do number.IntegerContents->factor;
             (if (factor>0) and (factor<321) then
                 factor/100 -> factor;
                 (factor,factor)->zoom;
             if);
          #);
        
        number: @NumberField
          (# 
             eventHandler::
               (# 
                  onKeyDown::
                    (# 
                    do (if ch //ascii.nl //ascii.cr then
                           setZoom;
                           THIS(window).close;
                        //ascii.esc then
                           THIS(window).close;
                       if);
                    #);
               #);
             open::
               (# 
               do
                  (40,5)->position;
                  (100,30)->size;
               #);
          #);
        open::
          (# 
          do (280,40)->size;
             number.open;
             'Enter zoomvalue (1-320):'->title;
             (200,200)->this(window).localToGlobal->position;
          #);
     #)
do
   mydialog.open;
#)
