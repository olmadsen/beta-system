ORIGIN '../asteditor';
BODY 'parsingbody';

-- astEditorEnvLib: attributes --

parsingSynCatNo:
  (* The syntactic category used for parsing, when the user has been editing
   * an ast is not necessarily the same as the original ast's syntactic 
   * category. For example would it be natural to change a SimpleDecl to 
   * a PatternDecl. This function returns the most general Syntactic category
   * that could replace "Node". For a SimpleDecl this would be "Attributes", since
   * a user could change one SimpleDecl to a PatternDecl and a SimpleDecl etc.
   *)
  (# node: ^astInterface.Ast; 
     synCatNo: @MPS.NonterminalSymbol;
  enter Node[]
  do <<SLOT ParsingSynCatNoDoPart: Descriptor>>;
  exit synCatNo
  #);

getSynCatNo:
  (* The syntatic category of "Node" is returned. *)
  (# Node: ^astInterface.Ast;
     synCatNo: @MPS.NonterminalSymbol;
  Enter node[]
  do <<SLOT GetSynCatNoDoPart: descriptor>>;
  Exit synCatNo
  #);

FindSuper:
  (* If "synCatNo" is part of an alternationrule, the most general
   * syntatic category is returned. 
   *)
  (#
     synCatNo: @MPS.NonterminalSymbol;
  enter synCatNo
  do <<SLOT FindSuperDoPart: Descriptor>>
  exit synCatNo 
  #);

IsListCategory:
  (* Returns true if synCatNo is a list category. *)
  (#
     synCatNo: @MPS.NonterminalSymbol;
     IsList: @Boolean;
  enter synCatNo
  do <<SLOT IsListCategoryDoPart: Descriptor>>
  exit IsList
  #);
