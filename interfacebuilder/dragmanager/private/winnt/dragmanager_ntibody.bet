ORIGIN '../dragmanagerbody';
INCLUDE '~beta/guienv/v1.4/private/winnt/guienv_ntiprivate';
-- windowItemLib: attributes --

translate:
  (# h,v: @integer;
     ntpPtr: @integer;
  enter (h,v)
  do (h,v) -> makeNtPointPtr -> ntpPtr;
     (interfaceObjectID,ntpPtr) -> ClientToScreen;
     ntpPtr -> getPointFromNtPointPtr -> (h,v);
     ntpPtr -> free;
  exit (h,v)
  #);
  
-- windowItemFromGlobal: doPart --
do (# originX, originY: @integer;
   do (0, 0) -> translate -> (originX, originY);
      global.h - originX -> local.h;
      global.v - originY -> local.v;
      
   #)
   
-- windowItemToGlobal: doPart --
do local -> translate -> global;
