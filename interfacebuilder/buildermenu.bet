ORIGIN '~beta/guienv/guienv';
LIB_DEF 'frigg_buildermenu' '../lib';

-- guienvLib: attributes --

builderMenu: menu
  (# builderItem: menuItem
       (# open::<
            (# 
            do inner;
               this(builderItem)[] -> append;
            #);
       #);
     
     addSeparator:
       (# aSeparator: ^separator;
       do &separator[] -> aSeparator[];
          aSeparator.open;
          aSeparator[] -> append;
       #);
  #);

--menulib:attributes--
builderItem: menuItem
  (# open::<
       (# 
       do inner;
          this(builderItem)[] -> append;
       #);
  #);

addSeparator:
  (# aSeparator: ^separator;
  do &separator[] -> aSeparator[];
     aSeparator.open;
     aSeparator[] -> append;
  #);
