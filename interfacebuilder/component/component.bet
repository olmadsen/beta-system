ORIGIN '~beta/basiclib/betaenv';
INCLUDE '~beta/betaast/betacfl';
INCLUDE '~beta/betaast/gram';

BODY 'componentbody';

-- lib: attributes --

patternKind: (# exit 1 #);
itemKind: (# exit 2 #);
singularItemKind: (# exit 3 #);
illegalKind: (# exit 4 #);


component:
	(# <<SLOT componentLib: attributes>>;
		gram: @grammar;
		node: ^astInterface.beta.attributeDecl;
		kind:
			(# theKind: @integer;
			<<SLOT componentGetKind: doPart>>
			exit theKind
			#);
		name:
			(# theName: ^text;
			enter (# enter theName[] <<SLOT componentSetName: doPart>> #)
			exit (# <<SLOT componentGetName: doPart>> exit theName[] #)
			#);
		prefix:
			(# thePrefix: ^text;
			enter (# enter thePrefix[] <<SLOT componentSetPrefix: doPart>> #)
			exit (# <<SLOT componentGetPrefix: doPart>> exit thePrefix[] #)
			#);
		prefixNode:
			(# thePrefixNode: ^astInterface.beta.attributeDecl;
			enter (# enter thePrefixNode[] <<SLOT componentSetPrefixNode: doPart>> #)
			exit (# <<SLOT componentGetPrefixNode: doPart>> exit thePrefixNode[] #)
			#);
		scan:
			(# current: ^astInterface.beta.attributeDecl;
			<<SLOT componentScan: doPart>>
			#);
		getAttributes:
			(# theAttributes: ^astInterface.beta.attributes;
			<<SLOT componentGetAttributes: doPart>>
			exit theAttributes[]
			#);
		append:
			(# child: ^astInterface.beta.attributeDecl;
			enter child[]
			<<SLOT componentAppend: doPart>>
			#);
		find:
			(# name: ^text;
				found: ^astInterface.beta.attributeDecl;
			enter name[]
			<<SLOT componentFind: doPart>>
			exit found[]
			#);
		
	#);
 
