drawBevel:
	(# kind: @integer;
		box: @rectangle;
		
		northEast: (# exit 1 #);
		northWest: (# exit 2 #);
		southEast: (# exit 3 #);
		southWest: (# exit 4 #);
		
		drawCorner:
			(# corner: @integer;
				colors: [0]@color;
			enter (corner, colors)
			do (if corner
					//northEast then
						(for inx: colors.range repeat
							colors[inx] -> pen.foreGroundColor;
							(box.right - inx, box.top + inx - 1) -> drawSpot;
						for);
					//northWest then
						(for inx: colors.range repeat
							colors[inx] -> pen.foreGroundColor;
							(box.left + inx - 1, box.top + inx - 1) -> drawSpot;
						for);
					//southEast then
						(for inx: colors.range repeat
							colors[inx] -> pen.foreGroundColor;
							(box.right - inx, box.bottom - inx) -> drawSpot;
						for);
					//southWest then
						(for inx: colors.range repeat
							colors[inx] -> pen.foreGroundColor;
							(box.left + inx - 1, box.bottom - inx) -> drawSpot;
						for);
				if);
			#);
			
		drawEdge:
			(# corner: @integer;
				colors: [0]@color;
			enter (corner, colors)
			do (if corner
					//northWest then
						(for inx: colors.range repeat
							colors[inx] -> pen.foreGroundColor;
							(box.left + inx - 1, box.top + inx - 1) -> moveTo;
							(box.right - inx - 1, box.top + inx - 1) -> drawTo;
							(box.left + inx - 1, box.top + inx - 1) -> moveTo;
							(box.left + inx -1, box.bottom - inx - 1) -> drawTo;
						for);
					//southEast then
						(for inx: colors.range repeat
							colors[inx] -> pen.foreGroundColor;
							(box.left + inx, box.bottom - inx) -> moveTo;
							(box.right - inx, box.bottom - inx) -> drawTo;
							(box.right - inx, box.top + inx) -> moveTo;
							(box.right - inx, box.bottom -inx) -> drawTo;
						for);
				if);
			#);
		drawTheThing:
			(# cornerPixels: [0] @color;
				northWestEdgePixels: [0] @color;
				southEeastEdgePixels: [0] @color;
				background: @color;
			do	INNER;
				background -> pen.foreGroundColor;
				box -> fillRect;
				(northEast, cornerPixels) -> drawCorner;
				(southWest, cornerPixels) -> drawCorner;
				(northWest, northWestEdgePixels) -> drawEdge;
				(southEast, southEeastEdgePixels) -> drawEdge;
			#);
		drawMedium: drawTheThing
			(#
			do 3 -> cornerPixels.new;
				3 -> northWestEdgePixels.new;
				3 -> southEeastEdgePixels.new;
				INNER;
			#);
		drawMediumNormal: drawMedium
			(#
			do gray3 -> background;
				gray9 -> cornerPixels[1];
				gray5 -> cornerPixels[2];
				gray3 -> cornerPixels[3];
				gray9 -> northWestEdgePixels[1];
				gray3 -> northWestEdgePixels[2];
				white -> northWestEdgePixels[3];
				A1 -> southEeastEdgePixels[1];
				gray8 -> southEeastEdgePixels[2];
				gray6 -> southEeastEdgePixels[3];
			#);
	enter box
	do drawMediumNormal;
	#);
	