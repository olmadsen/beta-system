alignmentLeft: (# exit 1 #);
alignmentRight: (# exit 2 #);
alignmentCenter: (# exit 3 #);
	
drawCenteredText:
	(# theStyle: ^textStyle;
		theText: ^text;
		box: @rectangle;
		alignment: @integer;
		
		textWidth, textHeight: @integer;
		boxWidth, boxHeight: @integer;
		baseline: @integer;
	enter (theStyle[], theText[], box, alignment)
	do (if theText[] <> NONE then
			theStyle[] -> style;
			box.size -> (boxWidth, boxHeight);
			theStyle.ascent + theStyle.descent -> textHeight;
			(boxHeight - textHeight) div 2 + theStyle.ascent -> baseline;
			(if alignment
				//alignmentLeft then
					(box.left, baseLine) -> moveTo;
				//alignmentRight then
					theText[] -> theStyle.widthOfText -> textWidth;
					(box.right - textWidth, baseLine) -> moveTo;
				//alignmentCenter then
					theText[] -> theStyle.widthOfText -> textWidth;
					((boxWidth - textWidth) div 2 + box.left, baseLine) -> moveTo;
			if);
			theText[] -> drawText;
		if);
	#);
drawCenteredIcon:
	(# icon: ^pixmap;
		box: @rectangle;
		alignment: @integer;
		
		iconWidth, iconHeight: @integer;
		boxWidth, boxHeight: @integer;
		iconLeft, iconTop: @integer;
	enter (icon[], box, alignment)
	do (if icon[] <> NONE then
			icon.width -> iconWidth;
			icon.height -> iconHeight;
			box.size -> (boxWidth, boxHeight);
			box.top + (boxHeight - iconHeight) div 2 -> iconTop;
			(if alignment
				//alignmentLeft then
					box.left -> iconLeft;
				//alignmentRight then
					box.right - iconWidth -> iconLeft;
				//alignmentCenter then
					box.left + (boxWidth - iconWidth) div 2 -> iconLeft;
			if);
			(icon[], (0, 0), (iconLeft, iconTop), iconWidth, iconHeight) -> drawRaster;
		if);
	#);
drawIconAndText:
	(# icon: ^pixmap;
		theText: ^text;
		theStyle: ^textStyle;
		box: @rectangle;
		alignment: @integer;
		space: @integer;
		
		iconWidth, iconHeight: @integer;
		boxWidth, boxHeight: @integer;
		iconLeft, iconTop: @integer;
		textLeft: @integer;
	   textWidth, textHeight: @integer;
		baseline: @integer;
		
	enter (icon[], theText[], theStyle[], box, alignment, space)
	do theStyle[] -> style;
		box.size -> (boxWidth, boxHeight);
		theStyle.ascent + theStyle.descent -> textHeight;
		(boxHeight - textHeight) div 2 + theStyle.ascent -> baseline;
		icon.width -> iconWidth;
		icon.height -> iconHeight;
		box.top + (boxHeight - iconHeight) div 2 -> iconTop;
		(if alignment
			//alignmentLeft then
				box.left -> iconLeft;
				iconLeft + iconWidth + space -> textLeft;
			//alignmentRight then
				theText[] -> theStyle.widthOfText -> textWidth;
				box.right - textWidth -> textLeft;
				textLeft - iconWidth - space -> iconLeft;
			//alignmentCenter then
				box.left + (boxWidth - (iconWidth + textWidth + space)) div 2 -> iconLeft;
				iconLeft + space + iconWidth -> textLeft;
		if);
		(icon[], (0, 0), (iconLeft, iconTop), iconWidth, iconHeight) -> drawRaster;
		(textLeft, baseline) -> moveTo;
		theText[] -> drawText;
	#);
	
	
	
