-- graphicsLib: attributes --


expanderEnabledRight: (# exit 1 #);
expanderPressedRight: (# exit 2 #);
expanderIntermediateRight: (# exit 3 #);
expanderPressedDown: (# exit 4 #);
expanderEnabledDown: (# exit 5 #);
expanderDisabledRight: (# exit 6 #);
expanderDisabledDown: (# exit 7 #);

bluish1: (# exit (52428, 52428, 65535) #);
bluish2: (# exit (39321, 39321, 65535) #);
bluish3: (# exit (26214, 26214, 52428) #);
bluish4: (# exit (13107, 13107, 39321) #);

black: (# exit (0, 0, 0) #);
white: (# exit (0xFFFF, 0xFFFF, 0xFFFF) #);

gray4: (# exit (0xBBBB, 0xBBBB, 0xBBBB) #);
gray7: (# exit (0x8888, 0x8888, 0x8888) #);

eraseRectangle:
	(# r: @rectangle;
	enter r
	do backgroundColor -> pen.foreGroundColor;
		r -> fillRect;
	#);

drawExpander:
	(# left, top: @integer;
		kind: @integer;
		swap: @boolean; (* IF true, reverse horizontal and vertical
		 					  * coordinates
							  *)
		plot:
			(# x, y: @integer;
			enter (x, y)
			do (if swap then
					(top + y, left + x) -> drawSpot;
				else
					(left + x, top + y) -> drawSpot;
				if);
			#);
		drawRightContour:
			(#
			do black -> pen.foreGroundColor;
				(5, 1) -> plot; (5, 2) -> plot; (5, 3) -> plot; (5, 4) -> plot; 
				(5, 5) -> plot; (5, 6) -> plot; (5, 7) -> plot; (5, 8) -> plot; 
				(5, 9) -> plot; (5, 10) -> plot; (5, 11) -> plot; (6, 2) -> plot; 
				(7, 3) -> plot; (8, 4) -> plot; (9, 5) -> plot; (10, 6) -> plot; 
				(9, 7) -> plot; (8, 8) -> plot; (7, 9) -> plot; (6, 10) -> plot; 
				INNER;
			#);
		drawEnabledRight: drawRightContour
			(#
			do bluish1 -> pen.foreGroundColor;
				(6, 3) -> plot; (6, 4) -> plot; (6, 5) -> plot; 
				(6, 6) -> plot; (6, 7) -> plot; (6, 8) -> plot; 
				
				bluish2 -> pen.foreGroundColor;
				(7, 4) -> plot; (7, 5) -> plot; (7, 6) -> plot; (7, 7) -> plot; 
				(8, 5) -> plot; (8, 6) -> plot; (6, 9) -> plot; 
				
				bluish3 -> pen.foreGroundColor;
				(7, 8) -> plot; (8, 7) -> plot; (9, 6) -> plot; 
				
				gray7 -> pen.foreGroundColor;
				(6, 11) -> plot; (7, 10) -> plot; (8, 9) -> plot; 
				(9, 8) -> plot; (10, 7) -> plot; 
				
				gray4 -> pen.foreGroundColor;
				(6, 12) -> plot; (7, 11) -> plot; (8, 10) -> plot; 
				(9, 9) -> plot; (10, 8) -> plot; (11, 7) -> plot; 
			#);
		drawPressedRight: drawRightContour
			(#
			do bluish4 -> pen.foreGroundColor;
				(6, 3) -> plot; (6, 4) -> plot; (6, 5) -> plot; 
				(6, 6) -> plot; (6, 7) -> plot; (6, 8) -> plot; 
				(7, 4) -> plot; (7, 5) -> plot; (7, 6) -> plot; (7, 7) -> plot; 
				(8, 5) -> plot; (8, 6) -> plot; (6, 9) -> plot; 
				(7, 8) -> plot; (8, 7) -> plot; (9, 6) -> plot; 
			#);
		drawIntermediateRight:
			(#
			do black -> pen.foreGroundColor;
				(2, 10) -> plot; (3, 10) -> plot; (4, 10) -> plot; (5, 10) -> plot;
				(6, 10) -> plot; (7, 10) -> plot; (8, 10) -> plot; (9, 10) -> plot; 
				(10, 10) -> plot; (10, 2) -> plot; (10, 3) -> plot; (10, 4) -> plot; 
				(10, 5) -> plot; (10, 6) -> plot; (10, 7) -> plot; (10, 8) -> plot; 
				(10, 9) -> plot; (3, 9) -> plot; (4, 8) -> plot; (5, 7) -> plot; 
				(6, 6) -> plot; (7, 5) -> plot; (8, 4) -> plot; (9, 3) -> plot; 
				
				bluish4 -> pen.foreGroundColor;
				(4, 9) -> plot; (5, 9) -> plot; (6, 9) -> plot;  (7, 9) -> plot; (8, 9) -> plot; (9, 9) -> plot; 
				(5, 8) -> plot;  (6, 8) -> plot; (7, 8) -> plot; (8, 8) -> plot; (9, 8) -> plot;
				(6, 7) -> plot; (7, 7) -> plot; (8, 7) -> plot; (9, 7) -> plot; 
				(7, 6) -> plot; (8, 6) -> plot; (9, 6) -> plot; 
				(8, 5) -> plot; (9, 5) -> plot;  
				(9, 4) -> plot; 
			#);
		drawPressedDown:
			(#
			do true -> swap;
				drawPressedRight;
			#);
		drawEnabledDown:
			(#
			do true -> swap;
				drawEnabledRight;
			#);
		drawDisabledRight:
			(#
			do 
			#);
		drawDisabledDown:
			(#
			do 
			#);
