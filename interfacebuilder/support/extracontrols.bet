ORIGIN '~beta/guienv/guienv';
BODY 'extracontrolsbody';

INCLUDE 'drawing' 'behaviour';

-- windowLib: attributes --

expanderButton: windowItem
  (# <<SLOT expanderButtonLib: attributes>>;
     onExpand:< (#  do INNER ;  #);
     onCollapse:< (#  do INNER ;  #);
     expanded: @boolean;
     toggle: (#  <<SLOT expanderButtonToggle:DoPart>> #);
     open::<
       (#  <<SLOT expanderButtonOpen:DoPart>> #);
     eventHandler::<
       (# onRefresh:: 
            (# <<SLOT expanderButtonOnRefresh:DoPart>> #);
          onMouseDown::
            (# <<SLOT expanderButtonOnMouseDown:DoPart>>  #);
       #);
  #);
imageItem: windowItem
  (# <<SLOT imageItemLib: attributes>>;
     theIcon: ^pixmap;
     icon:
       (# 
       enter (# enter theIcon[] do update #)
       exit theIcon[]
       #);
     fitToContents::< 
       (# <<SLOT imageItemFitToContents:DoPart>> #);
     eventHandler::<
       (# onRefresh::<
            (# 
            <<SLOT imageItemOnRefresh:DoPart>>
            #);
       #);
  #);
textItem: windowItem
  (# <<SLOT textItemLib: attributes>>;
     icon:
       (# 
       enter (# enter theIcon[] do update #)
       exit theIcon[]
       #);
     label:
       (#
       enter (# enter theLabel[] do update #)
       exit theLabel[]
       #);
     style:
       (#
       enter (# enter theStyle[] do update #)
       exit theStyle[]
       #);
     alignment:
       (#
       enter (# enter theAlignment do update #)
       exit theAlignment
       #);
     fontName:
       (#
       enter (# enter theStyle.name do update #)
       exit theStyle.name
       #);
     fontSize:
       (#
       enter (# enter theStyle.size do update #)
       exit theStyle.size
       #);
     fontFace:
       (#
       enter (# enter theStyle.face do update #)
       exit theStyle.face
       #);
     open::<
       (# do #);
     eventHandler::<
       (# onRefresh::<
            (# box: @rectangle;  <<SLOT textItemOnRefresh:DoPart>> #);
       #);
     theIcon: ^pixmap;
     theLabel: ^text;
     theStyle: ^textStyle;
     theAlignment: @integer;
  #);


small: (#  exit 1 #);
medium: (#  exit 2 #);
large: (#  exit 3 #);


alignmentLeft: (#  exit 1 #);
alignmentRight: (#  exit 2 #);
alignmentCenter: (#  exit 3 #);

radioButtonBehavior: (# exit 1 #);
checkboxBehavior: (# exit 2 #);
pushbuttonBehavior: (# exit 3 #);


bevelButton: windowItem
  (# <<SLOT bevelButtonLib: attributes>>;
     onStateChanged:<
       (# do INNER #);
     onAction:<
       (# do INNER #);
     
     icon:
       (# 
       enter (# enter theIcon[] do update #)
       exit theIcon[]
       #);
     label:
       (#
       enter (# enter theLabel[] do update #)
       exit theLabel[]
       #);
     style:
       (#
       enter (# enter theStyle[] do update #)
       exit theStyle[]
       #);
     alignment:
       (#
       enter (# enter theAlignment do update #)
       exit theAlignment
       #);
     fontName:
       (#
       enter (# enter theStyle.name do update #)
       exit theStyle.name
       #);
     fontSize:
       (#
       enter (# enter theStyle.size do update #)
       exit theStyle.size
       #);
     fontFace:
       (#
       enter (# enter theStyle.face do update #)
       exit theStyle.face
       #);
     kind:
       (#
       enter (# enter theKind do update #)
       exit theKind
       #);
     behavior:
       (#
       enter (# enter theBehavior do update #)
       exit theBehavior
       #);
     state:
       (#
       enter (# enter theState do update; onStateChanged #)
       exit theState
       #);
     open::< 
       (#  <<SLOT bevelButtonOpen:DoPart>> #);
     eventHandler::<
       (# onRefresh::<
            (# <<SLOT bevelButtonOnRefresh:DoPart>> #);
          onMouseDown::<
            (# box: @rectangle; <<SLOT bevelButtonOnMouseDown:DoPart>> #);
       #);
     theLabel: ^text;
     theAlignment: @integer;
     theBehavior: @integer;
     theStyle: ^textStyle;
     theKind: @integer;
     theState: @boolean;
     theIcon: ^pixmap;
  #);


