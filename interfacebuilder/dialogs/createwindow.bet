ORIGIN '~beta/guienv/guienv';
INCLUDE '~beta/guienv/controls'
        'center'
        '../support/auxcontrols';
-- guienvLib: Attributes --
createWindowDialog: window
  (#
     type:: windowTypes.dialog;
     onCreate:< (# name: ^text;  enter name[] do INNER #);
     onCancel:< (#  do INNER #);
     open::< 
       (# 
       do
          'Create Window'->title;
          (353,98)->size;
          center;
          createBtn.open;
          nameFld.open;
          cancelBtn.open;
          lab.open;
          INNER
       #);
     createBtn: @pushbutton
       (#
          open::< 
            (# 
            do
               'Create'->label;
               (60,20)->size;
               (277,65)->position;
               THIS(pushButton)[]->defaultButton;
               
            #);
          eventHandler::< 
            (# onMouseUp::<  (#  do nameFld.contents->onCreate #) #)
       #);
     nameFld: @edittext
       (#
          open::< 
            (#  do (285,21)->size; (59,17)->position; nameFld[]->target;  #)
       #);
     cancelBtn: @pushbutton
       (#
          eventHandler::<  (# onMouseUp::<  (#  do onCancel #) #);
          open::< 
            (#  do 'Cancel'->label; (60,20)->size; (202,65)->position;  #)
       #);
     lab: @caption
       (#
          open::<
            (# 
            do
               'Name:'->label;
               borderStyles.shadowOut->border.style;
               (36,13)->size;
               (16,16)->position;
               
            #)
       #)
  #)  

