ORIGIN '../askingdialog';

INCLUDE '~beta/guienv/v1.3/stddialogs';
INCLUDE '~beta/guienv/v1.3/controls';
INCLUDE '~beta/guienv/v1.3/fields';


--AskingDialogPrivate: Descriptor--

(# open: (#
         do 
            (250,150)->size;
            YesBtn.open;
            (10,80) -> YesBtn.Position;
            NoBtn.open;
            (10,120) -> NoBtn.Position;
            CancelBtn.open;
            (140,120) -> CancelBtn.Position;
            QuestionField.open;
            (10,10)->QuestionField.Position;
         #);
   
   QuestionField: @StaticText
     (#
        Open::<
          (#
          do 
             (200,40) -> Size;
          #);
        
     #);
   
   YesBtn: @PushButton
     (# EventHandler::<
          (# onMouseUp::< 
               (# 
               do this(AskingDialog).yes;
               #);
          #);
        Open::<
          (#
          do 
             'Yes' -> Label;
             (60,20) -> Size;
             YesBtn[] -> DefaultButton;
             True -> BindBottom;
             False -> BindTop;
          #);
     #); 
   
   
   NoBtn: @PushButton
     (# EventHandler::<
          (# onMouseUp::< 
               (# 
               do this(AskingDialog).no;
               #);
          #);
        Open::<
          (#
          do 
             'No' -> Label;
             (60,20) -> Size;
             True -> BindBottom;
             False -> BindTop;
          #);
     #);

   CancelBtn: @PushButton
     (# EventHandler::<
          (# onMouseUp::< 
               (# 
               do this(AskingDialog).Cancel;
               #);
          #);
        Open::<
          (#
          do 'Cancel' -> Label;
             (187,294) -> Position;
             (60,20) -> Size;
             True -> BindBottom;
             False -> BindTop;
          #);
     #);
#)

--AskingDialogInit: doPart--
do  
   open;
   question[]->Private.questionField.label;
   dialogname[]->title;
   
--AskingDialogOpen: doPart--
do hide;
   Private.open;
   
   
--AskingDialogCancel: doPart--

do this(AskingDialog).Hide;
   this(AskingDialog).Close;
   INNER;
   
--AskingDialogYes: doPart--
   
do this(AskingDialog).Hide;
   this(AskingDialog).Close;
   INNER;
   
--AskingDialogNo: doPart--
   
do this(AskingDialog).Hide;
   this(AskingDialog).Close;
   INNER;
   


