ORIGIN '~beta/guienv/guienv';
INCLUDE '../support/statusview'
        '../support/auxcontrols';
-- guienvLib: Attributes --
progressDialog: window
  (#
     onStart:< (#  do INNER #);
     maxValue:
       (# 
       enter progressIndicator.maxValue
       exit progressIndicator.maxValue
       #);
     message: (#  enter messageLab.label exit messageLab.label #);
     value:
       (#  enter progressIndicator.value exit progressIndicator.value #);
     open::< 
       (# 
       do (265,90)->size; progressIndicator.open; messageLab.open; INNER
       #);
     progressIndicator: @statusView
       (#
          open::< 
            (# 
            do
               1->borderwidth;
               false->inset;
               (215,15)->size;
               (20,45)->position;
               INNER
            #)
       #);
     messageLab: @caption
       (#
          open::< 
            (# 
            do 'Message'->label; (46,17)->size; (20,25)->position; INNER
            #);
          eventHandler::< 
            (#
               onRefresh::< 
                 (#  do (if not done then onStart; true->done;  if) #)
            #)
       #);
     done: @boolean;
     
  #)  

