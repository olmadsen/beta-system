ORIGIN '~beta/guienv/v1.6/guienv';
INCLUDE
'../support/row'
'../support/column'
'../support/auxcontrols'

'~beta/guienv/v1.6/controls'


-- guienvlib: Attributes --
propertyInspector: window
  (#
     open::< 
       (#  
       do (301,500)->size; 
          inspectorPane.open; 
          INNER 
       #);
     inspectorPane: @canvas
       (#
          open::<
            (# 
            do (0xDDDD, 0x5555, 0x5555) -> backgroundColor;
               (301,500)->size;
               (0, 0) -> position;
               propertyPane.open;
            #);
          propertyPane: @column
            (#
               open::<
                 (# 
                 do
                    (0xFFFF,0xFFFF,0xFFFF)->backgroundColor;
                    (301,500)->size;
                    alignTop->alignment.vertical;
                    alignLeft->alignment.horizontal;
                    true -> wrap;
                    0->margin.left;
                    1->margin.top;
                    0->margin.right;
                    1->margin.bottom;
                    1->distance;
                    'Position' -> makePropertyView;
                    'Size' -> makePropertyView;
                    'Label' -> makePropertyView;
                    'backgroundColor' -> makePropertyView;
                 #);
               makePropertyView:
                 (# name: ^text;
                    view: ^propertyView;
                 enter name[]
                 do &propertyView[] -> view[];
                    (propertyPane[], name[]) -> view.open;
                 #);
               propertyView: row
                 (# name:
                      (# value: ^text;
                      enter value[]
                      do value[] -> nameView.caption1.label;
                      #);
                    open::<
                      (# theName: ^text;
                      enter theName[]
                      do (0xEEEE,0xEEEE,0xEEEE) -> backgroundColor;
                         (291, 40) -> size;
                         alignLeft->alignment.horizontal;
                         alignTop->alignment.vertical;
                         true -> wrap;
                         0->margin.left;
                         0->margin.top;
                         0->margin.right;
                         0->margin.bottom;
                         1->distance;
                         nameView.open;
                         valueView.open;
                         theName[] -> name;
                      #);
                    nameView: @row
                      (#
                         open::<
                           (# 
                           do
                              alignLeft->alignment.horizontal;
                              alignCenter->alignment.vertical;
                              5->margin.left;
                              5->margin.top;
                              5->margin.right;
                              5->margin.bottom;
                              5->distance;
                              (140,30)->size;
                              caption1.open;                              
                           #);
                         caption1: @caption
                           (#
                              open::<
                                (# 
                                do
                                   'name:'->label;
                                   (34,17)->size;
                                   (37,-3)->position;
                                   
                                #)
                           #)
                      #);
                    valueView: @row
                      (# theCheckBox: @checkBox
                           (#
                              open::
                                (#
                                do '' -> label;
                                   (16, 16) -> size;
                                #);
                           #);
                         theEditText: @editText
                           (# open::
                                (# w, h: @integer;
                                do fitToContents;
                                   size -> (w, h);
                                   (130, h) -> size;
                                #);
                           #);
                         open::<
                           (# 
                           do
                              alignLeft->alignment.horizontal;
                              alignCenter->alignment.vertical;
                              5->margin.left;
                              5->margin.top;
                              5->margin.right;
                              5->margin.bottom;
                              5->distance;
                              (140,30)->size;
                              theEditText.open;
                           #)
                      #)
                 #)
            #)
       #)
  #)  

