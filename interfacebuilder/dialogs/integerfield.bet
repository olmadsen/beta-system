ORIGIN '~beta/guienv/controls';
LIB_DEF 'frigg_integerfield' '../../lib';
-- windowLib: attributes --

integerField: editText
  (# integerContents:
       (# int: @Integer;
       enter (# t: @text;
             enter int
             do int -> t.putInt;
                t[] -> contents;
             #)
       exit (# t: ^text;
            do contents -> t[];
               (if not t.empty then
                   t.reset;
                   l: t.getInt
                     (# syntaxError::<
                          (# 
                          do leave l;
                          #);
                     #) -> int;
               if);
            exit int 
            #)
       #);
  #);

