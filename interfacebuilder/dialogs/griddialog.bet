ORIGIN '~beta/guienv/guienv';
INCLUDE '../support/auxcontrols'
        '~beta/guienv/controls'
        'center';
		
-- guienvLib: Attributes --
gridDialog: window
  (#
     onCancel:< (#  do INNER #);
     onConfirm:< (#  do INNER #);
     open::< 
       (# gridSize: @integer
       enter gridSize
       do
          (225,75)->size;
          'Grid'->title;
          gridSizeFld.open;
          okBtn.open;
          cancelBtn.open;
          gridSize->gridSizeFld.integerContents;
          gridSizeFld[]->target;
          gridSizeFld.selectAll;
          okBtn[]->defaultButton;
          caption1.open;
          separator1.open;
          caption2.open;
          INNER
       #);
     gridSizeFld: @dialogField
       (#
          filter::  (#  do ch->ascii.isDigit->allow #);
          open::< 
            (# 
            do
               ''->textContents;
               true->editable;
               false->allowReturn;
               true->border.visible;
               (85,21)->size;
               (50,40)->position;
               gridSizeFld[]->target;
               
            #)
       #);
     okBtn: @pushbutton
       (#
          open::< 
            (# 
            do
               'OK'->label;
               borderStyles.shadowOut->border.style;
               (60,20)->size;
               (155,15)->position;
               
            #);
          eventHandler::<  (# onMouseUp::<  (#  do onConfirm #) #)
       #);
     cancelBtn: @pushbutton
       (#
          open::< 
            (# 
            do
               'Cancel'->label;
               borderStyles.shadowOut->border.style;
               (60,20)->size;
               (155,45)->position;
               
            #);
          eventHandler::<  (# onMouseUp::<  (#  do onCancel #) #)
       #);
     caption1: @caption
       (#
          open::<
            (# 
            do 'Grid'->label; (27,13)->size; (15,10)->position; INNER
            #)
       #);
     separator1: @separator
       (#
          open::<
            (#  do 2->style; (125,4)->size; (15,22)->position; INNER #)
       #);
     caption2: @caption
       (#
          open::<
            (# 
            do 'Size:'->label; (30,13)->size; (15,44)->position; INNER
            #)
       #)
  #)  

