ORIGIN '~beta/guienv/guienv';
INCLUDE '../support/auxcontrols'
        '~beta/guienv/controls'
        'center'
'friggdialog';
LIB_DEF 'frigg_grid' '../../lib';

-- guienvLib: Attributes --
gridDialog: friggDialog
  (#
     open::< 
       (# gridSize: @integer
       enter gridSize
       do
          (225,75)->size;
          'Grid'->title;
          'Grid'->dialogTitle;
          gridSizeFld.open;
          gridSize->gridSizeFld.integerContents;
          gridSizeFld[]->target;
          gridSizeFld.selectAll;
          caption2.open;
          INNER
       #);
     gridSizeFld: @dialogField
       (#
          filter::  (#  do ch->ascii.isDigit->allow #);
          open::< 
            (# 
            do
               ''->textContents;
               true->editable;
               false->allowReturn;
               true->border.visible;
               (85,21)->size;
               (50,40)->position;
               gridSizeFld[]->target;
               
            #)
       #);
     caption2: @caption
       (#
          open::< 
            (# 
            do 'Size:'->label; (30,13)->size; (15,44)->position; INNER
            #)
       #)
  #)  

