ORIGIN '../loadbitmap';
INCLUDE '~beta/guienv/stddialogs';
INCLUDE '~beta/guienv/preliminary/resources/pixmaps';
LIB_ITEM 'frigg_loadbit';


-- lib: attributes --

FriggWarningMessage:
  (#
  #);

GetFriggWarning: ObjectPool.Get
  (# Type:: FriggWarningMessage;
     DisplayMessage:< (# do INNER #);
     Init::
       (#
       do DisplayMessage;
       #);
  #);
-- GUIENVloadbitmap: doPart --
do (# failed: @boolean;
      message: ^Text;
   do &pixmap[] -> thePixmap[];
      l: (name[], ID) -> thePixmap.loadIconResource
      (#
         error::
           (#
           do true -> failed;
              what[] -> message[];
              leave l;
           #);
      #);
      (if failed then
          GetFriggWarning
          (# DisplayMessage::
               (#
               do  (none, message[], 'Pixmap Warning') -> noteUser;
               #);
          #);
          NONE -> thePixmap[]
      if);
   #);
   
