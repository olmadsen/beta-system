ORIGIN '~beta/guienv/guienv';
BODY 'private/loadbitmapbody';
LIB_DEF 'frigg_loadbit' '../../lib';

-- GUIenvLib: attributes --

loadbitmap:
  (* If name is not not, it will be used
   * in a call to thePixmap.read (name[] -> thePixmap.read).
   * otherwise the ID is used to fetch an icon resource.
   *)
  (# name: ^text;
     ID: @integer;
     thePixmap: ^pixmap;
  enter (name[], ID)
  <<SLOT GUIENVloadbitmap: doPart>>
  exit thePixmap[]
  #);
