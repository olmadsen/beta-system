ORIGIN '~beta/guienv/guienv';
INCLUDE '../dialogs/friggdialog'
        '../support/auxcontrols'
        '../support/groupbox'
        '~beta/guienv/controls';
-- guienvLib: Attributes --
DocumentationDialog: FriggDialog
  (#
     open::< 
       (# 
       do
          'Create Documentation'->title;
          'Create Documentation'->dialogTitle;
          (465,160)->size;
          caption1.open;
          titleFld.open;
          commentBox.open;
          codeBox.open;
          INNER
       #);
     caption1: @caption
       (#
          open::<
            (# 
            do 'Title:'->label; (40,17)->size; (15,35)->position; INNER
            #)
       #);
     titleFld: @dialogField
       (# open::< (#  do (295,21)->size; (60,35)->position; INNER #)
       #);
     commentBox: @groupbox
       (#
          open::<
            (# 
            do
               'Comment Treatment'->title;
               (165,85)->size;
               (15,65)->position;
               preformatCommentsItem.open;
               normalCommentsItem.open;
               keepNewlinesItem.open;
               INNER
            #);
          preformatCommentsItem: @groupRadioButton
            (#
               open::<
                 (# 
                 do
                    true->state;
                    'Preformated text'->label;
                    (120,16)->size;
                    (15,20)->position;
                    INNER
                 #)
            #);
          normalCommentsItem: @groupRadioButton
            (#
               open::<
                 (# 
                 do
                    'Normal text'->label;
                    (100,16)->size;
                    (15,40)->position;
                    INNER
                 #)
            #);
          keepNewlinesItem: @checkbox
            (#
               open::<
                 (# 
                 do
                    'Keep newlines'->label;
                    (105,16)->size;
                    (50,60)->position;
                    INNER
                 #)
            #)
       #);
     codeBox: @groupbox
       (#
          open::<
            (# 
            do
               'Code Treatment'->title;
               (165,85)->size;
               (190,65)->position;
               noCodeItem.open;
               includeCodeItem.open;
               includeDopartItem.open;
               INNER
            #);
          noCodeItem: @groupRadioButton
            (#
               open::<
                 (# 
                 do
                    true->state;
                    'No code'->label;
                    (70,16)->size;
                    (15,20)->position;
                    INNER
                 #)
            #);
          includeCodeItem: @groupRadioButton
            (#
               open::<
                 (# 
                 do
                    'Include code'->label;
                    (100,16)->size;
                    (15,40)->position;
                    INNER
                 #)
            #);
          includeDopartItem: @checkbox
            (#
               open::<
                 (# 
                 do
                    'Include dopart'->label;
                    (105,16)->size;
                    (50,60)->position;
                    INNER
                 #)
            #)
       #);
     preformatComments:
       (# 
       enter commentBox.preformatCommentsItem.state
       exit commentBox.preformatCommentsItem.state
       #);
     normalComments:
       (# 
       enter commentBox.normalCommentsItem.state
       exit commentBox.normalCommentsItem.state
       #);
     keepNewlinesInComments:
       (# 
       enter commentBox.keepNewlinesItem.state
       exit commentBox.keepNewlinesItem.state
       #);
     noCode:
       (#  enter codeBox.noCodeItem.state exit codeBox.noCodeItem.state #);
     includeCode:
       (# 
       enter codeBox.includeCodeItem.state
       exit codeBox.includeCodeItem.state
       #);
     includeDopart:
       (# 
       enter codeBox.includeDopartItem.state
       exit codeBox.includeDopartItem.state
       #);
     documentTitle:
       (#  enter titleFld.textContents exit titleFld.textContents #)
  #)  

