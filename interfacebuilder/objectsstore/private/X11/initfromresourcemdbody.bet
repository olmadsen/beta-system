-- GetResourceStreamDoPart: doPart --
do (# theFile: ^resourceStream;
      fileName: ^text;
      slashPos: @integer;
      path: ^text;
   do &resourceStream[] -> theFile[];
      interactiveGetResourceFile -> theFile.name;
      theFile.openRead;
      theFile[] -> theStream[];
   #);


