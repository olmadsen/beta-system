ORIGIN '~beta/basiclib/v1.5/betaenv';
INCLUDE '~beta/basiclib/v1.5/textUtils';
INCLUDE '~beta/basiclib/v1.5/timedate';
--- program: descriptor ---
(#
   D1,D2: @time;
do
   (1996,12,2,8,0,0)->D1;
   D1->putTime; ' (D1) must be:'-> putline;
   'Mon Dec 02 1996 08:00:00'->putline;
   (1996,12,2,8,0,0)->D2;
   D2->putTime; ' (D2) must be:'-> putline;
   'Mon Dec 02 1996 08:00:00'->putline;
   
   'Comparing D1 and D2 (all tests should return true):'->putline;
   '\tsameYear:\t'->putText;D1->D2.sameYear->putBoolean;newline;
   '\tsameMonth:\t'->putText;D1->D2.sameMonth->putBoolean;newline;
   '\tsameDay:\t'->putText;D1->D2.sameDay->putBoolean;newline;
   '\tsameHour:\t'->putText;D1->D2.sameHour->putBoolean;newline;
   '\tsameMinute:\t'->putText;D1->D2.sameMinute->putBoolean;newline;
   '\tsameSec:\t'->putText;D1->D2.sameSec->putBoolean;newline;
   '\tequal:\t\t'->putText;D1->D2.equal->putBoolean;newline;
   
   (# TempTime, temptime2: @Time;
   do temptime->puttime; ' must be:'->putline;
      'Sat Jan 01 0000 00:00:00'->putline;
      1->TempTime.Day;temptime->puttime; ' must be:'->putline;
      'Sat Jan 01 0000 00:00:00'->putline;
      1->TempTime.Month;temptime->puttime; ' must be:'->putline;
      'Sat Jan 01 0000 00:00:00'->putline;
      1994->TempTime.Year;temptime->puttime; ' must be:'->putline;
      'Sat Jan 01 1994 00:00:00'->putline;
      (1994,1,1,0,0,0)->temptime;temptime->puttime; ' must be:'->putline;
      'Sat Jan 01 1994 00:00:00'->putline;
      TempTime.day->putint; ' must be:'->putline;
      '1'->putline;
      
      
      1994->TempTime2.Year;
      TempTime2.Year->putint; ' must be:'->putline;
      '1994'->putline;
      1->TempTime2.Month;
      TempTime2.Year->putint; ' must be:'->putline;
      '1994'->putline;
      1->TempTime2.Day;
      TempTime2.Year->putint; ' must be:'->putline;
      '1994'->putline;
   #);
   
   (# T1,T2: @Time;
   do (1996,12,04,11,00,00)->T1; T1->putTime; ' must be'->putline;
      'Wed Dec 04 1996 11:00:00'->putline; newline;
      
      (1996,12,04,10,59,60)->T1; T1->putTime; ' must be'->putline;
      'Wed Dec 04 1996 11:00:00'->putline; newline;
      
      (1996,12,04,11,60,00)->T1; T1->putTime; ' must be'->putline;
      'Wed Dec 04 1996 12:00:00'->putline; newline;
      
      (1996,12,04,11,60,60)->T1; T1->putTime; ' must be'->putline;
      'Wed Dec 04 1996 12:01:00'->putline; newline;
      
      (1996,12,04,23,59,59)->T1; T1->putTime; ' must be'->putline;
      'Wed Dec 04 1996 23:59:59'->putline; newline;
      
      (1994,12,04,23,59,60)->T1; T1->putTime; ' must be'->putline;
      'Mon Dec 05 1994 00:00:00'->putline; newline;
      
      (8999999,12,04,24,00,00)->T1; T1->putTime; ' must be'->putline;
      'Mon Dec 05 8999999 00:00:00'->putline; newline;
      
      (8999999,12,04,24,60,60)->T1; T1->putTime; ' must be'->putline;
      'Mon Dec 05 8999999 01:01:00'->putline; newline;
   #);
   
   (# t1, t2: @time;
   do (1996,12,04,02,00,00)->t1->puttime;newline;
      
      (1996,12,04,03,00,00)->t2->puttime;newline;
      
      (if t1->t2.after then 'YES'->putline else 'NO'->putline if);
      (if t2->t1.before then 'YES'->putline else 'NO'->putline if);
   #);
   
   (# t:@time;
   do
      (1997,01,05, 12,00,00)->t; t->putTime;newline;
      (for i:7 repeat
           t.weekday->putint; ' '->put;
           (1,0,0,0)->t.add;
      for); ' must be'->putline;
      '1 2 3 4 5 6 7'->putline; newline;
   #)
#)

