ORIGIN '~beta/basiclib/betaenv';
INCLUDE '~beta/basiclib/private/systemExceptionHandler';

--PROGRAM:descriptor--
(# a: @|(# p: (# do inner #);
           pp: @p
             (# 
             do 'Now entering infinite loop - interrupt please!' -> putline;
                loop:
                  (# 
                  do restart loop; (* InteruptErr *)
                  #);
             #);
        do pp
        #);
   b: @|(# q: (# do inner #);
           qq: @q(# do a; #);
        do qq
        #);
do runtimeExceptionHandler##->InstallSystemExceptionHandler;
   try
   (#
      name:: (# do 'interruptTry'->n[] #);
      handler::
        (# 
        do when (# type:: interruptException
                do 'interruptTry handler...aborting'->putline;
                   abort;
                #);
        #);
   do try (#
             name:: (# do 'inner'->n[] #);
             handler::
               (# 
               do when (# type:: interruptException
                       do 'inner handler...propagating'->putline;
                          propagate;
                       #);
               #);
          do b #);     
   #);
#)

