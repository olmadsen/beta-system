ORIGIN '~beta/basiclib/betaenv';
INCLUDE '~beta/basiclib/private/systemExceptionHandler';

-- program: descriptor --
(# 
   a: @|(# p: (# do inner #);
           pp: @p(# x, y: @real;
                 do 2.0 -> x;
                    0.0 -> y;
                    suspend;
                    x / y -> x;
                    (* FpZeroDivErr: Floating point division by zero *)
                    x -> putint; newline;
                 #);
        do pp
        #);
   b: @|(# q: (# do inner #);
           qq: @q(# do a; a #);
        do qq
        #);
do runtimeExceptionHandler##->InstallSystemExceptionHandler;
   try
   (#
      name:: (# do 'fpZeroTry'->n[] #);
      handler::
        (# 
        do when (# type:: fpZeroDivException
                do 'fpZeroTry handler...aborting'->putline;
                   abort;
                #);
        #);
   do b 
   #);
#)

