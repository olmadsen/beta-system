ORIGIN '~beta/basiclib/betaenv';
INCLUDE '~beta/basiclib/private/systemExceptionHandler';
INCLUDE 'tstexceptlibc';
(* Test dump with external activation record on stack.
 * Like tstdump10, but with statements before C-call.
 *)
-----program:descriptor-----
(#
   a: @|(# p: (# do inner #);
           pp: @p(# x:^object do suspend; x (* RefNoneErr: Reference is none *) #);
        do pp
        #);
   b: @|(# q: (# do inner #);
           qq: @q(# do a; a #);
        do qq
        #);
   foo: External
     (# i,j:@ integer; T: [1] @ char;
        x3,x4,x5,x6,x7,x8: @integer;
        r: [1]@char;;
     enter(i,T,x3,x4,x5,x6,x7,x8)
     do cExternalEntry;
        'Call Back. Now force "reference is NONE"' -> putline;
        b;
     #);
   x,y: @integer;
do runtimeExceptionHandler##->InstallSystemExceptionHandler;
   try
   (#
      name:: (# do 'segmentationTry'->n[] #);
      handler::
        (# 
        do when (# type:: segmentationException
                do 'segmentationTry handler...aborting'->putline;
                   abort;
                #);
        #);
   do 
      1 -> x;
      2 -> y;
      x+y -> x;
      foo##->doCallBack; 
      (* call back from C of ('l','mn','!','!','!','!','!','o')->foo;*)    #);     
#)

