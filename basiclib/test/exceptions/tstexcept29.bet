ORIGIN '~beta/basiclib/betaenv';
INCLUDE '~beta/basiclib/private/systemExceptionHandler';

-- program: descriptor --
(# 
   a: @|(# p: (# do inner #);
           pp: @p(# x, y: @integer;
                 do 0x7fffffff-10 -> x (* maxint-10 *);
                    -20 -> y;
                    x - y -> x;
                    (* ArithErr: Arithmetic Exceoption *)
                    x -> putint; newline;
                 #);
        do pp
        #);
   b: @|(# q: (# do inner #);
           qq: @q(# do a #);
        do qq
        #);
do runtimeExceptionHandler##->InstallSystemExceptionHandler;
   try
   (#
      name:: (# do 'arithTry'->n[] #);
      handler::
        (# 
        do when (# type:: arithExceptException
                do 'arithTry handler...aborting'->putline;
                   abort;
                #);
        #);
   do try (#
             name:: (# do 'inner'->n[] #);
             handler::
               (# 
               do when (# type:: arithExceptException
                       do 'inner handler...propagating'->putline;
                          propagate;
                       #);
               #);
          do b #);     
   #);
#)

