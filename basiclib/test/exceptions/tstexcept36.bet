ORIGIN '~beta/basiclib/betaenv';
INCLUDE '~beta/basiclib/private/systemExceptionHandler';

-- program: descriptor --
(# 
   s: @(# R: [1]^object; #);
   get:
     (# i: @integer;
     enter i
     exit (# o:^object; do s.R[i][] -> o[]; exit o[] #)
     #);
   a:
     (# dummy: @boolean;
     do 1 -> get -> s.R[2][] (* RepRangeErr: Index error *) 
     #);
do runtimeExceptionHandler##->InstallSystemExceptionHandler;
   try
   (#
      name:: (# do 'repTry'->n[] #);
      handler::
        (# 
        do when (# type:: repRangeException
                do 'repTry handler...aborting'->putline;
                   abort;
                #);
        #);
   do a
   #);
#)
