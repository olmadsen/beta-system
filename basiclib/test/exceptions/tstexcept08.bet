ORIGIN '~beta/basiclib/betaenv';
INCLUDE '~beta/basiclib/private/systemExceptionHandler';

(* See NOTE in README *)

-- program: descriptor --
(# 
   a: @|(# p: (# do inner #);
           pp: @p
             (# r, s: [1]@integer
             do r[2:3]->s (* RepHighRangeErr: Repetition subrange out of range (high) *)
             #);
        do pp
        #);
   b: @|(# q: (# do inner #);
           qq: @q(# do a; a #);
        do qq
        #);
do runtimeExceptionHandler##->InstallSystemExceptionHandler;
   try
   (#
      name:: (# do 'repHighRangeTry'->n[] #);
      handler::
        (# 
        do when (# type:: repHighRangeException
                do 'repHighRangeTry handler...aborting'->putline;
                   abort;
                #);
        #);
   do b
   #);
#)
