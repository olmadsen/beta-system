ORIGIN '../formatio';
INCLUDE '../numberio'

--program:descriptor--
(# 
do '  12345678901234567890'->putline;
   '1:%02x\n'->putformat(# 
                      do 0->x;
                      #);
   '2:%02x\n'->putformat(# 
                      do 2->x;
                      #);
   '3:%x\n'->putformat(# 
                      do 0x123->x;
                      #);
   '4:%x\n'->putformat(# 
                      do 0x87654321->x;
                      #);
   '5:%x\n'->putformat(# 
                      do 0x8432AD->x;
                      #);
   '6:%X\n'->putformat(# 
                      do 0x8432AD->uX;
                      #);
   '7:%013X\n'->putformat(#   (* zero padding *)
                           do 0x8432AD->uX;
                           #);
   '8:%13X\n'->putformat(#    
                        do 0x32AD->uX;
                        #);
   '9:%o\n'->putformat(# 
                      do 0xffffffff->o;
                      #);
   'A:%5o\n'->putformat(# 
                       do 8x1234567->o;
                       #);
   'B:%012o\n'->putformat(# 
                         do 8x1234567->o;
                         #);
   'C:%y\n'->putformat(# 
                      do 2x10101->y;
                      #);
   'D:%10y\n'->putformat(# 
                        do 2x10101->y;
                        #);
   
   'E:%.16r\n'->putformat(# 
                         do 0x80123456->r;
                         #);
   'F:%.16r\n'->putformat(# 
                         do 0x123->r;
                         #);
   
   'G:%t\n'->putformat(# do true->tv #);
   
   'H:%t\n'->putformat(# do false->tv #);
   
   'I:%t\n'->putformat(# trueText::(# do '1'->t[] #) do true->tv #);
   
   'J:%t\n'->putformat(# falseText::(# do '0'->t[] #) do false->tv #);
   
   'K:%t\n'->putformat(# do false->tv(# localFalseText::(# do 'FALSE'->t[] #)#) #);
   
   'L:%t\n'->putformat(# do true->tv(# localTrueText::(# do 'TRUE'->t[] #)#) #);
   
   newline;
#)
