Origin '../pathhandler'
-- program : descriptor --
(* An example of using PathHandler to find local paths. *)

(# handler: @pathhandler;
do handler.init;
   'Obtaining a local path:' -> putline;
   
   '\n\t''/users/claus/basiclib/current/pathhandler''\n' -> putline;
   'converted local to ''/users/claus/process/v1.0'' yields\n\n\t''' -> puttext;
   ('/users/claus/basiclib/current/pathhandler', '/users/claus/process/v1.0')
     -> handler.localpath -> puttext;
   '''\n' -> putline;
   
   '\nObtaining a full path:' -> putline;
     
   '\n\t''../../basiclib/current/pathhandler''\n' -> putline;
   'converted local to ''/users/claus/process/v1.0'' yields\n\n\t''' -> puttext;
   ('../../basiclib/current/pathhandler', '/users/claus/process/v1.0')
     -> handler.convertfilepath -> puttext;
   '''\n' -> putline;
   
   
   '-----' -> putline;
   
   '\n\t''/users/claus/basiclib''\n' -> putline;
   'converted local to ''/users/claus/basiclib'' yields\n\n\t''' -> puttext;
   ('/users/claus/basiclib', '/users/claus/basiclib')
     -> handler.localpath -> puttext;
   '''\n' -> putline;
   
   '\n\t''/users/claus/basiclib/''\n' -> putline;
   'converted local to ''/users/claus/basiclib/'' yields\n\n\t''' -> puttext;
   ('/users/claus/basiclib', '/users/claus/basiclib')
     -> handler.localpath -> puttext;
   '''\n' -> putline;
   
   '\n\t''///users//claus//basiclib''\n' -> putline;
   'converted local to ''///users/claus/fisk'' yields\n\n\t''' -> puttext;
   ('///users//claus//basiclib', '///users/claus/fisk')
     -> handler.localpath -> puttext;
   '''\n' -> putline;

#)
