ORIGIN '../betaenv'
[[
--- program: descriptor ---
(# putchar:
     (# do nextChar -> screen.put; screen.newline #);
   puttext:
     (# t: ^text enter t[] do t[] -> screen.puttext #);
          
   nextChar: @Char;
   
   getNextToken: @|
     (# 
     do '1' -> nextChar;
        cycle
        (# do
           'd: ' -> putText; putchar;
           (if '1' // nextChar then
               loop: 
                 (# do '2' -> nextChar;
                    suspend;
                    'a: ' -> putText; putchar;
                    leave loop;
                 #);
               'b: ' -> putText; putchar;
           if);
           'c: ' -> putText; putchar;
        #)
     #);
do getNextToken;
   cycle(# do 'next'->putline; getNextToken #)
#)
---]]
