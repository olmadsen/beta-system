ORIGIN 'betaenvbody';
--LIB: attributes--

String: ExternalClass
  (# 
  do '[mscorlib]System.String' -> className;
  #);
ReadLine: External   
  (# result: ^String;
  do 'class [mscorlib]System.String [mscorlib]System.Console::ReadLine()' -> callC;
  exit result[]
  #);
Read: External   
  (# result: @int32;
  do 'int32 [mscorlib]System.Console::Read()' -> callC;
  exit result
  #);  
WriteChar: External   
  (# ch: @char
  enter ch
     (* NOTICE: BETA char 8 bit, IL char 16 bit *)
  do 'void [mscorlib]System.Console::Write(char)' -> callC 
  #);
WriteString: External   
  (# s: ^string
  enter s[]
     (* NOTICE: BETA char 8 bit, IL char 16 bit *)
  do 'void [mscorlib]System.Console::Write(string)' -> callC 
  #);
WriteInt32: External   
  (# i: @int32
  enter i
  do 'void [mscorlib]System.Console::Write(int32)' -> callC 
  #);

SetArgValues: proc
  (# args: [0]^String;
  enter args
  do args.range -> ArgVector.new;
     (for i:args.range repeat
          args[i][] -> ArgVector[i][]; (* Automatic conversion String->Text *)
     for)
  #);

ClrConsole: Stream
  (# Eos::< 
       (# do true->value #); 
     OtherError::< 
       (# do 'Screen error'->msg.puttext #);
     Get::< 
       (# do 'Warning: attempt to Get from the Screen' -> screen.putline; #);
     Put::< 
       (# do ch -> WriteChar; #);
     PutText::< 
       (# 
       do (* FIXME *)
          (for i: txt.lgth repeat
               txt.T[i] -> put
          for)
       #);
  #);
ClrKeyBoard: Stream
  (# Eos::<
       (# do false -> value (* FIXME *) #);
     OtherError::< 
       (# do 'Keyboard error'->msg.puttext #);
     Put::< 
       (# do 'Warning: attempt to Put to the Keyboard' -> screen.putline; #);
     Get::<
       (# do Read -> ch #);
     GetAtom::<
       (# 
       do (* FIXME *)
       #);
     GetLine::<
       (# 
       do ReadLine -> txt[];
       #);
     Peek::<
       (# (* FIXME *) #);
  #);

