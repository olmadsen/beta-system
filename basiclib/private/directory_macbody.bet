-- DirFindEntry: Descriptor --
(# fs: ^FSSpec; 
do
   (if candidate[]
    // none then 
    else
       entry.private.FSpCheckNil;
       &FSSpec[]->fs[];
       (if
       (entry.private.fs.vRefNum,entry.private.dirID,candidate,fs[])->MakeFSSpec
        // 0 then
           &foundDesc[]->found[];
           fs[]->found.private.fs[];
           TRUE->found.private.FSSpecValid;
           (if (found.private.fs[]->FSpIsDir->convert)
            // 1 then found.private.fs[]->FSpGetDirID->found.private.dirID; 
           if);
           INNER findEntry;
           
        // - 43 then
           notFound; 
        else
           DirSearchException; 
       if);
       
   if);
   
#)  

