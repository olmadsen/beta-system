-- DirScanEntries: Descriptor --
(# specs: [1] ^foundDesc; CurName: @Text; itsName: ^Text; res: @Integer; 
do
   entry.private.FSpCheckNil;
   NoOfEntries->specs.new;
   (for i: specs.range repeat
     &foundDesc[]->specs[i][];
     &FSSpec[]->specs[i].private.fs[];
     CurName.Clear;
     (entry.private.dirID,entry.private.fs.vRefNum,i)->GetIndEntryName->pToC
       ->CurName;
     (entry.private.fs.vRefNum,entry.private.dirID,CurName,
      specs[i].private.fs[])->MakeFSSpec;
	  curName -> specs[i].private.path;
     TRUE->specs[i].private.FSSpecValid;
     (if (specs[i].private.fs[]->FSpIsDir->convert)
      // 1 then specs[i].private.fs[]->FSpGetDirID->specs[i].private.dirID; 
     if);
     specs[i].path->itsName[];
     (if itsName.Length > longest
      // true then itsName.Length->longest; 
     if);
     
   for);
   (for i: specs.range repeat
     specs[i][]->found[];
     (if (specs[i].private.fs[]->FSpIsDir->convert)
      // 1 then specs[i].private.dirID->found.private.dirID; 
     if);
     INNER scanEntries;
     
   for);
   
#)  

