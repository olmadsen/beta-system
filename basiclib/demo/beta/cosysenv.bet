ORIGIN '~beta/basiclib/v1.5/betaenv'
--- lib: attributes ---
(* Examples of using components in BETA *)
SymmetricCoroutineSystem: 
  (* SIMULA like quasiparrallel system with resume *)
  (# SymmetricCoroutine: 
       (* to prefix components in the SymmetricCoroutineSystem *)
       (# Resume:< 
            (#
            enter next[]
            do INNER; suspend
            #)
       do INNER
       #);
     Start: 
       (* start of initial SymmetricCoroutine *)
       (#
       enter next[]
       do Loop: 
            cycle
            (# active: ^| SymmetricCoroutine
            do (if (next[] -> active[]) // NONE then
                   leave Loop
               if);
               NONE -> next[];
               active
       #)#);
     next: ^|  SymmetricCoroutine; 
     (* next coroutine to be resumed *)
  do INNER;
  #); (* SymmetricCoroutineSystem *)
