ORIGIN '~beta/basiclib/betaenv';
--PROGRAM: descriptor--
(# i: @integer;
do (if noOfArguments<>2 then
       'usage: stop <code>' -> putline;
       stop;
   if);
   (if ((2->arguments).reset).getInt
    // 0 then
       'Normal stop.' -> putline;
       stop;
    // 1 then
       (failure, 'Error stop.') -> stop;
    // 2 then
       (failureTrace, 'Error stop with dump.') -> stop;
    // 3 then
       (dumpstack, 'Dump without stop.') -> stop;
   if);
   'Done.' -> putline;
#)
