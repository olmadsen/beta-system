ORIGIN '~beta/basiclib/file';

(* Simple reading of a file *)

--PROGRAM: descriptor--
(# inFile: @file;
do 'input' -> inFile.name;
   inFile.OpenRead;
   
   readFile: 
     (# 
     do (if inFile.eos then
            leave readFile
         else 
            inFile.get -> screen.put;
            restart readFile
        if)
     #);
   inFile.close;
#)
