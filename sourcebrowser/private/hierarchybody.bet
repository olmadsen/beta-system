                      if)
                   #)
              #);
            open::  (#  do 'Open in "Recent Files"'->name #)
         #)[]->lfmenuitem[]
   if);
   lfmenuitem.open;
   lfmenuitem[]->lfmenu.append;
   &lfmenu.menuitem
     (#
        eventhandler:: 
          (#
             onStatus::  (#  do not HasDomain->value #);
             onSelect::  (#  do InsertDomain #)
          #);
        open::  (#  do 'Compute \'Domain\''->name #)
     #)[]->lfmenuitem[];
