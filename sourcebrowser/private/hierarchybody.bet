   lfmenu.open;
   lfmenu[]->popupMenu;
   location.copy->theProjectInfoGroup.location.append;
   &lfmenu.menuitem
     (#
        eventhandler:: 
          (#
             onSelect:: 
               (#  do THIS(locationFolder)[]->onPropertyShowEditor #)
          #);
