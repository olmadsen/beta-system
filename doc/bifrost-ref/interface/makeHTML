#!/bin/sh

#--------- Configuration: ------

SRC=${BETALIB}/bifrost

FILES1="\
Bifrost.bet \
EPSfile.bet \
"

FILES2="\
Palette.bet \
PredefinedGO.bet \
RasterGrays.bet \
SelectionPicture.bet \
"

# ColorNames is handled specially, see below.

INT=Bifrost.int

MAKEINT=../../bin/beta2int.perl
MAKEHTML=../../bin/int2html.perl
HEADERS=./headers.perl

#----- Don't change below ! -----

/bin/rm -f $INT

echo Making interface descriptions for $SRC.
echo ""
echo Making $INT...
touch $INT
for file in $FILES1
do
	echo $SRC/$file
	expand $SRC/$file | $MAKEINT | $HEADERS >> $INT
done

echo "$SRC/ColorNames.bet (special)"
expand $SRC/ColorNames.bet | head -18 | $MAKEINT | $HEADERS >> $INT
echo '...'                                                  >> $INT
expand $SRC/ColorNames.bet | tail -3                        >> $INT

for file in $FILES2
do
	echo $SRC/$file
	expand $SRC/$file | $MAKEINT | $HEADERS >> $INT
done

echo Creating $HTML...
$MAKEHTML -v $INT
echo done.
