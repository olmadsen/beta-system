-- ConsDump: doPart --
do '(' -> output.put;
   symbol -> gram.symbolToName -> output.puttext;
   output[] -> printComments;
   
   (if isSlot then
       (level+1, output[], gram[]) -> (theSlot).dump;
    else
       scanit
       (#
       do output.newline;
          (for level repeat
               '  ' -> output.puttext;
          for);
          (level+1, output[], gram[]) -> current.dump;
       #);
   if);
   INNER;
   ')' -> output.put;

-- ListDump: doPart --
do '[' -> output.put;
   symbol -> gram.symbolToName -> output.puttext;
   output[] -> printComments;
   scanit
   (#
   do output.newline;
      (for level repeat
           '  ' -> output.puttext;
      for);
      (level+1, output[], gram[]) -> current.dump;
   #);
   
   INNER;
   ']' -> output.put;


