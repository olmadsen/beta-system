findslot:
  (# name: ^Text;
     op: ^SlotDesc;
  enter name[]
  do 
     search: scanSlots
     (#
     do (if current.name -> name.equalNCS then
            current[] -> op[];
            leave search;
        if);
     #);
  exit op[]
  #);

