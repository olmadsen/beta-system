-- FragmentGroupBind: doPart --
do (# 
   do (if false then
          (if controller.status = 7 then
              scan
              (# frag: ^FragmentForm;
              do current[] -> frag[];
                 NONE -> frag.header[];
              #);
          if);
          scan
          (# frag: ^FragmentForm;
