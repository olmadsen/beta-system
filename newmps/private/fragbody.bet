      size: @integer;
      getBytes: @input.getBytes;
   do input.getInt32u -> size;
      &Text[] -> data[];
      size -> data.T.new;
      (@@data.T[1], size) -> getBytes;
      size -> data.lgth;
      data.reset;
      data[] -> unPackAst;
   #);
   
   
