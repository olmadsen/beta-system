              do astfile[] -> current.unPack;
              #);
              fragmentlist.scan
              (#
              do astfile[] -> current.unPackSemantics;
              #);
              
          if);
          astfile.close;
       #);
       true -> isRealOpen;
       unPackSemanticInfo;
   if);
   
