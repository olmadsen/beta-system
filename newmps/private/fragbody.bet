     (#
     do  
        (for inx: importtop repeat
             (if frag[] = import[inx][] then
                 inx -> index;
                 leave search;
             if);
        for);
        importtop + 1 -> importtop;
        (if importtop = import.range then
            importtop -> import.extend;
        if);
        frag[] -> import[importtop][];
        importtop -> index;
     #);
