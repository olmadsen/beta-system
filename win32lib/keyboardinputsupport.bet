(* ****** Keyboard input support **********************************************)

(* HWND    WINAPI SetFocus(HWND); *)
SetFocus: external
(#
  in0: @integer; (* HWND *)
  out: @integer; (* HWND *)
enter in0
do callStd;
exit out
#);

(* HWND    WINAPI GetFocus(void); *)
GetFocus: external
(#
  out: @integer; (* HWND *)
do callStd;
exit out
#);

(* int     WINAPI GetKeyState(int); *)
GetKeyState: external
(#
  in0: @integer; (* int *)
  out: @shortint; (* short *)
enter in0
do callStd;
exit out
#);

(* int     WINAPI GetAsyncKeyState(int); *)
GetAsyncKeyState: external
(#
  in0: @integer; (* int *)
  out: @integer; (* int *)
enter in0
do callStd;
exit out
#);

(* void    WINAPI GetKeyboardState(BYTE FAR* ); *)
GetKeyboardState: external
(#
  in0: @integer; (* BYTE FAR* *)
enter in0
do callStd;
#);

(* void    WINAPI SetKeyboardState(BYTE FAR* ); *)
SetKeyboardState: external
(#
  in0: @integer; (* BYTE FAR* *)
enter in0
do callStd;
#);
