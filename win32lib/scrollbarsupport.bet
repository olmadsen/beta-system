(****** Scroll bar support **************************************************)

(* int     WINAPI SetScrollPos(HWND, int, int, BOOL); *)
SetScrollPos: external
(#
  in0: @integer; (* HWND *)
  in1: @integer; (* int *)
  in2: @integer; (* int *)
  in3: @integer; (* BOOL *)
  out: @integer; (* int *)
enter (in0,in1,in2,in3)
do callStd;
exit out
#);

(* int     WINAPI GetScrollPos(HWND, int); *)
GetScrollPos: external
(#
  in0: @integer; (* HWND *)
  in1: @integer; (* int *)
  out: @integer; (* int *)
enter (in0,in1)
do callStd;
exit out
#);

(* BOOL WINAPI SetScrollRange(HWND, int, int, int, BOOL); *)
SetScrollRange: external
(#
  in0: @integer; (* HWND *)
  in1: @integer; (* int *)
  in2: @integer; (* int *)
  in3: @integer; (* int *)
  in4: @integer; (* BOOL *)
  result: @integer;
enter (in0,in1,in2,in3,in4)
do callStd;
exit result
#);

(* BOOL WINAPI GetScrollRange(HWND, int, int FAR*, int FAR* ); *)
GetScrollRange: external
  (# hwnd: @integer; (* HWND *)
     nBar: @integer; (* int *)
     minPos: ^longRef; (* int FAR* *)
     maxPos: ^longRef; (* int FAR* *)
     result: @integer
  enter (hwnd,nBar,minPos[],maxPos[])
  do callStd;
  exit result
  #);

(* void    WINAPI ShowScrollBar(HWND, int, BOOL); *)
ShowScrollBar: external
(#
  in0: @integer; (* HWND *)
  in1: @integer; (* int *)
  in2: @integer; (* BOOL *)
enter (in0,in1,in2)
do callStd;
#);

(* BOOL    WINAPI EnableScrollBar(HWND, int, UINT); *)
EnableScrollBar: external
(#
  in0: @integer; (* HWND *)
  in1: @integer; (* int *)
  in2: @integer; (* UINT *)
  out: @integer; (* BOOL *)
enter (in0,in1,in2)
do callStd;
exit out
#);

