(****** Mouse input and cursor support **************************************)

(****** Mouse input support *************************************************)
(* HWND    WINAPI SetCapture(HWND); *)
SetCapture: external
  (* The SetCapture function sets the mouse capture to the given window
   * belonging to the current thread. Once a window has captured the
   * mouse, all input is directed to that window, regardless of whether
   * the cursor is within the borders of that window. Only one window at
   * a time can capture the mouse.
   *)
  (# hwndIn: @integer; (* handle of window to receive mouse capture. HWND *)
     hwndOut: @integer; 
     (* If the function succeeds, the return value is the handle of the
      * window that had previously captured the mouse. If there is no
      * such window, the return value is 0 (NULL). HWND 
      *)
  enter hwndIn
  do 'SetCapture' -> callStd;
  exit hwndOut
  #);

(* void    WINAPI ReleaseCapture(void); *)
ReleaseCapture: external
  (* The ReleaseCapture function releases the mouse capture and
   * restores normal input processing. A window with the mouse capture
   * receives all mouse input regardless of the position of the cursor.
   *)
  (#
  do callStd;
  #);

(* HWND    WINAPI GetCapture(void); *)
GetCapture: external
  (* The GetCapture function retrieves the handle of the window (if
   * any) that has captured the mouse.
  *)
  (#
     out: @integer; (* HWND *)
  do callStd;
  exit out
  #);

