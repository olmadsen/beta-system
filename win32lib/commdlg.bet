-- Lib: Attributes --
(* Logical Font *)
LF_FACESIZE: (# exit 32 #);

OPENFILENAME: cstruct
  (# bytesize::< (# do 76 -> value; #);
     lStructSize: @long (# pos::< (# do 0 -> value; #); #);  
     hwndOwner: @long (# pos::< (# do 4 -> value; #); #);  
     hInstance: @long (# pos::< (# do 8 -> value; #); #);  
     lpstrFilter: @long (# pos::< (# do 12 -> value; #); #);  
     lpstrCustomFilter: @long (# pos::< (# do 16 -> value; #); #);  
     nMaxCustFilter: @long (# pos::< (# do 20 -> value; #); #);  
     nFilterIndex: @long (# pos::< (# do 24 -> value; #); #);  
     lpstrFile: @long (# pos::< (# do 28 -> value; #); #);  
     nMaxFile: @long (# pos::< (# do 32 -> value; #); #);  
     lpstrFileTitle: @long (# pos::< (# do 34 -> value; #); #);  
     nMaxFileTitle: @long (# pos::< (# do 38 -> value; #); #);  
     lpstrInitialDir: @long (# pos::< (# do 42 -> value; #); #);  
     lpstrTitle: @long (# pos::< (# do 46 -> value; #); #);  
     Flags: @long (# pos::< (# do 50 -> value; #); #);  
     nFileOffset: @long (# pos::< (# do 54 -> value; #); #);  
     nFileExtension: @long (# pos::< (# do 58 -> value; #); #);  
     lpstrDefExt: @long (# pos::< (# do 62 -> value; #); #);  
     lCustData: @long (# pos::< (# do 66 -> value; #); #);  
     lpTemplateName: @long (# pos::< (# do 70 -> value; #); #);  
  #);


(* BOOL    WINAPI GetOpenFileName(OPENFILENAME FAR* ); *)
GetOpenFileName: external
  (# theOfn: ^OPENFILENAME;
     result: @boolean;
  enter theOfn[]
  do 'GetOpenFileNameA' -> callStd;
  exit result
  #);

