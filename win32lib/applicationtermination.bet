INCLUDE 'rectanglesupport'

-- Lib: Attributes --

(****** Application termination *********************************************)

(* void    WINAPI PostQuitMessage(int); *)
PostQuitMessage: external
  (# exitCode: @integer; (* int *)
  enter exitCode
  do callStd;
  #);

(****** Mode control ********************************************************)

(****** System modal window support *****************************************)

(* HWND    WINAPI GetSysModalWindow(void); *)
GetSysModalWindow: external
  (#
     out: @integer; (* HWND *)
  do callStd;
  exit out
  #);

(* HWND    WINAPI SetSysModalWindow(HWND); *)
SetSysModalWindow: external
  (#
     in0: @integer; (* HWND *)
     out: @integer; (* HWND *)
  enter in0
  do callStd;
  exit out
  #);

(****** Timer support *******************************************************)

(* UINT    WINAPI SetTimer(HWND, UINT, UINT, TIMERPROC); *)
SetTimer: external
  (#
     in0: @integer; (* HWND *)
     in1: @integer; (* UINT *)
     in2: @integer; (* UINT *)
     in3: ##external; (* TIMERPROC *)
     out: @integer; (* UINT *)
  enter (in0,in1,in2,in3##)
  do callStd;
  exit out
  #);

(* BOOL    WINAPI KillTimer(HWND, UINT); *)
KillTimer: external
  (#
     in0: @integer; (* HWND *)
     in1: @integer; (* UINT *)
     out: @boolean; (* BOOL *)
  enter (in0,in1)
  do callStd;
  exit out
  #);



