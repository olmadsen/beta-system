(* DWORD   WINAPI SizeofResource(HINSTANCE, HRSRC); *)
SizeofResource: external
  (#
     in0: @integer; (* HINSTANCE *)
     in1: @integer; (* HRSRC *)
     out: @integer; (* DWORD *)
  enter (in0,in1)
  do callStd;
  exit out
  #);

(* int     WINAPI AccessResource(HINSTANCE, HRSRC); *)
AccessResource: external
  (#
     in0: @integer; (* HINSTANCE *)
     in1: @integer; (* HRSRC *)
     out: @integer; (* int *)
  enter (in0,in1)
  do callStd;
  exit out
  #);

(* HGLOBAL WINAPI AllocResource(HINSTANCE, HRSRC, DWORD); *)
AllocResource: external
  (#
     in0: @integer; (* HINSTANCE *)
     in1: @integer; (* HRSRC *)
     in2: @integer; (* DWORD *)
     out: @integer; (* HGLOBAL *)
  enter (in0,in1,in2)
  do callStd;
  exit out
  #);

(* RSRCHDLRPROC WINAPI SetResourceHandler(HINSTANCE, LPCSTR, RSRCHDLRPROC); *)
SetResourceHandler: external
  (#
     in0: @integer; (* HINSTANCE *)
     in1: [1] @char; (* LPCSTR *)
     in2: ##external; (* RSRCHDLRPROC *)
     out: ##external; (* RSRCHDLRPROC *)
  enter (in0,in1,in2##)
  do callStd;
  exit out##
  #); 

MAKEINTRESOURCE:
  (# i: @integer;
     out: @integer;
  enter i
  do (* (0,i) -> MAKELP -> out; *)
  exit out
  #);

