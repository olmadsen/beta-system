(****** Resource Management *************************************************)

(* HRSRC   WINAPI FindResource(HINSTANCE, LPCSTR, LPCSTR); *)
FindResource: external
  (#
     in0: @integer; (* HINSTANCE *)
     in1: [1] @char; (* LPCSTR *)
     in2: [1] @char; (* LPCSTR *)
     out: @integer; (* HRSRC *)
  enter (in0,in1,in2)
  do callStd;
  exit out
  #);

(* HGLOBAL WINAPI LoadResource(HINSTANCE, HRSRC); *)
LoadResource: external
  (#
     in0: @integer; (* HINSTANCE *)
     in1: @integer; (* HRSRC *)
     out: @integer; (* HGLOBAL *)
  enter (in0,in1)
  do callStd;
  exit out
  #);

(* BOOL    WINAPI FreeResource(HGLOBAL); *)
FreeResource: external
  (#
     in0: @integer; (* HGLOBAL *)
     out: @boolean; (* BOOL *)
  enter in0
  do callStd;
  exit out
  #);

(* void FAR* WINAPI LockResource(HGLOBAL); *)
LockResource: external
  (#
     in0: @integer; (* HGLOBAL *)
     out: @integer; (* void FAR* *)
  enter in0
  do callStd;
  exit out
  #);

