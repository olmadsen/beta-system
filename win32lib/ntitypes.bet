-- Lib: Attributes --

malloc: external
  (# in,out: @integer;
  enter in
  exit out
  #);
free: external
  (# in: @integer;
  enter in
  #);

ShortRef: cStruct
  (# bytesize::< (# do 4 -> value #);
     w: short(# #); 
  enter w
  exit w
  #);

LongRef: cStruct
  (# bytesize::< (# do 4 -> value #);
  enter r[1]
  exit r[1]
  #);
putPoint:
  (# h,v: @integer;
  enter (h,v)
  do '(' -> put;
     h -> putInt;
     ',' -> put;
     v -> putInt;
     ')' -> put;
  #);

putRectangle:
  (# top, left, bottom, right: @integer;
  enter ((top, left), (bottom, right))
  do '( ' -> putText;
     (top, left) -> putPoint; ' , ' -> putText;
     (bottom, right) -> putPoint; ' )' -> putLine;
  #);
