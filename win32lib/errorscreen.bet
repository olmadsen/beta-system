ORIGIN '~beta/basiclib/v1.5/betaenv';
BODY 'private/errorscreenbody';

-- LIB: attributes --
ErrorScreen: Stream
  (* Pattern corresponding to the Screen pattern of betaenv,
   * but which outputs to the standard error instead of to the
   * standard output, as Screen does
   *)
  (# Eos::< (# do true->value #);
     OtherError::< (# <<SLOT ErrorScreenError: dopart>> #);
     Get::< (# <<SLOT ErrorScreenGet: dopart>> #);
     Put::< (# <<SLOT ErrorScreenPut: dopart>> #);
     PutText::< (# <<SLOT ErrorScreenPutText: dopart>> #);
  #);
