(* This is a list of options currently supported by valhalla. It is
 * an extension to the list of options in 
 * ~beta/objectbrowser/v2.0/optionslist.bet.
 * 
 * Options are set by putting them into the global optionDB. (See options.bet)
 *
 * Do not change the value of these constants, since their absolute value
 * is used instead of the pattern name to keep implementations from being
 * dependent on this fragment. *)

--- lib: attributes ---

(* Whether to use truncated imperative names for code expressions on
 * the stack. *)
useShortCodeNames: (# exit 'ShortCodeNames' #);

(* Whether to read labels from process at startup instead of on demand. *)
readLabelsOnStartUp: (# exit 'PreReadLabels' #);

(* Debug ObjectDescriptor list coming out of groupsinfo. *)
debugValhalla: (# exit 'DebugValhalla' #);

(* Show current code on each process stop, even if no view is currently
 * open on that code. *)
alwaysCurCode: (# exit 'alwaysCurCode' #);

scanvalhallaoptions:
  (# current,description: ^Text;
     default: @Boolean;
  do alwaysCurCode->current[]; 'Show Current Code on Stop'->description[];
     TRUE->default; INNER;
     
     useShortCodeNames->current[]; 'Short Code Names'->description[];
     TRUE->default; INNER;
     
     readLabelsOnStartUp->current[]; 'Read Labels on Fork'->description[];
     FALSE->default; INNER;
     
     debugValhalla->current[]; 'Debug Valhalla'->description[];
     FALSE->default; INNER;
  #);
