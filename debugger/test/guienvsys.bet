--- program:descriptor ---
systemenv
(# setWindowEnv:: (# do gui[]->theWindowEnv[] #);
   
   sleeper: @|system
     (# 
     do loop:
          (# 
          do 1->sleep; 'hej'->putLine; restart loop;
          #);
     #);
   
   gui: @guienv
     (# main: @window (# #);
        init:
          (#
          do sleeper[]->fork;
             main.open;
          #);
     #);
   
do gui.init;
#)
