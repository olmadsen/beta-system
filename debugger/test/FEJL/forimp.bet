ORIGIN '~beta/basiclib/betaenv';
-- PROGRAM: Descriptor --
(# a,b,c,d,e: @integer; 
   myIntVal:IntegerValue
     (# do a+b->value;
        32->a;
        4->value
     #)
do
   0->a;
   (* testing for-imp *)
   (* with one imperative *)
   (for i: 4 repeat i->a for);
   a->putint;
   
   (* with two imperative *)
   (for i: 4 repeat i->a; 43->b;  for);
   a->putint;
   
   (* nested *)
   (for i:4 repeat
        (for j:3 repeat
             i+j->a;
             i->b
        for);
        i->c
   for);
   
   (* with evaluation as bound *)
   (for i:myIntVal repeat
        i->a;
        3->b;
   for);
   
   0->a;
   
#)  

