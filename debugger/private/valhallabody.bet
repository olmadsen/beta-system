-- runnewdebuggee: Descriptor --
(#
   outline: @boolean;
   fg: ^(*FGC, gui.*) mps.ast.fragmentGroup;
   ff: ^(*FGC, gui.*) mps.ast.fragmentForm;
   execname:^text;
   warningmsg:^text;
   execf:@diskentry;
   localdebuggee: ^GUIprocess; (* to handle debuggee until fork is finished *)
do
   getExecNameParam->execname[];
   'exe: '->puttext; execname[]->putline;
   execname[]->execf.path;
   (if execf.exists then (* check correct type of executable *)
       (if not (ExecName[]->is_native_executable) then
           NONE->debuggee[]->(*FGC, gui.*) debuggee[];
           'No Process'->(*FGC, gui.*) putpinfo;
           'Binary: '->warningmsg[];
           execname[]->warningmsg.puttext;
           ' is not a correct binary for this CPU!.\n'->warningmsg.puttext;
           'Seems to be of type: '->warningmsg.puttext;
           ExecName[]->type_of_executable->warningmsg.putline;
           warningmsg.newline;
           'Quit immediately (and recompile) to be able to continue debugging'
             ->warningmsg.puttext;
           (warningmsg[],'Warning')->(*FGC, gui.*) alertInfo;
           NONE->execname[];
       if);
    else  (* File does not exist *)
       'File: '->warningmsg[];
       execname[]->warningmsg.append;
       '. Does not exist!\nNo debuggee loaded!'
         ->warningmsg.puttext;
       (warningmsg[],'Warning')->(*FGC, gui.*) alertInfo;
       NONE->execname[]; 
   if);
   

   dorunNewDebuggee:
     (#
     do
        (if execname[]=NONE then (* wrong type of executable or not found*)
            FALSE->success;
            leave dorunNewDebuggee;
        if);
        TRUE->success;
        (if debuggee[] <> none then
            (if not debuggee.terminated then debuggee.kill if);
            (if not rerun then none ->debuggee[]->(*FGC, gui.*) debuggee[]; if); (* gram *)
        if);
        (if getEXECNAMEparam = none then
            (if newExecName = none then leave dorunNewDebuggee if); 
        if);
        rerun and (debuggee[] <> none )->rerun;
        doInit:
        (if not rerun then
            (if getPIDparam = 0 then
            (* Only edit commandline if the process is not
             * already running.
             * doEditCommandLine  *)
                
            if);
            (*
             * (if sources[]<>NONE then sources.close; NONE->sources[] if);
             *)
            (*FGC, gui.*) codeviews.newscan
              (#  do cur.encl.tryclose #);
            &(*FGC, gui.*) GUIprocess[]->localdebuggee[];
            'none->(*FGC, gui.*) debuggee[]; (* gram, must be none to disable menus*)'->putline;

            debuggeeInit:
            (*FGC, gui.*) mps[]
              ->localdebuggee.init
                (#
                   doingExpensiveRead:: 
                     (# t: @Text; 
                     do
                        'Creating debug info cache (%s)'
                          ->t.putFormat
                            (# de: @diskEntry
                            do dbName[]->de.path; de.path.name->s
                            #);
                        t[]->(*FGC, gui.*) putinfo;
                        
                     #);
                   doingCheapRead:: 
                     (# t: @Text; 
                     do
                        'Reading debug info cache (%s)'
                          ->t.putFormat
                            (# de: @diskEntry
                            do dbName[]->de.path; de.path.name->s
                            #);
                        t[]->(*FGC, gui.*) putinfo;
                     #);
                   timeoutcount: @Integer;
                   connectionTimedOut:: 
                     (# t: @Text; 
                     do
                        timeoutcount+1->timeoutcount;
                        (if timeoutcount = 4 then
                            ('Connection timed out','Connection Error')
                              ->(*FGC, gui.*) alertinfo;
                            FALSE->value;
                         else
                            'Waiting (%d)'
                              ->t.putFormat (#  do timeoutCount->d #);
                            t[]->(*FGC, gui.*) putinfo;
                            TRUE->value;
                        if);
                     #);
                   wrongBetarunVersion:: 
                     (# t: @Text; 
                     do
                        'This valhalla version requires '
                        'the debugged process to be\n'
                        'linked with version '
                          ->t;
                        BETARUN_ID->t.append;
                        ' of the BETA runtime system.\n'->t.append;
                        'Found version ' -> t.append;
                        debuggeeVersion[] -> t.append;
                        ' in the debugged process.' -> t.append;
                        'Wrong BETA runtime system'->(*FGC, gui.*) putInfo;
                        (t[],'Version Error')->(*FGC, gui.*) alertinfo;
                        false->success;
                        leave debuggeeInit;
                     #);
                   createFragInfo:: TrueObject;
                   creationFailed:: 
                     (# t: @Text; 
                     do
                        'Failed to create debug info cache (%s)'
                          ->t.putFormat (#  do dbName[]->s #);
                        t[]->(*FGC, gui.*) putInfo;
                        (t[],'Debug Info Cache Error')->(*FGC, gui.*) alertinfo;
                        TRUE->continue;
                     #);
                   execNotFound:: 
                     (# t: @Text; 
                     do
                        'Executable `%s'' not found'
                          ->t.putFormat (#  do getEXECNAMEparam->s #);
                        t[]->(*FGC, gui.*) putInfo;
                        (t[],'Executable not found')->(*FGC, gui.*) alertinfo;
                        FALSE->success;
                        leave debuggeeInit;
                     #);
                   forkFailed:: 
                     (# t: @Text; 
                     do
                        'Could not fork `%s'''
                          ->t.putFormat
                            (# de: @diskEntry
                            do getEXECNAMEparam->de.path; de.path.name->s; 
                            #);
                        t[]->(*FGC, gui.*) putInfo;
                        (t[],'Fork Failure')->(*FGC, gui.*) alertinfo;
                        FALSE->success;
                        leave debuggeeInit;
                     #);
                   exeDbMissing::
                     (# t:@text;
                     do
                        'Debug information for executable not found\n'->t;
                        'File: '->t.append;
                        dbName[]->t.append;
                        '\n is necessary for debugging!\n'->t.append;
                        'Recompile executable without "-d" option and retry.'->t.append;
                        (t[],'Debugging impossible!')->(*FGC, gui.*) alertinfo;;
                        FALSE->success;
                        leave debuggeeInit;
                     #);
                   
                #)->success;
         else
            debuggeeRerun:
            debuggee.rerun
              (#
                 execNotFound:: 
                   (# t: @Text; 
                   do
                      'Executable `%s'' not found'
                        ->t.putFormat (#  do getEXECNAMEparam->s #);
                      t[]->(*FGC, gui.*) putInfo;
                      (t[],'Executable not found')->(*FGC, gui.*) alertinfo;
                      FALSE->success;
                      none ->debuggee[];
                      leave debuggeeRerun;
                   #);
                 forkFailed:: 
                   (# t: @Text; 
                   do
                      'Could not fork `%s'''
                        ->t.putFormat
                          (# de: @diskEntry
                          do getEXECNAMEparam->de.path; de.path.name->s
                          #);
                      t[]->(*FGC, gui.*) putInfo;
                      (t[],'Fork Failure')->(*FGC, gui.*) alertinfo;
                      FALSE->success;
                      leave debuggeeRerun;
                   #);
                 modtimeChanged:: 
                   (#  do rereadprompt; FALSE->rerun; restart doinit;  #);
              #)->success
        if);
        
        (if success then
              (# t: @Text; programFound: @boolean
              do
                 'Valhalla: Mjolner Source-level Debugger --  '->t;
                 getEXECNAMEparam->t.append;
                 t[]->(*FGC, gui.*) main.title;
                 
                 ''->t;
                 '`%s'' ready (PID=%d)'
                   ->t.putFormat
                     (# de: @diskEntry; 
                     do
                        getEXECNAMEparam->de.path;
                        de.path.name->s;
                        getPIDparam->d;
                        
                     #);
                 t[]->(*FGC, gui.*) putpinfo;
                 ''->(*FGC, gui.*) putinfo;
                 
                 (if not rerun then
                     localdebuggee[]->debuggee[];
                 if);
                 
                 (*FGC, gui.*) main.status.setenabling;
                 ('program',debuggee.MPS.BETA.DescriptorForm)
                   ->debuggee.DBmanager.slotnameToGroups
                     (# 
                     do
                        true->programFound;
                        current[]
                          ->debuggee.mps.fragmentGroupTable.getFragmentGroup
                          ->fg[];
                        (if fg[] <> none then
                            ('program',screen[])->fg.open->ff[];
                            (if ff[] <> none then
                                dragOutlineOnOpen->(*FGC, gui.*) getOption->outline;
                                (dragOutlineOnOpen,false)->(*FGC, gui.*) setOption;
                                ff.root[]->(*FGC, gui.*) newCodeView;
                                (dragOutlineOnOpen,outline)->(*FGC, gui.*) setOption
                            if)
                        if);
                        
                     #);

                 (if not programFound then
                     'Missing debug info. "program" cannot be shown'
                       ->(*FGC, gui.*) putinfo;
                     ((*FGC, gui.*) main[],
                      'Missing .db file for main program fragment.\n"-- program: descriptor --" cannot be shown',
                      'Missing debug info')->(*FGC, gui.*) alertUser
                 if)
              #)
         else
            none ->debuggee[]; 'No Process'->(*FGC, gui.*) putpinfo; 
        if)
     #);
   debuggee[]->(*FGC, gui.*) debuggee[];

#)  

-- procwaiter: Descriptor --
(# tmp: @Text; impi: ^processInterface.ImperativeInfo; 
   errorNumber: @integer;
   errorText: ^text;
do
   always:
     (# 
     do
        waitersem.P;
        (*FGC, gui.*) main.status.setenabling;
        ''->(*FGC, gui.*) putinfo;
        waitloop:
          (# 
          do
             debuggee.processComm.wait
               (#
                  wrongMessage:: 
                    (# t: ^text
                    do
                       'Connection Broken'->(*FGC, gui.*) putpinfo;
                       'The connection to the debuggee has been disconnected.\n\n'
                         ->t[];
                       'If this is not what you expected, it might be an internal Valhalla error,\n'
                         ->t.puttext;
                       'in which case you should collect the details of this incident,\n'
                         ->t.puttext;
                       'and report them to support@mjolner.dk'->t.puttext;
                       (t[],'Connection Broken')->(*FGC, gui.*) alertinfo;
                       ensureKilled;
                       leave waitloop
                    #)
               #);
             (if debuggeeIsReady then
                 (if debuggee.notifyUserOnStop then
                     debuggee.processComm.status.error -> (errorNumber, errorText[]);
                     (if (errorNumber = RTS_UPDATE) OR (((errorNumber = -28) OR (errorNumber = -100)) AND not stopped) then
                         debuggee.processComm.continue; restart waitloop; 
                      else
                         (if debuggee.bml.userBreakHit
                          // 0 // MNGR_USERSKIP then
                             (if debuggee.bml.skipBreakHit or stopped then
                                 'Stopped'->(*FGC, gui.*) putpinfo; 
                              else
                                 tmp.clear;
                                 'Runtime Error: %s'
                                   ->tmp.putformat
                                 (# dummy: @Integer; 
                                 do debuggee.error->(dummy,s); 
                                 #);
                                 tmp[]->(*FGC, gui.*) putpinfo;
                                 
                             if);
                             
                          else
                             tmp.clear;
                             'Stopped at breakpoint %d'
                               ->tmp.putformat
                             (#  do debuggee.bml.userBreakHit->d #);
                             tmp[]->(*FGC, gui.*) putpinfo;
                             
                         if);
                         FALSE->stopped;
                         debuggee.currentRemoteCode->impi[];
                         (if impi[] <> none then
                             impi.cast[]
                               ->newcodemoveable
                             (#
                                openIfNotFound:: 
                                  (# 
                                  do alwaysCurCode->(*FGC, gui.*) getOption->value; 
                                  #);
                                wriggleIfFound:: 
                                  (# 
                                  do
                                     (found[] <> lastEditor[])->value;
                                     found.bringToFront;
                                     
                                  #);
                                
                             #);
                             
                          else
                             (if alwaysCurCode->(*FGC, gui.*) getOption then
                                 (*FGC, gui.*) debuggeeCurCode; 
                             if);
                             
                         if)
                     if);
                  else
                     debuggee.processComm.continue; restart waitloop; 
                 if);
                 
              else
                 'Terminated'->(*FGC, gui.*) putpinfo;
                 ('Process terminated','Terminated')->(*FGC, gui.*) alertinfo;
                 
             if);
             
          #);
        (*FGC, gui.*) main.status.setenabling;
        restart always;
        
     #);
   
#)  

