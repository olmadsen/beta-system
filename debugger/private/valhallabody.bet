-- newcodemoveable: DoPart --
do
   findCode: (*FGC, gui.*) codeviews.newscan
     (#
        end:: 
          (# 
          do
             (if openIfNotFound then
                 getFrame
                   (#
                      done:: 
                        (# mc: ^mycodeview; 
                        do
                           'generated mycodeview'->screen.putline;
                           &mycodeview[]->mc[];
                           ((*FGC, gui.*) main.objworld[],result,cast[])->mc.open;
                           cast[]->mc.selectNode;
                           mc.contents.editor[]->lastEditor[];
                           
                        #);
                      
                   #);
                 
             if)
          #);
        
     do
        (if cur.frag[] <> none then
            (if cur.frag.root[]->cast.frag.root.equal then
                (if cur[]->acceptFound then
                    cast[]->cur.select;
                    (if cur[]->wriggleIfFound then cur.encl.onHighlight;  if);
                    cur[]->lastEditor[];
                    leave findCode;
                    
                if);
                
            if);
            
        if);
        
     #);
     

-- newobjectmoveable: DoPart --
do
   findObject: (*FGC, gui.*) objectviews.newscan
     (#
        end:: 
          (# 
          do
             (if openIfNotFound then
                 (bo[],true)
                   ->(*FGC, gui.*) main.OpenMoveableObjectView
                     (#
                        getFather::  (#  do (*FGC, gui.*) main.objworld[]->father[] #)
                     #)
             if)
          #);
        
     do
        (if cur.bo[] <> none then
            (if cur.bo[] = bo[] then
                (if cur[]->acceptFound then
                    (if cur[]->wriggleIfFound then cur.encl.onHighlight;  if);
                    leave findObject;
                    
                if);
                
            if);
            
        if);
        
     #);
     

