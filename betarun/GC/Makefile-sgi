#
# Generic Makefile for betarun/GC
#

CPP  = cc -E
MAKE = make

all: xmakefile
	$(MAKE) -f xmakefile\
        "C_FLAGS  = -I../C"\
        "C_OPT    = -O2 -fullwarn $(PROF)" \
	"MAIN     = c.gc.o"

valhalla: xmakefile
	$(MAKE) -f xmakefile\
        "C_FLAGS  = -I../C -DRTVALHALLA"\
        "C_OPT    = -O2 -fullwarn $(PROF)" \
	"MAIN     = c.gc.valhalla"

debug: xmakefile
	$(MAKE) -f xmakefile\
        "C_FLAGS  = -I../C -DRTDEBUG"\
        "C_OPT    = -g3 -O2 -fullwarn $(PROF)" \
	"MAIN     = c.gc.debug"

xmakefile: ymakefile-GC
	rm -f xmakefile
	cp ymakefile-GC ymakefile.c
	$(CPP) ymakefile.c |\
	sed -e 's/^#.*//' -e 's/^[ \f\t][ \f\t]*$$//' -e 's/^ //' |\
	sed -n -e '/^..*$$/p' > xmakefile
	rm ymakefile.c

clean: xmakefile
	$(MAKE) -f xmakefile clean MAIN=dummy
	-rm -f xmakefile *.o *.valhalla *.debug

ymakefile-GC:
	touch ymakefile-GC
