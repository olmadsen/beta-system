#
# OPTIONS
#  RTINFO:   Allow the runtime system to write out information during pe.
#  RTDEBUG:  Allow consistency check during pe.
#

betarun_pe.lib: xmakefile_nti
	$(MAKE) -f xmakefile_nti \
	-DWIN32 \
	"-DC_FLAGS=-Dnti -Dnti_bor -DRTVALHALLA" \
	"-DC_OPT=-O2 -g255 -j1" \

betarun.lib: xmakefile_nti
	$(MAKE) -f xmakefile_nti \
	-DWIN32 \
	"-DC_FLAGS=-Dnti -Dnti_bor" \
	"-DC_OPT=-O2 -g255 -j1" \

betarun_v.lib: xmakefile_nti
	$(MAKE) -f xmakefile_nti \
	-DWIN32 \
	"-DC_FLAGS=-DRTVALHALLA -Dnti -Dnti_bor" \
	"-DC_OPT=-O2 -g255 -j1" \

betarun_debug.lib: xmakefile_nti
	$(MAKE) -f xmakefile_nti \
	-DWIN32 \
	"-DC_FLAGS=-DRTDEBUG -Dnti -Dnti_bor" \
	"-DC_OPT=-O2 -g255 -j1 -v"

