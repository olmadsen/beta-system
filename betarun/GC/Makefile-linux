#
# OPTIONS
#  RTINFO:   Allow the runtime system to write out information during pe.
#  RTDEBUG:  Allow consistency check during pe.
#

CPP  = gcc -E
MAKE = make -j 3

all: xmakefile
	@$(MAKE) -f xmakefile\
        "C_FLAGS  = -I../C -I../P"\
        "C_OPTA = -O6 $(PROF)" \
        "C_OPTB = -O6 $(PROF)" \
	"MAIN     = c.gc.o"

valhalla: xmakefile
	@$(MAKE) -f xmakefile\
        "C_FLAGS  = -I../C -I../P -DRTVALHALLA"\
        "C_OPTA    = -O6 $(PROF)" \
        "C_OPTB    = -O6 $(PROF)" \
	"MAIN     = c.gc.valhalla"

debug: xmakefile
	$(MAKE) -f xmakefile\
        "C_FLAGS  = -I../C -I../P -DRTDEBUG"\
        "C_OPTA = -g $(PROF)" \
        "C_OPTB = -g $(PROF)" \
	"MAIN     = c.gc.debug"

xmakefile: ymakefile-GC
	@rm -f xmakefile
	@cp ymakefile-GC ymakefile.c
	@$(CPP) ymakefile.c |\
	sed -e 's/^#.*//' -e 's/^[ \f\t][ \f\t]*$$//' -e 's/^        /	/' |\
	sed -n -e '/^..*$$/p' > xmakefile
	@rm ymakefile.c

clean: xmakefile
	@$(MAKE) --no-print-directory -f xmakefile clean
	@-rm -f xmakefile *.o *.debug *.valhalla

ymakefile-GC:
