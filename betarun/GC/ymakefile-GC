MAKEFILE = Makefile

ORD_SRC  = block.c ioa.c stack.c misc.c aoa.c aoatoioa.c\
           copyobject.c objectsize.c lvra.c 


#ifdef sun
#  ifndef sparc
#    define sun3
#  endif
#endif

GEN_SRC  = ../C/data.gen ../C/export.h ../C/declare.h
INC_SRC  = ../C/macro.h ../C/beta.h ../C/define.h ../C/constant.h \
           ../C/heap.h ../C/object.h ../C/function.h

RST_SRC  = 

ORD_OBJ  = $(ORD_SRC:.c=.o)

SOURCES  = $(Makefile) $(ORD_SRC) $(RST_SRC)
OBJFILES = $(ORD_OBJ)

#ifdef hpux
CC       = gcc
CPP      = /lib/cpp -P $(C_FLAGS)
#endif

#ifdef hppa
CC       = gcc -O6
CPP      = /lib/cpp -P $(C_FLAGS)
#endif

#ifdef sun3
CC       = gcc
CPP      = /usr/lib/cpp -P $(C_FLAGS)
#endif

#ifdef sparc
CC       = gcc
CPP      = /usr/lib/cpp -P $(C_FLAGS)
#endif

#ifdef sun4s
CC       = gcc
CPP      = gcc -E -P $(C_FLAGS)
#endif

#ifdef apollo
CC       = cc
CPP      = /usr/lib/cpp -P $(C_FLAGS)
#endif

#ifdef macintosh
CC       = C
CPP      = /lib/cpp -P -Dmacintosh $(CPP_FLAGS)
#endif

INCLUDES = $(INC_SRC) ../C/data.h

CC_OPT  = -I../C $(C_OPT) $(C_FLAGS) 

$(MAIN): $(OBJFILES)
#ifdef macintosh
	lib -o $@ $(OBJFILES)
#else
#ifdef sun4s
	ld -dn -r -o $@ $(OBJFILES)
#else
	ld -r -o $@ $(OBJFILES)
#endif
#endif

$(ORD_OBJ): $($@:.o=.c) $(INCLUDES) $(RST_SRC)
#ifdef macintosh
	$(CC) -o $@ $(CC_OPT) $(@:.o=.c)
#else
	$(CC) -c $(CC_OPT) $(@:.o=.c)
#endif

clean: 
	-rm -f $(OBJFILES) *~

srclist:
	@echo $(SOURCES) | tr -s " " "\012"
