#
# OPTIONS
#  RTINFO:   Allow the runtime system to write out information during pe.
#  RTDEBUG:  Allow consistency check during pe.
#
CPP  = gcc -E
CC = gcc
MAKE = make
NONANSI=c:/mingw32/include/nonansi

gnu/betarun_pe.lib: xmakefile_gnu
	$(MAKE) -f xmakefile_gnu \
	"C_FLAGS=-I$(NONANSI) -I../C -Dnti -Dnti_gnu" \
	"C_OPT=-O2" \
	"MAIN     = dummy.obj"

gnu/betarun.lib: xmakefile_gnu
	$(MAKE) -f xmakefile_gnu \
	"C_FLAGS=-I$(NONANSI) -I../C -Dnti -Dnti_gnu" \
	"C_OPT=-O2" \
	"MAIN     = dummy.obj"


gnu/betarun_v.lib: xmakefile_gnu
	$(MAKE) -f xmakefile_gnu \
	"C_FLAGS=-I$(NONANSI) -I../C -Dnti -Dnti_gnu -DRTVALHALLA" \
	"C_OPT=-O2" \
	"MAIN     = dummy.obj"

gnu/betarun_debug.lib: xmakefile_gnu
	$(MAKE) -f xmakefile_gnu \
	"C_FLAGS=-I$(NONANSI) -I../C -Dnti -Dnti_gnu -DRTDEBUG" \
	"C_OPT=-O2 -g" \
	"MAIN     = dummy.obj"

xmakefile_gnu: ymakefile-GC
	rm -f xmakefile_gnu
	cp ymakefile-GC ymakefile.c
	$(CPP) -Dnti -Dnti_gnu ymakefile.c |\
	sed -e 's/^#.*//' -e 's/^[ \f\t][ \f\t]*$$//' -e 's/^ //' |\
	sed -n -e '/^..*$$/p' > xmakefile_gnu
	rm ymakefile.c

clean:
	-rm -f xmakefile_gnu *.o *.obj
