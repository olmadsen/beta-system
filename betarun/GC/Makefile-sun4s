#
# Generic Makefile for betarun/GC
#
# NOTE NOTE NOTE 
# Certain files cannot be compiled with debug info (-g) or without
# optimizations. Which are unclear. 
#

CPP  = gcc -E
MAKE = make

all: xmakefile
	@$(MAKE) -f xmakefile\
        "C_FLAGS  = -I../C -I../P"\
        "C_OPTA   = -O6 $(PROF)" \
        "C_OPTB   = -O6 $(PROF)" \
	"MAIN     = c.gc.o"

valhalla: xmakefile
	@$(MAKE) -f xmakefile\
        "C_FLAGS  = -I../C -I../P -DRTVALHALLA"\
        "C_OPTA   = -O6 $(PROF)" \
        "C_OPTB   = -O6 $(PROF)" \
	"MAIN     = c.gc.valhalla"

mt: xmakefile
	@csh -f -c 'make -f xmakefile\
        "C_FLAGS = -I../C -I../P -DMT" \
        "C_OPTA  = -O6 $(PROF)" \
        "C_OPTB  = -O6 $(PROF)" \
	"MAIN    = c.gc.mt" |& egrep -v "(call-clobbered|included from|                 from )"'

debug_mt: xmakefile
	@csh -f -c 'make -f xmakefile\
        "C_FLAGS = -I../C -I../P -DMT -DRTDEBUG" \
        "C_OPTA  = -O0 -g $(PROF)" \
        "C_OPTB  = -O6 -g $(PROF)" \
	"MAIN    = c.gc.debug_mt" |& egrep -v "(call-clobbered|included from|                 from )"'

v_mt: xmakefile
	@csh -f -c 'make -f xmakefile\
        "C_FLAGS = -I../C -I../P -DMT -DRVALHALLA" \
        "C_OPTA  = -O6 $(PROF)" \
        "C_OPTB  = -O6 $(PROF)" \
	"MAIN    = c.gc.v_mt" |& egrep -v "(call-clobbered|included from|                 from )"'

debug: xmakefile
	@$(MAKE) -f xmakefile\
        "C_FLAGS  = -I../C -I../P -DRTDEBUG"\
        "C_OPTA   = -O0 -g $(PROF)" \
        "C_OPTB   = -O0 -g $(PROF)" \
	"MAIN     = c.gc.debug"

fastdebug: xmakefile
	@$(MAKE) -f xmakefile\
        "C_FLAGS  = -I../C -I../P -DRTDEBUG -DFASTDEBUG"\
        "C_OPTA   = -O6 -g $(PROF)" \
        "C_OPTB   = -O0 -g $(PROF)" \
	"MAIN     = c.gc.fastdebug"

xmakefile: ymakefile-GC
	@echo "Making xmakefile"
	@rm -f xmakefile
	@cp ymakefile-GC ymakefile.c
	@$(CPP) ymakefile.c |\
		sed -e 's/^#.*//' -e 's/^[ \f\t][ \f\t]*$$//' -e 's/^ //' |\
		sed -n -e '/^..*$$/p' > xmakefile
	@rm ymakefile.c

clean: xmakefile
	@$(MAKE) -f xmakefile clean MAIN=dummy
	@-rm -f xmakefile *.o *.valhalla *.debug *.mt

ymakefile-GC:
	touch ymakefile-GC
