#
# OPTIONS
#  RTINFO:   Allow the runtime system to write out information during pe.
#  RTDEBUG:  Allow consistency check during pe.
#

CPP  = gcc -E -Dhpux9
MAKE = make

all: xmakefile
	$(MAKE) -f xmakefile \
        "C_FLAGS  = -I../C"\
        "C_OPT = -O6 $(PROF)" \
	"MAIN = c.gc.o"

valhalla: xmakefile
	$(MAKE) -f xmakefile\
        "C_FLAGS  = -I../C"\
        "C_OPT    = -O6 $(PROF)" \
	"MAIN     = c.gc.valhalla"

debug: xmakefile
	$(MAKE) -f xmakefile \
        "C_FLAGS  = -I../C -DRTDEBUG"\
        "C_OPT = -g -O6" \
	"MAIN = c.gc.debug"

xmakefile: ymakefile-GC
	rm -f xmakefile
	cp ymakefile-GC ymakefile.c
	$(CPP) ymakefile.c |\
	sed -e 's/^#.*//' -e 's/^[ \f\t][ \f\t]*$$//' -e 's/^ //' |\
	sed -n -e '/^..*$$/p' > xmakefile
	rm ymakefile.c

clean: xmakefile
	$(MAKE) -f xmakefile clean MAIN=dummy
	-rm -f xmakefile *.o *.debug *.valhalla
