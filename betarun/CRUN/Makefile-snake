#
# OPTIONS
#  RTINFO:   Allow the runtime system to write out information during pe.
#  RTDEBUG:  Allow consistency check during pe.
#

CPP  = cc -E
MAKE = make

all: xmakefile
	$(MAKE) -f xmakefile\
        "C_FLAGS=-I../C -DRTINFO" \
        "C_OPT=-O6" \
	"MAIN=c.run.o"

debug: xmakefile
	csh -c 'make -f xmakefile \
	"C_FLAGS=-I../C -DRTINFO -DRTDEBUG" \
	"C_OPT=-O6" \
	"MAIN = c.run.debug"

xmakefile: ymakefile-CRUN
	rm -f xmakefile
	$(CPP) ymakefile-CRUN |\
	sed -e 's/^#.*//' -e 's/^[ \f\t][ \f\t]*$$//' -e 's/^ //' |\
	sed -n -e '/^..*$$/p' > xmakefile

clean: xmakefile
	$(MAKE) -f xmakefile clean MAIN=dummy
	-rm -f xmakefile *.o *.debug

ymakefile-CRUN:
