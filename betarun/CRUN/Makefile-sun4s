#
# Generic Makefile for betarun/CRUN.
#

CPP  = gcc -E
MAKE = make

all: xmakefile
	csh -f -c 'make -f xmakefile\
        "C_FLAGS = -I../C" \
        "C_OPT   = -O6 $(PROF)" \
	"MAIN    = c.run.o" |& egrep -v "(call-clobbered|included from|                 from )"'

valhalla: xmakefile
	csh -f -c 'make -f xmakefile\
        "C_FLAGS = -I../C -DRTVALHALLA" \
        "C_OPT   = -O6 $(PROF)" \
	"MAIN    = c.run.valhalla" |& egrep -v "(call-clobbered|included from|                 from )"'

mt: xmakefile
	csh -f -c 'make -f xmakefile\
        "C_FLAGS = -I../C -DMT" \
        "C_OPT   = -O6 $(PROF)" \
	"MAIN    = c.run.mt" |& egrep -v "(call-clobbered|included from|                 from )"'

debug_mt: xmakefile
	csh -f -c 'make -f xmakefile\
        "C_FLAGS = -I../C -DMT -DRTDEBUG" \
        "C_OPT   = -O6 -g $(PROF)" \
	"MAIN    = c.run.debug_mt" |& egrep -v "(call-clobbered|included from|                 from )"'

v_mt: xmakefile
	csh -f -c 'make -f xmakefile\
        "C_FLAGS = -I../C -DMT -DRVALHALLA" \
        "C_OPT   = -O6 $(PROF)" \
	"MAIN    = c.run.v_mt" |& egrep -v "(call-clobbered|included from|                 from )"'

debug: xmakefile
	csh -f -c 'make -f xmakefile \
	"C_FLAGS = -I../C -DRTDEBUG" \
	"C_OPT   = -g  -O6  $(PROF)" \
	"MAIN    = c.run.debug" |& egrep -v "(call-clobbered|included from|                 from )"'

xmakefile: ymakefile-CRUN
	rm -f xmakefile
	cp ymakefile-CRUN ymakefile.c
	$(CPP) ymakefile.c |\
	sed -e 's/^#.*//' -e 's/^[ \f\t][ \f\t]*$$//' -e 's/^ //' |\
	sed -n -e '/^..*$$/p' > xmakefile
	rm ymakefile.c

clean: xmakefile
	$(MAKE) -f xmakefile clean MAIN=dummy
	-rm -f xmakefile *.o *.valhalla *.debug *.mt

ymakefile-CRUN:
	touch ymakefile-CRUN
