#
# Generic Makefile for betarun/CRUN.
#

CPP  = gcc -E
MAKE = make

all: xmakefile
	csh -f -c 'make -f xmakefile\
        "C_FLAGS = -I../C" \
        "C_OPT   = -O6 $(PROF)" \
	"MAIN    = c.run.o" |& egrep -v "(call-clobbered|included from|                 from )"'

valhalla: xmakefile
	csh -f -c 'make -f xmakefile\
        "C_FLAGS = -I../C -DRTVALHALLA" \
        "C_OPT   = -O6 $(PROF)" \
	"MAIN    = c.run.valhalla" |& egrep -v "(call-clobbered|included from|                 from )"'

debug: xmakefile
	make -f xmakefile \
	"C_FLAGS = -I../C -DRTDEBUG -DNEWRUN" \
	"C_OPT   = -g3 -O2 -fullwarn -non_shared $(PROF)" \
	"MAIN    = c.run.debug"

xmakefile: ymakefile-NEWRUN
	rm -f xmakefile
	cp ymakefile-NEWRUN ymakefile.c
	$(CPP) ymakefile.c |\
	sed -e 's/^#.*//' -e 's/^[ \f\t][ \f\t]*$$//' -e 's/^ //' |\
	sed -n -e '/^..*$$/p' > xmakefile
	rm ymakefile.c

clean: xmakefile
	$(MAKE) -f xmakefile clean MAIN=dummy
	-rm -f xmakefile *.o *.valhalla *.debug

ymakefile-NEWRUN:
	touch ymakefile-NEWRUN
