  (#
     { Copy a Component Repetition. }
     { stack on entry [return(0),offset(4),Item(8),ValRep(12),...] }
        
     stack: StackArea = SP;
     
     { Used variable.  }
     theRep:    Repetition        = AddrReg1;
     theObjRep: ObjectRepetition  = AddrReg1;
     theCell:   DataArea          = AddrReg1;

