srcs: xmakefile
	$(MAKE) -f xmakefile \
	"C_FLAGS= -D LVR_Area -D AO_Area -D RTINFO" \
	"CPP_FLAGS= -DLVR_Area -DAO_Area -DRTINFO" \
	"C_OPT  = -m -mc68020 " \
	"MAIN = betarun.o" \
	srclist;

srclst:
	@make srcs | perl -ne 'if ( /(\w+)\.c/){ print "\t\:C\:$$1.c.o \266\n";}' 

xmakefile: ymakefile-C
	rm -f xmakefile
	$(CPP) ymakefile-C |\
	sed -e 's/^#.*//' -e 's/^[ \f\t][ \f\t]*$$//' -e 's/^ //' |\
	sed -n -e '/^..*$$/p' > xmakefile

clean:
	-rm -f xmakefile data.c data.h *.o
	-rm -f \#* *~
