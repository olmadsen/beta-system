#
# OPTIONS
#  RTINFO:   Allow the runtime system to write out information during pe.
#  RTDEBUG:  Allow consistency check during pe.
#

bor\betarun.pe: xmakefile
	$(MAKE) -f xmakefile \
	-DWIN32 \
	"-DCPP=cpp32 -P-" \
	"-DC_FLAGS=-Dnti -DWIN32 -DPE" \
	"-DC_OPT=-O2 -g255 -j1"

bor\betarun.lib: xmakefile
	$(MAKE) -f xmakefile \
	-DWIN32 \
	"-DCPP=cpp32 -P-" \
	"-DC_FLAGS=-Dnti -DWIN32" \
	"-DC_OPT=-O2 -g255 -j1 -v"

bor\betarun.debug: xmakefile
	$(MAKE) -f xmakefile \
	-DWIN32 \
	"-DCPP=cpp32 -P-" \
	"-DC_FLAGS=-Dnti -DRTDEBUG -DWIN32" \
	"-DC_OPT=-O2 -g255 -j1 -v"

ms\betarun.pe: xmakefile
	$(MAKE) -f xmakefile \
	CC=cl \
	"CPP=cl -P" \
	"C_FLAGS=-Dnti -DWIN32 -DPE" \
	"C_OPT=-O2"

ms\betarun.lib: xmakefile
	$(MAKE) -f xmakefile \
	CC=cl \
	"CPP=cl -P" \
	"C_FLAGS=-Dnti -DWIN32" \
	"C_OPT=-O2 -Zd"

ms\betarun.debug: xmakefile
	$(MAKE) -f xmakefile \
	CC=cl \
	"CPP=cl -P" \
	"C_FLAGS=-Dnti -DRTDEBUG -DWIN32" \
	"C_OPT=-O2 -Zd"

