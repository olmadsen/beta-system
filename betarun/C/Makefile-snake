#
# OPTIONS
#  RTINFO:   Allow the runtime system to write out information during pe.
#  RTDEBUG:  Allow consistency check during pe.
#

CPP  = cc -E
MAKE = make

all: xmakefile
	$(MAKE) -f xmakefile\
        "C_FLAGS  = -DRTINFO -DRTLAZY $(DEMO)"\
        "C_OPT = -O6" \
	"MAIN = c.common.o"


debug: xmakefile
	$(MAKE) -f xmakefile\
        "C_FLAGS  = -g -DRTINFO -DRTLAZY -DRTDEBUG"\
        "C_OPT = -O" \
	"MAIN = c.common.debug"

xmakefile: ymakefile-C
	rm -f xmakefile
	$(CPP) ymakefile-C |\
	sed -e 's/^#.*//' -e 's/^[ \f\t][ \f\t]*$$//' -e 's/^ //' |\
	sed -n -e '/^..*$$/p' > xmakefile

clean: xmakefile
	$(MAKE) -f xmakefile clean MAIN=dummy
	-rm -f xmakefile *.o *.debug

ymakefile-C:

