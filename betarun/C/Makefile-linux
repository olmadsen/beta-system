#
# OPTIONS
#  RTINFO:   Allow the runtime system to write out information during pe.
#  RTDEBUG:  Allow consistency check during pe.
#

CPP  = gcc -E
MAKE = make

all: xmakefile
	$(MAKE) -f xmakefile\
        "C_FLAGS  = "\
        "C_OPT = -O6 $(PROF) $(DEMO)" \
	"MAIN = c.common.o"


debug: xmakefile
	$(MAKE) -f xmakefile \
        "C_FLAGS  = -DRTVALHALLA -DRTDEBUG"\
        "C_OPT = -O6 -g $(PROF)" \
	"MAIN = c.common.debug"

xmakefile: ymakefile-C
	rm -f xmakefile
	cp ymakefile-C ymakefile.c
	$(CPP) ymakefile.c |\
	sed -e 's/^#.*//' -e 's/^[ \f\t][ \f\t]*$$//' -e 's/^ //' |\
	sed -n -e '/^..*$$/p' > xmakefile
	rm ymakefile.c

clean: xmakefile
	$(MAKE) -f xmakefile clean
	-rm -f xmakefile *.o *.debug

ymakefile-C:

