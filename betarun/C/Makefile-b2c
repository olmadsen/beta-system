#
# OPTIONS
#  RTINFO:   Allow the runtime system to write out information during pe.
#  RTDEBUG:  Allow consistency check during pe.
#

CPP  = gcc -E
MAKE = make

all: xmakefile
	$(MAKE) -f xmakefile\
        "C_FLAGS  = -Dcrts -D${MACHINETYPE} "\
        "C_OPT = -O6 -Wuninitialized -Wunused $(PROF) $(DEMO)" \
	"MAIN = c.common.o"


debug: xmakefile
	$(MAKE) -f xmakefile \
        "C_FLAGS  = -Dcrts -D${MACHINETYPE} -DRTDEBUG -DRTVALHALLA"\
        "C_OPT = -save-temps -O6 -g -Wuninitialized -Wunused  $(PROF)" \
	"MAIN = c.common.debug"

xmakefile: ymakefile-C
	rm -f xmakefile
	cp ymakefile-C ymakefile.c
	$(CPP) -undef -Dcrts ymakefile.c |\
	sed -e 's/^#.*//' -e 's/^[ \f\t][ \f\t]*$$//' -e 's/^ //' |\
	sed -n -e '/^..*$$/p' > xmakefile
	rm ymakefile.c

clean: xmakefile
	$(MAKE) -f xmakefile clean "MAIN = dummy"
	-rm -f xmakefile *.o *.debug

ymakefile-C:

