/*
 * BETA RUNTIME SYSTEM, Copyright (C) 1991 Mjolner Informatics Aps.
 * ymakefile-C
 * by Lars Bak
 */
MAKEFILE = Makefile

ORD_SRC  = end.c initialize.c betaenv.c outpattern.c argument.c property.c exit.c cbfa.c wordsort.c \
	   dot.c valhallaComm.c valhallaFIFOS.c valhallaFindComp.c

#ifdef sun
#  ifndef sparc
#    define sun3
#  endif
#endif

#ifdef sun3
EXT_SRC  =  stat.c sighandler.c
#else
#ifndef macintosh
EXT_SRC  =  sighandler.c
#endif
#endif
/* dumper.c seems not to be in use anymore */

GEN_SRC  = data.gen export.h declare.h
#ifdef sparc
INC_SRC  = macro.h beta.h define.h constant.h heap.h object.h function.h sparcdep.h
#else
INC_SRC  = macro.h beta.h define.h constant.h heap.h object.h function.h
#endif

SOURCES  = $(Makefile) $(ORD_SRC) $(EXT_SRC) $(GEN_SRC) $(INC_SRC)
#ifdef hppa
OBJFILES  = $(ORD_SRC:.c=.o) $(EXT_SRC:.c=.o)
#else
OBJFILES  = $(ORD_SRC:.c=.o) $(EXT_SRC:.c=.o) data.o
#endif

#if defined(__GNUC__)
CC	 = gcc-2.5.8 -Wall
CPP      = gcc-2.5.8 -E -P $(C_FLAGS)
#endif

#ifdef macintosh
CC       = C
CPP      = gcc -E -P -Dmacintosh $(CPP_FLAGS)
#endif

INCLUDES = $(INC_SRC) data.h

CC_OPT  = $(C_OPT) $(C_FLAGS)

$(MAIN): $(OBJFILES) data.o

#ifdef macintosh
	lib -o $@ $(OBJFILES)
#else
#ifdef hppa
	ld -r -o $@ $(OBJFILES) data.o
#else
#ifdef sun4s
	ld -dn -r -o $@ $(OBJFILES)
#else
	ld -r -o $@ $(OBJFILES)
#endif
#endif
#endif

data.c: data.gen declare.h
	@echo 'generating data.c'
	@echo '#include <stdio.h>' > data.c
	@echo '#include "heap.h"' >> data.c
	@echo '#include "macro.h"' >> data.c
	cat declare.h data.gen > tmpdata.c
	$(CPP) tmpdata.c | sed -n -e '/^..*$$/p' >> data.c
	rm -f tmpdata.c
	@echo done

data.h: data.gen export.h
	@echo 'generating data.h'
	cat export.h data.gen > tmpdata.c
	$(CPP) tmpdata.c |\
	sed -n -e '/^..*$$/p' > data.h
	rm -f tmpdata.c
	@echo done

$(OBJFILES): $($@:.o=.c) $(INCLUDES) $(GEN_SRC)
#ifdef macintosh
	$(CC) -o $@ $(CC_OPT) $(@:.o=.c)
#else
	$(CC) -c $(CC_OPT) $(@:.o=.c)
#endif

#ifdef linux
data.o: data.c
	$(CC) -c $(CC_OPT) $(@:.o=.c)
#endif

#ifdef hppa
data.o:	data.c
	cc -c $(CC_OPT) data.c
#endif

clean: 
	-rm -f $(OBJFILES) *~ *.s *.i; touch data.gen

srclist:
	@echo $(SOURCES) | tr -s " " "\012"
