#
# Generic Makefile for betarun/C
#

CPP  = cc -E
MAKE = make

all: xmakefile
	$(MAKE) -f xmakefile\
        "C_FLAGS  = "\
        "C_OPT    = -O2 -fullwarn $(PROF)" \
	"MAIN     = c.common.o"

valhalla: xmakefile
	$(MAKE) -f xmakefile\
        "C_FLAGS  = -DRTVALHALLA"\
        "C_OPT    = -O2 -fullwarn $(PROF)" \
	"MAIN     = c.common.valhalla"

debug: xmakefile
	$(MAKE) -f xmakefile \
        "C_FLAGS  = -DRTDEBUG"\
        "C_OPT    = -g3 -O2 -fullwarn $(PROF)" \
	"MAIN     = c.common.debug"

xmakefile: ymakefile-C
	rm -f xmakefile
	cp ymakefile-C ymakefile.c
	$(CPP) ymakefile.c |\
	sed -e 's/^#.*//' -e 's/^[ \f\t][ \f\t]*$$//' -e 's/^ //' |\
	sed -n -e '/^..*$$/p' > xmakefile
	rm ymakefile.c

clean: xmakefile
	$(MAKE) -f xmakefile clean MAIN=dummy
	-rm -f xmakefile *.o *.valhalla *.debug tmpdata.c

ymakefile-C:
	touch ymakefile-C

