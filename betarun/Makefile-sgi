#ABI	= -n32 -woff 1209
ABI	= -32

#########  betarun.o / betarun.a  ########

betarun.o: C/c.common.o NEWRUN/c.run.o GC/c.gc.o P/c.p.o 
	ld $(ABI) -r -o betarun.o C/c.common.o NEWRUN/c.run.o GC/c.gc.o P/c.p.o 

betarun.a: C/c.common.o NEWRUN/c.run.o GC/c.gc.o P/c.p.o
	mv C/end.o end.o
	rm C/c.common.o NEWRUN/c.run.o GC/c.gc.o P/c.p.o betarun.a
	ar -r betarun.a C/*.o GC/*.o NEWRUN/*.o P/*.o 

C/c.common.o: ALWAYS
	cd C;  make -f Makefile-sgi ABI=$(ABI) PROF="$(PROF)" PE=$(PE)

NEWRUN/c.run.o: ALWAYS
	cd NEWRUN; make -f Makefile-sgi ABI=$(ABI) PROF="$(PROF)"

GC/c.gc.o: ALWAYS
	cd GC; make -f Makefile-sgi ABI=$(ABI) PROF="$(PROF)" 

P/c.p.o: ALWAYS
	cd P;  make -f Makefile-sgi ABI=$(ABI) PROF="$(PROF)" PE=$(PE)

######### betarun_v.o / betarunv.a  #########

betarun_v.o: C/c.common.valhalla NEWRUN/c.run.valhalla GC/c.gc.valhalla P/c.p.valhalla
	ld $(ABI) -r -o betarun_v.o C/c.common.valhalla NEWRUN/c.run.valhalla GC/c.gc.valhalla P/c.p.valhalla

betarunv.a: C/c.common.valhalla NEWRUN/c.run.valhalla GC/c.gc.valhalla P/c.p.valhalla
	mv C/end.o end.o
	rm C/c.common.valhalla NEWRUN/c.run.valhalla GC/c.gc.valhalla P/c.p.valhalla betarunv.a
	ar -r betarunv.a C/*.o GC/*.o NEWRUN/*.o P/*.o

betarun_pe.o: C/c.common.valhalla GC/c.gc.valhalla NEWRUN/c.run.valhalla P/c.p.valhalla
	ld $(ABI) -r -o betarun_pe.o C/c.common.valhalla NEWRUN/c.run.valhalla GC/c.gc.valhalla P/c.p.valhalla

C/c.common.valhalla: ALWAYS
	cd C;  make -f Makefile-sgi valhalla ABI=$(ABI) PROF="$(PROF)" PE=$(PE)

NEWRUN/c.run.valhalla: ALWAYS
	cd NEWRUN; make -f Makefile-sgi valhalla ABI=$(ABI) PROF="$(PROF)"

GC/c.gc.valhalla: ALWAYS
	cd GC; make -f Makefile-sgi valhalla ABI=$(ABI) PROF="$(PROF)"

P/c.p.valhalla: ALWAYS
	cd P;  make -f Makefile-sgi valhalla ABI=$(ABI) PROF="$(PROF)" PE=$(PE)

valhalla: betarun_v.o

pe:
	rm -f C/c.common.valhalla C/initialize.o
	sh -c 'PE="-DPE"; export PE; make -f Makefile-sgi betarun_pe.o'
	rm -f C/c.common.valhalla C/initialize.o

######### betarun_debug.o ##########

debug: betarun_debug.o

betarun_debug.o: C/c.common.debug NEWRUN/c.run.debug GC/c.gc.debug P/c.p.debug
	ld $(ABI) -r -o betarun_debug.o C/c.common.debug NEWRUN/c.run.debug GC/c.gc.debug P/c.p.debug

C/c.common.debug: ALWAYS
	cd C; make -f Makefile-sgi debug ABI=$(ABI) PROF="$(PROF)"

NEWRUN/c.run.debug: ALWAYS
	cd NEWRUN; make -f Makefile-sgi debug ABI=$(ABI) PROF="$(PROF)" 

GC/c.gc.debug: ALWAYS
	cd GC; make -f Makefile-sgi debug ABI=$(ABI) PROF="$(PROF)"

P/c.p.debug: ALWAYS
	cd P; make -f Makefile-sgi debug ABI=$(ABI) PROF="$(PROF)"

######### betarun_ugc.o (variant of betarun_debug.o) ##########

betarun_ugc.o: C/c.common.ugc GC/c.gc.ugc P/c.p.ugc NEWRUN/c.run.ugc
	ld $(ABI) -r -o betarun_ugc.o C/c.common.debug NEWRUN/c.run.debug GC/c.gc.debug P/c.p.debug

C/c.common.ugc: ALWAYS
	cd C; make -f Makefile-sgi debug ABI=$(ABI) PROF="-Ddo_unconditional_gc $(PROF)"

NEWRUN/c.run.ugc: ALWAYS
	cd NEWRUN; make -f Makefile-sgi debug ABI=$(ABI) PROF="-Ddo_unconditional_gc $(PROF)" 

GC/c.gc.ugc: ALWAYS
	cd GC; make -f Makefile-sgi debug ABI=$(ABI) PROF="-Ddo_unconditional_gc $(PROF)"

P/c.p.ugc: ALWAYS
	cd P; make -f Makefile-sgi debug ABI=$(ABI) PROF="-Ddo_unconditional_gc $(PROF)"

ugc: betarun_ugc.o

########## All ###########

all:
	make -f Makefile-sgi clean
	make -f Makefile-sgi
	make -f Makefile-sgi clean
	make -f Makefile-sgi valhalla
#	make -f Makefile-sgi pe 
	make -f Makefile-sgi clean
	make -f Makefile-sgi ugc
	make -f Makefile-sgi clean
	make -f Makefile-sgi debug

########## Misc ##########

tags:
	etags GC/*.[hc] NEWRUN/*.[hc] C/*.[hc] C/data.gen P/*.[hc] Makefile-* C/Makefile-* GC/Makefile-* NEWRUN/Makefile-*

clean: ALWAYS
	-/bin/rm -f *~
	-/bin/rm -f C/xmakefile GC/xmakefile P/xmakefile NEWRUN/xmakefile CRUN/xmakefile
	cd C; make -f Makefile-sgi clean
	cd NEWRUN; make -f Makefile-sgi clean
	cd GC; make -f Makefile-sgi clean
	cd P; make -f Makefile-sgi clean
	sh -c 'if [ -d TST ]; then cd TST; make clean; fi'

commit:
	cvscom

com:
	cvscom

ALWAYS:
	
