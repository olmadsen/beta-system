#########  betarun.o / betarun.a  ########

betarun.o: C/c.common.o NEWRUN/c.run.o GC/c.gc.o
	ld -32 -r -o betarun.o C/c.common.o NEWRUN/c.run.o GC/c.gc.o

betarun.a: C/c.common.o NEWRUN/c.run.o GC/c.gc.o
	mv C/end.o end.o
	rm C/c.common.o NEWRUN/c.run.o GC/c.gc.o betarun.a
	ar -r betarun.a C/*.o GC/*.o NEWRUN/*.o

C/c.common.o: ALWAYS
	cd C;  make PROF="$(PROF)" PE=$(PE)

NEWRUN/c.run.o: ALWAYS
	cd NEWRUN; make PROF="$(PROF)"

GC/c.gc.o: ALWAYS
	cd GC; make PROF="$(PROF)" 

######### betarun_v.o / betarunv.a  #########

betarun_v.o: C/c.common.valhalla NEWRUN/c.run.valhalla GC/c.gc.valhalla
	ld -32 -r -o betarun_v.o C/c.common.valhalla NEWRUN/c.run.valhalla GC/c.gc.valhalla

betarunv.a: C/c.common.valhalla NEWRUN/c.run.valhalla GC/c.gc.valhalla
	mv C/end.o end.o
	rm C/c.common.valhalla NEWRUN/c.run.valhalla GC/c.gc.valhalla betarunv.a
	ar -r betarunv.a C/*.o GC/*.o NEWRUN/*.o

betarun_pe.o: C/c.common.valhalla GC/c.gc.valhalla NEWRUN/c.run.valhalla
	ld -32 -r -o betarun_pe.o C/c.common.valhalla NEWRUN/c.run.valhalla GC/c.gc.valhalla

C/c.common.valhalla: ALWAYS
	cd C;  make valhalla PROF="$(PROF)" PE=$(PE)

NEWRUN/c.run.valhalla: ALWAYS
	cd NEWRUN; make valhalla PROF="$(PROF)"

GC/c.gc.valhalla: ALWAYS
	cd GC; make valhalla PROF="$(PROF)"

valhalla: betarun_v.o

pe:
	rm -f C/c.common.valhalla C/initialize.o
	sh -c 'PE="-DPE"; export PE; make betarun_pe.o'
	rm -f C/c.common.valhalla C/initialize.o

######### betarun_debug.o ##########

debug: betarun_debug.o

betarun_debug.o: C/c.common.debug NEWRUN/c.run.debug GC/c.gc.debug
	ld -32 -r -o betarun_debug.o C/c.common.debug NEWRUN/c.run.debug GC/c.gc.debug

C/c.common.debug: ALWAYS
	cd C; make debug PROF="$(PROF)"

NEWRUN/c.run.debug: ALWAYS
	cd NEWRUN; make debug PROF="$(PROF)" 

GC/c.gc.debug: ALWAYS
	cd GC; make debug PROF="$(PROF)"

########## All ###########

all:
	make clean
	make
	make clean
	make valhalla
	make pe 
	make clean
	make debug

########## Misc ##########

tags:
	etags GC/*.[hc] NEWRUN/*.[hc] C/*.[hc] C/data.gen Makefile-* C/Makefile-* GC/Makefile-* NEWRUN/Makefile-*

clean: ALWAYS
	-/bin/rm -f *~
	cd C; make clean
	cd NEWRUN; make clean
	cd GC; make clean
	sh -c 'if [ -d TST ]; then cd TST; make clean; fi'

commit:
	cvscom

com:
	cvscom

ALWAYS:
	
