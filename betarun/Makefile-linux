RUNDEPS= \
../GEN/linux/gen \
RUN/AllocateComponent.run \
RUN/AllocateDopartObject.run \
RUN/AllocateItem.run \
RUN/AllocateHeap.run \
RUN/AllocateRefRep.run \
RUN/AllocateStackObject.run \
RUN/AllocateValRep.run \
RUN/AllocateObjectRep.run \
RUN/Attach.run \
RUN/AttachBasicComponent.run \
RUN/Basics.run \
RUN/Callback.run \
RUN/CInterface.run \
RUN/CheckReferenceAssignment.run \
RUN/COM.run \
RUN/ComponentStack.run \
RUN/Constant.run \
RUN/CopyCText.run \
RUN/CopyRefRep.run \
RUN/CopySliceRefRep.run \
RUN/CopySliceValRep.run \
RUN/CopyText.run \
RUN/CopyValRep.run \
RUN/DataRegs.run \
RUN/Declaration.run \
RUN/ExitObjects.run \
RUN/ExtendRefRep.run \
RUN/ExtendValRep.run \
RUN/MakeTextObj.run \
RUN/Misc.run \
RUN/NewRefRep.run \
RUN/NewValRep.run \
RUN/PerformGC.run \
RUN/Structure.run \
RUN/Qua.run \
RUN/Suspend.run \
RUN/linuxadditions.run

MAKE = make --no-print-directory

######### betarun.o #########

betarun.o: linux.o C/c.common.o P/c.p.o GC/c.gc.o 
	ld -x -r -o betarun.o C/c.common.o P/c.p.o GC/c.gc.o linux.o

linux.o: linux.asm
	cp linux.asm linux.c
	gcc -E linux.c > linux.s
	as -o linux.o linux.s
	rm linux.c linux.s

linux.asm: RUN/linux.run RUN/linuxadditions.run $(RUNDEPS)
	../GEN/linux/gen -o linux.asm RUN/linux

C/c.common.o: ALWAYS
	cd C; $(MAKE)

P/c.p.o: ALWAYS
	cd P; $(MAKE)

GC/c.gc.o: ALWAYS
	cd GC; $(MAKE)

######### betarun_v.o #########

betarun_v.o: C/c.common.valhalla P/c.p.valhalla GC/c.gc.valhalla linux.o
	ld -dn -r -o betarun_v.o C/c.common.valhalla P/c.p.valhalla GC/c.gc.valhalla linux.o

betarunv.a: C/c.common.valhalla P/c.p.valhalla GC/c.gc.valhalla linux.o
	mv C/end.o end.o
	rm C/c.common.valhalla P/c.p.valhalla GC/c.gc.valhalla betarunv.a 
	ar -r betarunv.a C/*.o GC/*.o linux.o

betarun_pe.o: C/c.common.valhalla P/c.p.valhalla GC/c.gc.valhalla linux.o
	ld -x -r -o betarun_pe.o C/c.common.valhalla P/c.p.valhalla GC/c.gc.valhalla linux.o

pe:
	rm -f C/c.common.valhalla C/initialize.o
	PE="-DPE"; export PE; $(MAKE) betarun_pe.o
	rm -f C/c.common.valhalla C/initialize.o

C/c.common.valhalla: ALWAYS
	cd C;  $(MAKE) valhalla PROF="$(PROF)" PE=$(PE)

P/c.p.valhalla: ALWAYS
	cd P;  $(MAKE) valhalla PROF="$(PROF)" PE=$(PE)

GC/c.gc.valhalla: ALWAYS
	cd GC; $(MAKE) valhalla PROF="$(PROF)"

valhalla: betarun_v.o

######### betarun_debug.o ###################

betarun_debug.o: C/c.common.debug P/c.p.debug GC/c.gc.debug linux-debug.o
	ld -r -o betarun_debug.o C/c.common.debug P/c.p.debug GC/c.gc.debug linux-debug.o

C/c.common.debug: ALWAYS
	cd C; $(MAKE) debug

P/c.p.debug: ALWAYS
	cd P; $(MAKE) debug

GC/c.gc.debug: ALWAYS
	cd GC; $(MAKE) debug

linux-debug.o: linux-debug.asm
	cp linux-debug.asm linux-debug.c
	gcc -E linux-debug.c > linux-debug.s
	as -o linux-debug.o linux-debug.s
	rm linux-debug.c linux-debug.s

linux-debug.asm: RUN/linux.run RUN/linuxadditions.run $(RUNDEPS)
	../GEN/linux/gen -debug -o linux-debug.asm RUN/linux

asm: linux-debug.asm

debug: betarun_debug.o

######### betarun_ugc.o (variant of betarun_debug.o) ##########

betarun_ugc.o: C/c.common.ugc GC/c.gc.ugc P/c.p.ugc linux-ugc.o
	ld -r -o betarun_ugc.o linux-ugc.o C/c.common.debug GC/c.gc.debug P/c.p.debug

C/c.common.ugc: ALWAYS
	cd C; $(MAKE) debug PROF="-Ddo_unconditional_gc $(PROF)"

GC/c.gc.ugc: ALWAYS
	cd GC; $(MAKE) debug PROF="-Ddo_unconditional_gc $(PROF)"

P/c.p.ugc: ALWAYS
	cd P; $(MAKE) debug PROF="-Ddo_unconditional_gc $(PROF)"

linux-ugc.o: linux-ugc.asm
	cp linux-ugc.asm linux-ugc.c
	gcc -E linux-ugc.c > linux-ugc.s
	as -o linux-ugc.o linux-ugc.s
	rm linux-ugc.c linux-ugc.s

linux-ugc.asm: RUN/linux.run RUN/linuxadditions.run $(RUNDEPS)
	../GEN/linux/gen -debug -ugc -o linux-ugc.asm RUN/linux

ugc: betarun_ugc.o


########## All ###########

all:
	$(MAKE) clean
	$(MAKE)
	$(MAKE) clean
	$(MAKE) valhalla
#	$(MAKE) pe 
	$(MAKE) clean
	$(MAKE) ugc
	$(MAKE) clean
	$(MAKE) debug

######### Generator #########

gen:
	cd ../GEN/linux; $(MAKE)

#############################

tags:
	etags RUN/*.run GC/*.[hc] C/*.[hc] P/*.[hc] C/data.gen

check:
	@echo generating list of undefined labels
	@nm betarun.o | grep ' U ' > .new-undefined
	@echo find difference between .old-undefined and .new-undefined
	@diff .old-undefined .new-undefined

gendef:
	@echo generating list of undefined labels
	@nm betarun.o | grep ' U ' > .old-undefined

clean: ALWAYS
	-rm -f *.group *.lst core *.asm *~ linux.s linux-debug.s *.dump
	cd C; $(MAKE) clean MAIN=dummy
	cd P; $(MAKE) clean MAIN=dummy
	cd GC; $(MAKE) clean MAIN=dummy
	@sh -c 'if [ -d TST ]; then cd TST; $(MAKE) clean; fi'

# ALWAYS works with gmake - see section Force Targets in *info*
ALWAYS:
