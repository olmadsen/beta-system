#
# Generic Makefile for betarun/P
#

CPP  = gcc -E
MAKE = make

all: xmakefile
	@$(MAKE) -f xmakefile\
        "C_FLAGS  = -I../C"\
        "C_OPTA   = -O6 $(PROF)" \
        "C_OPTB   = -O6 $(PROF)" \
	"MAIN     = c.p.o"

valhalla: xmakefile
	@$(MAKE) -f xmakefile\
        "C_FLAGS  = -I../C -DRTVALHALLA"\
        "C_OPTA   = -O6 $(PROF)" \
        "C_OPTB   = -O0 -g $(PROF)" \
	"MAIN     = c.p.valhalla"

mt: xmakefile
	@csh -f -c 'make -f xmakefile\
        "C_FLAGS = -I../C -DMT" \
        "C_OPTA  = -O6 $(PROF)" \
        "C_OPTB  = -O6 $(PROF)" \
	"MAIN    = c.p.mt" |& egrep -v "(call-clobbered|included from|                 from )"'

debug_mt: xmakefile
	@csh -f -c 'make -f xmakefile\
        "C_FLAGS = -I../C -DMT -DRTDEBUG" \
        "C_OPTA  = -O6 -g $(PROF)" \
        "C_OPTB  = -O6 -g $(PROF)" \
	"MAIN    = c.p.debug_mt" |& egrep -v "(call-clobbered|included from|                 from )"'

v_mt: xmakefile
	@csh -f -c 'make -f xmakefile\
        "C_FLAGS = -I../C -DMT -DRVALHALLA" \
        "C_OPTA  = -O6 $(PROF)" \
        "C_OPTB  = -O6 $(PROF)" \
	"MAIN    = c.p.v_mt" |& egrep -v "(call-clobbered|included from|                 from )"'

debug: xmakefile
	@$(MAKE) -f xmakefile\
        "C_FLAGS  = -I../C -DRTDEBUG"\
        "C_OPTA   = -O6 -g $(PROF)" \
        "C_OPTB   = -O0 -g $(PROF)" \
	"MAIN     = c.p.debug"

fastdebug: xmakefile
	@$(MAKE) -f xmakefile\
        "C_FLAGS  = -I../C -DRTDEBUG -DFASTDEBUG"\
        "C_OPTA   = -O0 -g $(PROF)" \
        "C_OPTB   = -O0 -g $(PROF)" \
	"MAIN     = c.p.fastdebug"

xmakefile: ymakefile-P
	@echo "Making xmakefile"
	@rm -f xmakefile
	@cp ymakefile-P ymakefile.c
	@$(CPP) ymakefile.c |\
		sed -e 's/^#.*//' -e 's/^[ \f\t][ \f\t]*$$//' -e 's/^ //' |\
		sed -n -e '/^..*$$/p' > xmakefile
	@rm ymakefile.c

clean: xmakefile
	@$(MAKE) -f xmakefile clean MAIN=dummy
	@-rm -f xmakefile *.o *.valhalla *.debug *.mt

ymakefile-P:
	touch ymakefile-P
