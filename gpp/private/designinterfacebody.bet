                                    FrejaFile.name->msg.puttext;
                                    '# into '->msg.puttext;
                                    FrejaFile.name->msg.puttext;
                                    msg->THIS(checkAutoSaveFile).error;
                                    leave thisOp
                                 #)
                            #);
                        true->doRecover
                     // no then
                        'rm .freja#'->putLine;
                        autosaveFrejaFile.delete;
                        true
                          ->doNotRecover
                          (* else
                           '.freja~ does not exist!!'->putLine
