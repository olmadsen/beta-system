-- scanASTfiles: Descriptor --
(# f: @file; t: ^Text
do
   name[]->f.name;
   (if f.entry.exists then
       (if f.entry.readable then
           f.openRead;
           loop:
             (# 
             do
                (if not f.eos then
                    f.getLine->t[];
                    (if t[] = none then leave loop if);
                    t.reset;
                    t.getAtom->currentGroupName[];
                    f.getline->t[];
                    (if t[] = none then leave loop if);
                    t.reset;
                    t.getInt->currentModTime;
