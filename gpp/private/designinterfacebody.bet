     enter theID
     do
        theID->MenuBar.findMenu->theMenu[];
        (if theMenu[] <> none then
            theMenu[]->MenuBar.remove; theID->DSMenuDeleteMenu
        if);
        
     #);
   pages: ^ObjectList
do
   UserMenu1->CheckMenu;
   UserMenu2->CheckMenu;
   (* UserMenu3 is the fileMenu - do not remove! *)
   UserMenu4->CheckMenu;
   UserMenu5->CheckMenu;
   UserMenu6->CheckMenu;
   UserMenu7->CheckMenu;
   UserMenu8->CheckMenu;
   UserMenu9->CheckMenu;
   UserMenu10->CheckMenu;
   DSMenuShowMenuBar;
   theDocument.GetPages->pages[];
   (if pages[]
    // none then 
    else
       pages.scan
         (# dummy: ^theDocument.Page
         do
            current[]->dummy[];
            (if dummy[]
             // none then 'CloseItem: Page is node'->putline; 
             else
                dummy.close
            if);
            
         #);
       
   if);
   theDocument.close
#)  

