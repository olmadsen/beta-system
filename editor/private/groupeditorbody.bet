     (# f: @file; t,msg: ^text
     do
        UI.fileCreationDialog->t[];
        (if t[] <> none then
            t[]->f.name;
            f.name->editorenvPrivate.stripExtension->f.name;
            (if f.name->editorenvPrivate.fileWriteable then
                doCommand
                  (# 
                  do
                     'Saving group as '->msg[];
                     f.name->newName[]->msg.append;
                     '...'->msg.append;
                     msg[]->ymerCallBack.infoView;
                     (*  fg[]->editorenvPrivate.ASTGC;
