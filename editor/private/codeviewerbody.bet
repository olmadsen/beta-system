-- codeviewerSetFocus: Descriptor --
(# found: @boolean
do
   (if newCS.node[] <> none then
       (if true (*checkExistence*) then
           (newCS.node[],editorRoot[])->isNodeInTree->found;
           (if not found then
               (if not (editorRoot[]->frag.root.equal) (* is a subeditor *)
                then
                   (newCS.node[],frag.root[])->isNodeInTree->found;
                   (if found then
                       (newCS.node[],frag.root[])->openSubeditor
                    else
                       nodeNotFound
                   if)
                else
                   nodeNotFound
               if)
           if)
        else
           true->found
       if);
       (if found then
           newCS->cs;
           checkSon;
           (true,cs)->aFocusChangedEvent;
           (if scrollIntoView then theSifTexteditor.scrollIntoView if)
       if)
    else
       'SetFocus: newCS.node is none!!'->putLine; nodeNotFound
   if)
#)  

