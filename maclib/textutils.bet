truncEnd: 		(# exit 0 #);
truncMiddle: 	(# exit 0x4000 #);

Truncated: 		(# exit 1 #);
NotTruncated: 	(# exit 0 #);
TruncErr: 		(# exit -1 #);
resNotFound: 	(# exit -192 #);


TruncString: External
	(# width: @shortint;
		string: ^PascalString;
		truncWhere: @shortInt;
		err: @shortInt;
	enter (width, string[], truncWhere)
	do '{$2F3C, $8208, $FFE0, $A8B5}' -> pascalTrap;
	exit err
	#);
