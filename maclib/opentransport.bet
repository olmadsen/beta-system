ORIGIN 'mactypes';

BUILD default ':$$/opentransportglue.obj' ':external/opentransportglue.c' 'mrc -proto strict -o $0 $1';

-- lib: attributes --

kOTNoError: (# exit 0 #);
kOTNoDataError: (# exit -3162 #);


HostnameToIP: external
	(# name: [1] @char;
		address: ^longInt;
		status: @integer;
	enter (name, address[])
	exit status
	#);

OpenEndpoint: external
	(# endpoint: ^longInt;
		status: @integer;
	enter endpoint[]
	exit status
	#);
Bind: external
	(# endpoint: @integer;
		host: @integer;
		port: @integer;
		status: @integer;
	enter (endpoint, host, port)
	exit status
	#);
Connect: external
	(# endpoint: @integer;
		host: @integer;
		port: @integer;
		status: @integer;
	enter (endpoint, host, port)
	exit status
	#);
Send: external
	(# endpoint: @integer;
		buffer: @integer;
		size: @integer;
		result: @integer;
	enter	(endpoint, buffer, size)
	exit result
	#);
Recieve: external
	(# endpoint: @integer;
		buffer: @integer;
		size: @integer;
		result: @integer;
	enter (endpoint, buffer, size)
	exit result
	#);

