ORIGIN '~beta/guienv/guienv';
INCLUDE 'mpsinterface';
INCLUDE 'localdumper';
INCLUDE 'UI/objectview';

--- windowLib:attributes ---

windowedbrowser: 
  (# viewFather: ^Canvas;
     
     objectViewType:<
     (* Furtherbind to specify precise type of moveableObjectView
      * to be used for new objectrepresentations in the objectbrowser
      *) moveableObjectView;
     
     mpsinterfaceType:< mpsinterface
       (# od: @localdumper;
          init::< 
            (# 
            do (AST[],BETACFL[])->od.init; INNER
            #)
       #);
     be: @mpsinterfaceType;
     
     init:< 
       (# 
       enter viewFather[]
       do be.init;
          INNER;
       #);
     
     showObject:
       (# obj: ^object; bo: ^be.localBetaObject;
       enter obj[]
       do (be.od[],obj[])->be.newLocalObject->bo[];
          (bo[],FALSE) -> OpenMoveableObjectView
          (# moveableObjectViewType:: ObjectViewType;
             getFather:: (# do viewFather[]->father[] #)
          #)
       #);
  #);
