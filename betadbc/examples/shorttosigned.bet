ORIGIN '~beta/basiclib/v1.6/betaenv';
INCLUDE '~beta/basiclib/v1.6/formatio';
-- program: Descriptor --
(#
   shortIntToSigned: integerValue
     (# k: (* 8 bit unsigned half *) @shortInt
     enter k
     do
        k->value;
        (if value >= 32768 then - (65536-value)->value if);
        'value = %i, k mod 32768 = %i, k = %i\n'
          ->putFormat (#  do value->i; k mod 32768->i; k->i #)
     #)
do 65535->shortIntToSigned
#)  

