ORIGIN '~beta/basiclib/v1.6/betaenv';
INCLUDE '../bdbc'
        'executesqlfilelib';
-- program: Descriptor --
(# theFile: @file
do
   (if (noOfArguments >= 3) and (noOfArguments <= 5) then
       2->arguments->theFile.name;
       theFile.openRead;
       (if noOfArguments
        // 3 then
           (theFile[],3->arguments,none ,none )->executesqlfile
        // 4 then
           (theFile[],3->arguments,4->arguments,none )->executesqlfile
        // 5 then
           (theFile[],3->arguments,4->arguments,5->arguments)->executesqlfile
       if);
       theFile.close
    else
       'Usage: executesqlfile <sqlfile> <datasource> [<username> [<password>]]'
         ->putLine
   if)
#)  

