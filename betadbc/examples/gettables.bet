ORIGIN '~beta/basiclib/betaenv';
INCLUDE '~beta/basiclib/formatio'
        '../bdbc';
-- program: Descriptor --
(#
   myCon: @Connection;
   tables: ^myCon.info.tableList;
   user,password,con: ^text
do
   'Connect to: '->puttext;
   getline->con[];
   'Username: '->puttext;
   getline->user[];
   'Password: '->puttext;
   getline->password[];
   (con[],user[],password[])->myCon.open;
   myCon.info.getTables->tables[];
   tables.scan
     (# j: @integer; t: ^text
     do
        j+1->j;
        'Table %i\n'->putFormat (#  do j->i #);
        ' CatalogName: %s\n SchemaName: %s\n TableName: %s\n'->t[];
        ' TableType: %s\n'->t.append;
        t[]
          ->putFormat
            (# 
            do
               current.catalogName[]->s;
               current.schemaName[]->s;
               current.tableName[]->s;
               current.tableType[]->s;
               
            #);
        
     #)
#)  

