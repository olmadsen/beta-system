ORIGIN '~beta/X11/Misc/xterm';

(* Demo showing use of the xterm interface *)

--program: descriptor--
systemenv
(# 
do 'New xterm title: ' -> screen.puttext;
   keyboard.getline -> setXtermTitle;
   'New xterm icon name: ' -> screen.puttext;
   keyboard.getline -> setXtermIconName;
   'Now starting process \'/bin/ls -l -a\' in another xterm.'->screen.putline;
   ('/bin/ls', '-l -a', 'Directory List', true) ->  startCommandInXterm;
