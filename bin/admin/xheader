#!/usr/local/bin/perl

$term   = "$ENV{'TERM'}";
$header = "$ARGV[0]";

if ($term eq "xterm" ||  $term eq "vs100"){
    # dynamically set the name stripe of the xterm window:
    print "\033]2;$header\007"
    }
elsif ($term eq "hp2622") {
    # dynamically set the name stripe of the hpterm window:
    $length = length($header);
    print("\033&f0k$length" . "D$1");
}

