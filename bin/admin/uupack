#!/bin/sh

if [ $# -eq 0 ]
then
  echo usage: $0 files
  exit 1
fi

for f do
  case $f in 
  */) echo "$0: No terminating slash allowed ($f)"; exit 1;;
  esac
done

echo making $1.tar ...
tar cvf $1.tar $*

echo compressing ...
compress $1.tar

echo making $1.tar.Z.uu ...
uuencode $1.tar.Z $1.tar.Z > $1.tar.Z.uu

echo clean up ...
/bin/rm -f $1.tar.Z 
	