#!/usr/local/bin/perl5 -s
#-*-Perl-*-

require "env.perl";

push(@INC, $ENV{'BETALIB'} . "/bin/admin");

if ($h){
    print "Usage: mbs_cvsdiff [-h] [tag]\n";
    print "          -h   Print this help\n";
    print "          tag  CVS tag to diff against\n";
    exit 0;
}

$cvscmd = 'diff -u';
foreach $tag (@ARGV) {
    $cvscmd .= " -r $tag";
}

chdir($betalib) || die "Where is betalib";
print "Changed directory to '$betalib'\n";

system("cvs $cvscmd");
