#!/usr/local/bin/perl5 -s
#-*-Perl-*-

push(@INC, $ENV{'BETALIB'} . "/bin/admin");

if ($h){
    print "Usage: mbs_cvsdiff [-h] [tag]\n";
    print "          -h   Print this help\n";
    print "          -v   Verbose output\n";
    print "          -n   No effects - only print what would be done\n";
    print "          tag  CVS tag to diff against\n";
    exit 0;
}

require "cvsroot";
require "dirlist";


$cvscmd = 'diff -u';
foreach $tag (@ARGV) {
    $cvscmd .= " -r $tag";
}

print "Doing 'cvs $cvscmd' in $betalib\n";

foreach $dir (@Dirs) {
    if ($CvsTags{$dir} =~ /^\%(\S+)/) {
	next if ($1 eq 'IGNORE');
	next if ($1 eq 'NONCVS');
	print "Unknown '%'-tag in CvsTag: \"$1\", skipping $dir\n";
	next;
    }
    $basedir = "$betalib/$dir";
    next if (!-d &path($basedir));
    print "****  cvs diff in $basedir ****\n";
    chdir &path($basedir) or die "Unable to chdir: $!";
    &cvs($cvscmd);
# Not a good idea, as diff returns -1 if it finds something... exit(1) if ($?);
}
