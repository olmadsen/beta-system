#! /usr/local/bin/perl5
#-*-Perl-*-

$betalib=$ENV{'BETALIB'} || "/users/beta";
$betalib =~ s#\\#/#g;

#---------- configuration ------------

$RELEASE="r4.0";

#---------- don't change below -------

$dirs=require "$betalib/bin/admin/dirlist4.0";

print "checking if cvs commit is needed (by means of cvs diff) in $RELEASE\n";

foreach $dir (split ' ', $dirs) {
    ($basedir ="$betalib/$dir") =~ s#/$##;
    next if (! -d $basedir);
    print "**************** cvs diff in $basedir\n";
    chdir $basedir or die "Unable to chdir: $!";
    system 'cvs diff';
}
