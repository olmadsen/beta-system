#!/usr/local/bin/perl5
#-*-Perl-*-

# usage: mailto recipient subject
#
# sends standard input to 'recipient' with subject 'subject'.

$mailer="/usr/lib/sendmail -t";

die "usage: $0 recipient subject\n" if ($#ARGV != 1);
    
$header.= "To: $ARGV[0]\n";
$header.= "Subject: $ARGV[1]\n";
$header.= "\n";

open (MAILER,"|$mailer");
print MAILER $header;
while (<STDIN>){ print MAILER; }
close MAILER;
