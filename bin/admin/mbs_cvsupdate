#!/usr/local/bin/perl5 -s
#-*-Perl-*-

if ($h){
    print "Usage: mbs_cvsupdate [ -h | -u | -s | -f | -c ]\n";
    print "          -h   Print this help\n";
    print "          -u   Use defaults - ask no questions\n";
    print "          -s   Skip check of .bet/.ast consistency after update\n";
    print "          -f   Fast mode - skip update of some directories, e.g. doc\n";
    print "          -c   Skip RCM update of compiler\n";
    exit 0;
}

$UseDefaults = 1 if ($u);
$SkipBetCheck = 1 if ($s);
$FastMode = 1 if ($f);
$SkipCompiler = 1 if ($c);

push(@INC, $ENV{'BETALIB'} . "/bin/admin");

require "dirlist";

print "This script will do a 'cvs update' in each directory in $betalib.\n";
if (!$UseDefaults) {
    print "Are you sure that you want to update in all of these directories? (no/yes) ";

    $yes = &GetAnswer();
    exit if ($yes ne 'yes');

    print "\nWould you like to be prompted for each directory? (yes/no) ";
    $doprompt = &GetAnswer();
} else {
    $doprompt = 'no';
}

print "Updating bin and bin/admin...\n";
chdir &path("$betalib/bin") or die "Unable to chdir: $!";
&cvs("-q update -Pd") if (!$simulate);
&ParseDirlist;			# Reparse dirlist, as it may have changed.

print "Checking out missing modules, if any...\n";

$UseDefaults = 1; $quiet = 1;
require "mbs_cvsget";

if ($FastMode) {
    print "---- Fast mode:    compiler skipped ---\n";
} elsif ($SkipCompiler) {
    print "---- Invoked -c:   compiler skipped ---\n";
} else {
    print "**** rcm update in compiler ****\n";
    require "mbs_rcmgettip";
}

foreach $dir (@Dirs) {
    if ($CvsTags{$dir} =~ /^\%(\S+)/) {
	next if ($1 eq 'IGNORE');
	next if ($1 eq 'NONCVS');
	print "Unknown '%'-tag in CvsTag: \"$1\", skipping $dir\n";
	next;
    }
    $basedir = "$betalib/$dir";
    next if (!-d &path($basedir));
    if (!-d &path("$basedir/CVS")) {
	print "Missing CVS directory in $dir!  Skipping! \n";
	print "If you want to update $dir, please rename it and restart.\n";
	next;
    }
    if ($doprompt eq "yes"){
	print  "\nPerform 'cvs update' in \n";
	print "  $basedir? (y/n/q) ";
	$answer = &GetAnswer();
	if ($answer eq "y"){
	    # just go on
	} elsif ($answer eq "n"){
	    next;
	} elsif ($answer eq "q"){
	    exit 0;
	}
    } else {
	if (($FastMode) && ($basedir =~ m%(/doc$|/betarun|/grammars|/contrib)%)){
	    print "---- Fast mode:    $basedir skipped ---\n";
	    next;
	} else {
	    print "**** cvs update in $basedir ****\n";
	}
    }
    chdir &path($basedir) or die "Unable to chdir: $!";
    &cvs("-q update -Pd") if (!$simulate);
    if ($?) {
	print "CVS command failed - probably due to conflicts.\n";
	exit(1);
    };
}

if ($FastMode){
    print "Fast mode: Check for .bet/.ast consistency skipped.\n";
} else {
    $UseDefaults=1;
    require &path("$betalib/bin/admin/mbs_checkbet") if (!$SkipBetCheck);
}
