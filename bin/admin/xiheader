#!/usr/local/bin/perl -s
#datpete: deliberately changed back to perl(4) because of lacking perl5 on hpux9pa

$term   = "$ENV{'TERM'}";
$header = "$ARGV[0]";

if ($term eq "xterm" ||  $term eq "vs100"){
    # dynamically set the label on the xterm icon:
    print "\033]1;$header\007"
    }
elsif ($term eq "hp2622") {
    # dynamically set the label on the hpterm icon:
    $length = length($header);
    print("\033&f-1k$length" . "D$1");
}
