#!/usr/local/bin/perl -s
#-*-Perl-*-

push(@INC, $ENV{'BETALIB'} . "/bin/admin");

if ($h){
    print "Usage: mbs_help [-h]\n";
    print "          -h   Print this help\n";
    print "          -v   Verbose output\n";
    print "          -n   No effects - only print what would be done\n";
    print "       Lists usage for all mbs_* scripts\n";
    exit 0;
}

require "env.perl";

opendir (DIR, $betalib . "/bin/admin") or die "Unable to readdir: $!";
foreach $f (readdir(DIR)) {
    push (@MBS,$f) if ($f =~ m/^mbs_/);
}

@MBS = sort @MBS;

foreach $f (@MBS){
    print "\n";
    system("$f -h");
}
