#!/bin/sh

# config:
BETALIB=/usr/local/lib/beta/r5.4		# destination BETALIB
HOST=daimi			       		# host for BETALIB
SOURCE=/users/beta/r5.4/export/tarfiles	        # where to find the files
#ARCHITECTURES="sun4s linux sgi hpux9pa"
ARCHITECTURES="sun4s linux sgi"
PACKAGES="bifrost contrib frigg lib lidskjalv mjolnertool system xt yggdrasil doc"
#Non-installed packages: com ymer

# don't change below

if [ `hostname` != $HOST ]
then
  echo $0: only on $HOST
  exit 1
fi

if [ ! -d $BETALIB ]
then
  echo $0: the new betalib "$BETALIB" does not exist.
  exit 1
fi

echo ""
echo "****** THIS WILL INSTALL BETA IN $BETALIB *****"
echo ""
echo -n "Are you sure that this is what you want to do? "
read answer 
if [ "$answer" != "yes" ]
then
  exit 0
fi

cd $BETALIB

echo ""
echo Changing access permissions for $BETALIB.
echo If this script fails or is interrupted, please issue the
echo command \'chmod 755 $BETALIB\' 
echo to re-open for access to $BETALIB.

chmod 700 $BETALIB

echo ""
echo Changing permissions in $BETALIB...
chmod -R u+w .

for machine in $ARCHITECTURES
do
  echo Installing for $machine
  for package in $PACKAGES
  do
     echo Installing $package for $machine ....
     cat $SOURCE/${machine}.pe/$package.tar.* | gunzip | tar xf -
  done
done

echo ""
echo Restoring access permissions for $BETALIB.

chmod 755 $BETALIB
chmod -R a-w $BETALIB

echo ""
echo Edit configuration/homeDirectories to match the installation path.
echo Check that output from pwd is included.
echo ""
echo Setup statistics.
echo   - See http://www.mjolner.com/Quality/beta/statistik.txt
echo ""
echo Make sure statistics is on in all toolscripts, check for:
echo     'BETASTAT=${BETASTAT-yes}'  
echo     'BETAREPORT=${BETAREPORT-yes}'  
echo in {beta,mjolner}
echo ""
echo Then check if contrib has been compiled, it should be.
echo If it isnt, compile it manually for the architectures: $ARCHITECTURES.
echo ""
echo Then check using the sigurd account that it is working, including the
echo statistics by using 'tail' on the stat-files.  To do this:
echo      setenv BETALIB $BETALIB
echo On SGI, also: setenv LD_LIBRARY_PATH $BETALIB/lib/sgi
echo ""
echo Then copy the following files needed to link programs using MySQL:
echo (assuming you are standing in /usr/local/lib/beta/)
echo from: <next-to-newest release>/lib/linux/libmysqlclient.a
echo   to: <new release>/lib/linux/
echo ""
echo from: <next-to-newest release>/lib/sun4s/libmysqlclient.a
echo   to: <new release>/lib/sun4s/
echo ""
echo from: <next-to-newest release>/lib/sgi/libmysqlclient.a
echo   to: <new release>/lib/sgi/
echo ""
echo from: <next-to-newest release>/lib/sgi/libmysqlclient.so.11.0
echo   to: <new release>/lib/sgi/
echo ""

