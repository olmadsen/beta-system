#!/usr/local/bin/perl5 -s
#-*-Perl-*-

require "env.perl";

foreach $curdir ($CURRENTDIR, &GetDirsRecursively($CURRENTDIR)) {
    print "Examining $curdir\n" if ($verbose);
    @files = &GetFilesInDirs($curdir);
    foreach $file (@files) {
	next if (-l $file || -d _);
	if (-x _ || -X _) {
	    ($dev,$ino,$mode,$nlink,$uid,$gid,$rdev,$size,@rest)
		= stat($file);
	    printf("%9s $file*\n", $size);
	    print "Remove? (y/n) ";
	    $y = &GetAnswer;
	    if ($y eq 'y') {
		unlink $file unless ($simulate);
	    }
	}
    }
}

