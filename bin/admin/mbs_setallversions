#!/usr/local/bin/perl5 -s
#-*-Perl-*-

push(@INC, $ENV{'BETALIB'} . "/bin/admin");

if ($h){
    print "Usage: mbs_setallversions [-h]\n";
    print "          -h   Print this help\n";
    print "          -v   Verbose output\n";
    print "          -n   No effects - only print what would be done\n";
    print "       Sets versions in paths (OBSOLETE)\n";
    exit 0;
}

require "dirlist";

foreach $dir (@Dirs) {
    if ($dir =~ /^([^\/]+)\/(v\d+\.\d+)/) {
	$Versions{$1} = $2;
    } else {
	print "Problem: $dir\n";
    }
}

foreach $mod (sort keys %Versions) {
    $vstring .= "$mod $Versions{$mod} ";
}

print "\n$vstring\n";
