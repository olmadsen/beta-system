#!/usr/local/bin/perl5 -s
#-*-Perl-*-

require "dirlist";

print "This script will set the versions in ALL files in $betalib to the \n";
print "versions mentioned in dirlist.txt. Do you want to do this? (y/n)? ";
$ask = &GetAnswer();
exit(0) if ($ask ne "y");

foreach $dir (@Dirs) {
    if ($dir =~ /^([^\/]+)\/(v\d+\.\d+)/) {
	$Versions{$1} = $2;
    } else {
	print "Problem: $dir\n";
    }
}

# print "Result:\n", %Versions, "\n";

foreach $mod (sort keys %Versions) {
    $vstring .= "$mod $Versions{$mod} ";
}

print "\n$vstring\n";
