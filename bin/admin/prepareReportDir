#!/bin/sh
# $1 is the name of the tool
# pwd must be STATLOCATION
# argument 1 must be APPLICATION
# REPORTDIR is 'reports'

mkdir $1
cd $1
touch "$1"stat
chmod a+w "$1"stat
mkdir reports
chmod a+w reports
ls -l
cd reports/
touch index.html
cat >$1.counter <<EOF
0
EOF
chmod a+w index.html $1.counter
ls -l
echo $1.counter:
head $1.counter
