#!/usr/local/bin/perl5 -s
#-*-Perl-*-

push(@INC, $ENV{'BETALIB'} . "/bin/admin");

if ($h){
    print "Usage: mbs_files [-h]\n";
    print "          -h   Print this help\n";
    print "          -v   Verbose output\n";
    print "          -n   No effects - only print what would be done\n";
    print "       List all toplevel files in BETALIB\n";
    exit 0;
}

require "dirlist";

foreach $dir (@Dirs) {
    if (-d &path("$betalib/$dir")) {
	opendir (DIR, "$betalib/$dir") or die "Unable to readdir: $!";
	foreach (readdir(DIR)) {
	    print "$betalib/$dir/$_\n" if (/\.bet$/);
	}
    }
}
