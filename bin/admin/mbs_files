#!/usr/local/bin/perl5
#-*-Perl-*-

$betalib=$ENV{'BETALIB'} || die "BETALIB must be set!\n";
$betalib =~ s#\\#/#g;

$dirs=require "$betalib/bin/admin/dirlist";

foreach $dir (split ' ', $dirs) {
    if (-d "$betalib/$dir") {
	opendir (DIR, "$betalib/$dir") or die "Unable to readdir: $!";
	foreach (readdir(DIR)) {
	    print "$betalib/$dir$_\n" if (/\.bet$/);
	}
    }
}
