#!/usr/local/bin/perl5 -s
#-*-Perl-*-

push(@INC, $ENV{'BETALIB'} . "/bin/admin");

require "dirlist";

foreach $dir (@Dirs) {
    if (-d &path("$betalib/$dir")) {
	opendir (DIR, "$betalib/$dir") or die "Unable to readdir: $!";
	foreach (readdir(DIR)) {
	    print "$betalib/$dir/$_\n" if (/\.bet$/);
	}
    }
}
