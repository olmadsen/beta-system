#!/bin/sh

# ONLY TO BE USED ON UNIX

echo $0: Not up to date
echo $0: Do not use
exit 1



#------- configuration --------

TAG=r4_0_lazy_fixed
RELEASE=4.0

MODULES="\
Xt \
basiclib \
betaast \
bifrost \
containers \
configuration \
threads \
datastructures \
valhalla \
betademo \
tutorial \
dependency \
designenv \
distribution \
editor \
emacs \
freja \
gpp \
guienv \
interfacebuilder \
man \
meta \
mps \
objectbrowser \
objectserver \
persistentstore \
pretty \
prettygen \
process \
system \
sysutils \
sourcebrowser \
unixlib \
betawc \
betatar \
betafs \
maclib \
win32lib \
"


# not under CVS:
#   bobs
#   bobsgen
#   contrib/changed
#   contrib/futures
#   contrib/gleipner
#   contrib/invariant
#   contrib/rbeta
#   contrib/tcs
#   designlib


#---------- don't change below -------

echonl(){
  if [ -f /usr/bin/sun ]; 
  then 
    echo -n "$1"
  else
    echo "$1\c"
  fi
}

echo ""
echo   "This script will mark all the following CVS modules in release $RELEASE"
echo   "with the tag $TAG (using 'cvs rtag $TAG <module>')."
echo   ""

for d in $MODULES
do
	echo $d
done

echo ""

echonl   "Are you sure that you want to tag all these modules ? (no/yes)"
read answer
if [ "$answer" != "yes" ]; then  exit 0; fi

echo ""
echonl "Really sure? (no/yes) "
read answer
if [ "$answer" != "yes" ]; then  exit 0; fi

for module in $MODULES
do
	echo --------- Tagging $module ---------
	cvs rtag $TAG $module
done

echo ""
echo $0 COMPLETE