push(@INC, $ENV{'BETALIB'} . "/bin/admin");

if ($h){
    print "Usage: mbs_compile_dirs [-h][-u]\n";
    print "          -h   Print this help\n";

    print "          -v   Verbose output\n";

    print "          -n   No effects - only print what would be done\n";
    print "       List all directories in BETALIB which contains libraries to compile\n";
    exit 0;
}

require "dirlist";
foreach $dir (@Dirs) {
    next if (!$CompileFlag{$dir});
    $basedir = "$betalib/$dir";
    next if (!-d &path($basedir));
	print &path($basedir) . "\n";
}
