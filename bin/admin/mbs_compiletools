#!/usr/local/bin/perl5 -s
#-*-Perl-*-

require "env.perl";

# compiler version
$betaopts="-qwl @ARGV";

#---------- don't change below -------

open(STDERR, ">&STDOUT") || die "Can't dup stdout";
select(STDERR); $| = 1;       # make unbuffered
select(STDOUT); $| = 1;       # make unbuffered

print "\nCompiling tools in $betalib with options \"$betaopts\"\n";

print "Ask for each tool (y/n)? ";
$ask = &GetAnswer();
if ($ask ne "n"){ $ask="y"; }


print "$0 STARTED\n";
&PrintDate;

if (($MACHINETYPE eq "NTI") && ($SDK eq "ms")){
    print "NTI: setting ASM_VERSION to 6\n";
    $ENV{'ASM_VERSION'}="6";
}

if ( "$MACHINETYPE" eq "SGI" ||  "$MACHINETYPE" eq "NTI" ){
    $dostrip=0;
} else {
    $dostrip=1;
}

if ($dostrip){
    print "Compiling and stripping the standard applications in $RELEASE.\n";
} else {
    print "Compiling the standard applications in $RELEASE\n";
    print "$MACHINETYPE: No stripping\n";
}

sub CompileExbobs 
{
    local ($dir, $fragment, $name, $inCodeDir) = @_;
    if ($ask eq "y"){
	print "\n***** Build $name in $betalib/$dir (y/n/q)? ";
	$answer = &GetAnswer();
	if ($answer eq "q") { exit(0); }
	if ($answer eq "n") { return; }
    } else {
	print "\n***** Building $name in $betalib/$dir *****\n";
    }
    if (!chdir(&path("$betalib/$dir"))) { print "unable to chdir to $betalib/$dir\n"; return; }
    if ($MACHINETYPE eq "NTI"){
	print "C compiling\n";

	$ccmd="cl /c p2c\\p2clib.c /nologo /w /I. /O2 /Zd /DWIN32 /D${MACHINETYPE} /D${MACHINETYPE}_${SDK} /Zp4";
	print "$ccmd\n";
	system($ccmd);

	$ccmd="cl /c $fragment /nologo /w /I. /O2 /Zd /DWIN32 /D${MACHINETYPE} /D${MACHINETYPE}_${SDK} /Zp4";
	print "$ccmd\n";
	system($ccmd);

	$ccmd="cl /Fo${name}.exe ${name}.obj p2clib.obj /nologo /w /I. /O2 /Zd /DWIN32 /D${MACHINETYPE} /D${MACHINETYPE}_${SDK} /Zp4";
	print "$ccmd\n";
	system($ccmd);

    } else {
	# UNIX
	print "Calling Makefile\n";
	system(make);
    }
}

sub CompileAppl 
{
    local ($dir, $fragment, $name, $inCodeDir) = @_;
    local ($tempname);
    if ($ask eq "y"){
	print "\n***** Build $name in $betalib/$dir (y/n/q)? ";
	$answer = &GetAnswer();
	if ($answer eq "q") { exit(0); }
	if ($answer eq "n") { return; }
    } else {
	print "\n***** Building $name in $betalib/$dir *****\n";
    }
    if (!chdir(&path("$betalib/$dir"))) { print "unable to chdir to $betalib/$dir\n"; return; }
    if (-d &path($objdir)){
	if (!opendir (DIR, $objdir)){ print "Unable to readdir $dir/$objdir: $!"; return }
	foreach (readdir(DIR)) {
	    unlink($_) if (/\.gso$/);
	}
    }
    if ($MACHINETYPE eq "NTI") {
	# "beta -o name" will lowercase "name"
	print "beta $betaopts $fragment\n";
	&beta("$betaopts $fragment");
	exit(1) if ($?);
	if ($fragment ne $name){
	    print "Moving $fragment.exe to $name.exe\n";
	    if (!rename ("$fragment.exe", "$name.exe")){ 
		print "cannot rename $fragment.exe to $name.exe\n"; 
		return; 
	    }
	}
	$tempname = "$name.exe";
    } else {
	# Temporary name used so that this script may be run in parallel.
	$tempname = $name;
	$tempname = $MACHINETYPE . $name if ($name !~ /^$MACHINETYPE/);
	print "beta $betaopts -o $tempname $fragment\n";
	&beta("$betaopts -o $tempname $fragment");
	exit(1) if ($?);
    }
    if ($dostrip){
	# UNIX only
	if (-x $tempname){
	    print "Stripping $tempname\n";
	    system("strip $tempname");
	    exit(1) if ($?);
	}
    }
    if ($inCodeDir){
	if ("$MACHINETYPE" eq "NTI"){ 
	    $name .= ".exe";
	}
	print "Moving $tempname to $objdir/$name\n";
	if (!rename ("$tempname", "$objdir/$name")){ print "cannot move $tempname to $objdir\n"; return; }
    }
}
	    
sub CompileFile {
    local ($dir, $fragment) = @_;
    if (!chdir(&path("$betalib/$dir"))) { print "unable to chdir to $betalib/$dir\n"; return; }
    print "BETA $betaopts -p --nolink $fragment\n";
    &beta("$betaopts -p --nolink $fragment");
}

&CompileAppl("bobsgen/v1.5", "tabc", "${MACHINETYPE}tabc", 0);
&CompileExbobs("bobsgen/v1.5", "${MACHINETYPE}exbobs.c", "${MACHINETYPE}exbobs", 0);
&CompileAppl("meta/v5.1", "gen", "${MACHINETYPE}gen", 0);
&CompileAppl("prettygen/v5.1", "makepretty", "${MACHINETYPE}makepretty", 0);
&CompileAppl("prettygen/v5.1", "morepretty", "${MACHINETYPE}morepretty", 0);
&CompileAppl("pretty/v5.1", "pp", "${MACHINETYPE}pp", 0);
&CompileAppl("objectbrowser/v2.1/psbrowser", "psbrowser", "${MACHINETYPE}psbrowser", 0);
&CompileAppl("utils/betafs/v1.1", "betafs", "betafs", 1);
if ("$MACHINETYPE" ne "NTI"){
    &CompileAppl("utils/betatar/v1.1", "betatar", "betatar", 1);
    &CompileAppl("utils/betawc/v1.1", "betawc", "betawc", 1);
    &CompileAppl("debugger/v2.2", "valhalla", "valhalla", 1);
    &CompileAppl("distribution/v1.2", "ensembleDeamon", "${MACHINETYPE}ensembleDeamon", 0);
    &CompileAppl("editor/v5.1", "sif", "${MACHINETYPE}sif", 1);
    &CompileAppl("interfacebuilder/v1.5", "frigg", "${MACHINETYPE}frigg", 0);
} else {
    # link as windows application, ie. without a console-window.
    if ("$SDK" eq "bor"){
	$ENV{'BETALINKOPTIONS'}='-aa -c -n -Tpe';
	&CompileAppl("editor/v5.1", "compsif", "sif", 1);
	&CompileAppl("interfacebuilder/v1.5", "frigg", "frigg", 1);
	$ENV{'BETALINKOPTIONS'}="";
    } else {
	$ENV{'BETALINKOPTIONS'}="/NOLOGO /MACHINE:ix86 /SUBSYSTEM:WINDOWS /ENTRY:WinMainCRTStartup /INCREMENTAL:no";
	&CompileAppl("editor/v5.1", "bcompsif", "sif", 1);
    	&CompileAppl("interfacebuilder/v1.5", "bfrigg", "frigg", 1);
	# normal link
	$ENV{'BETALINKOPTIONS'}="";
    }
    
}
if ($MACHINETYPE eq "SUN4S" || $MACHINETYPE eq "SGI" || $MACHINETYPE eq "LINUX"){
    &CompileAppl("freja/v3.0", "${MACHINETYPE}freja", "${MACHINETYPE}freja", 1);
} elsif ($OS eq 'WIN') {
    &CompileFile("freja/v3.0", "associations");
}

print "\n";
&PrintDate;
print "$0 COMPLETE\n";
