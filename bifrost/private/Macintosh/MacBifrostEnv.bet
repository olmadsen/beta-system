ORIGIN '../../Canvas';
BODY 'BifrostMacImpl';
[[


-- INCLUDE 'ColorMacEnv'
-- INCLUDE 'MacLibExtentions'

-- GraphicsEnv: descriptor --
     (# theMacEnv: ^ColorMacEnv;
        macDebug: @Boolean;
	SetMacClip: (# enter SetClip #);
	watch: ^theMacEnv.Cursor;
	
	currentWindow: ^theMacEnv.ColorWindow;
	
	ConnectToCanvasWindow:
	  (# theCanvas: ^Canvas;
	  enter theCanvas[]
	  do <<SLOT ConnectToCanvasWindow: descriptor>>
	  #);
	  
	OpenCanvasWindow:
	  (# do <<SLOT OpenCanvasWindow: descriptor>> #);
	  
 	myText2Real: @Text2Real;
	myReal2Text2: @Real2Text2;
	myReal2Int: @Real2Int;
	myInt2Real,myInt2Real1,myInt2Real2: @Int2Real;
	myrfloor: @rfloor;
	myrabs: @rabs;
	myrneg: @rneg;
	myrsqrt: @rsqrt;
	myrexp: @rexp;
	myrlog: @rlog;
	myrsin: @rsin;
	myrcos: @rcos;
	myrtan: @rtan;
	myrasin: @rasin;
	myracos: @racos;
	myratan: @ratan;
	myrequal,myrequal1,myrequal2,myrequal3,myrequal4,myrequal5: @requal; 
	myrless: @rless; 
	myrlessEq: @rlessEq; 
	
	myradd,myradd1,myradd2: @radd;
	myrsub,myrsub1,myrsub2: @rsub;
	myrmul,myrmul1,myrmul2: @rmul;
	myrdiv,myrdiv1,myrdiv2,myrdiv3: @rdiv;
	
	myrpow: @rpow;
	myrzero: @rzero;
	myrone: @rone;
	myrpi :@rpi;
	myReal2Text: @Real2Text;
    #)

-- CanvasEventhandler: descriptor --
     (# 
         (* here we must delegate events relevant to THIS(Canvas)
	  * called by the global eventhandler of the CanvasWindow 
	  *)
     #)

--]]
