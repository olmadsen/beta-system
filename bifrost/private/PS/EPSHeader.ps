% begin macros

/l
% args: endx endy beginx beginy capstyle width
{
newpath
setlinewidth
setlinecap
moveto
lineto
stroke
} def

/r
% args: strokeflag upperrightx upperrighty width height
{
newpath
/h exch def
/w exch def
moveto
w 0 rlineto
0 h neg rlineto
w neg 0 rlineto
closepath
{stroke} {fill} ifelse
} def

/e
% args: strokeflag centerx centery radiusx scaley 
{
newpath
gsave
/s exch def
/rx exch def
1 s scale
s div rx 0 360 arc
{stroke} {fill} ifelse
grestore
} def

% end macros