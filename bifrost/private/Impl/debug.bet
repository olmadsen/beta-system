ORIGIN '../../Bifrost';
LIB_ITEM 'bifrost';
INCLUDE '~beta/guienv/private/guienvbody';
INCLUDE '~beta/basiclib/numberio';
INCLUDE '~beta/basiclib/formatio';

-- BifrostAttributes: attributes --

(************************************************************)
(****************** DEBUG OUTPUT FUNCTIONS *******************)
(************************************************************)
debug:(# exit false #);

PutPoint:
  (# p: @Point;
  enter p
  do 'x: '->THIS(guienv).bifrostprivate.putwarntext; 
     p.x->THIS(guienv).bifrostprivate.putwarnint;
     ' y: '->THIS(guienv).bifrostprivate.putwarntext; 
     p.y->THIS(guienv).bifrostprivate.putwarnint; 
     THIS(guienv).bifrostprivate.putwarnline;
  #);

PutMatrix:
  (# M: ^Matrix;
  enter M[]
  do
     (if M[]=NONE then 'PutMatrix: M[] is NONE' 
           -> THIS(guienv).bifrostprivate.putwarnline;
      else
         M.a ->THIS(guienv).bifrostprivate.putwarnreal; 
         ' '->THIS(guienv).bifrostprivate.putwarntext;
         M.b ->THIS(guienv).bifrostprivate.putwarnreal; 
         ' '->THIS(guienv).bifrostprivate.putwarntext;
         M.c ->THIS(guienv).bifrostprivate.putwarnreal; 
         ' '->THIS(guienv).bifrostprivate.putwarntext;
         M.d ->THIS(guienv).bifrostprivate.putwarnreal; 
         ' '->THIS(guienv).bifrostprivate.putwarntext;
         M.tx->THIS(guienv).bifrostprivate.putwarnreal; 
         ' '->THIS(guienv).bifrostprivate.putwarntext;
         M.ty->THIS(guienv).bifrostprivate.putwarnreal; 
         THIS(guienv).bifrostprivate.putwarnline;
     if)
  #);

PutRect:
  (# r: @Rectangle;
  enter r
  do
     'RECT x: '->THIS(guienv).bifrostprivate.putwarntext; 
     r.x->THIS(guienv).bifrostprivate.putwarnint; 
     ' y: '->THIS(guienv).bifrostprivate.putwarntext; 
     r.y->THIS(guienv).bifrostprivate.putwarnint; 
     ' width: '->THIS(guienv).bifrostprivate.putwarntext; 
     r.width -> THIS(guienv).bifrostprivate.putwarnint;
     ' height: '->THIS(guienv).bifrostprivate.putwarntext; 
     r.height -> THIS(guienv).bifrostprivate.putwarnint;
     THIS(guienv).bifrostprivate.putwarnline;
  #);
