#!/bin/sh -f

# Used to boot all grammars by invoking the 
# bootdogram tool of the previous release.

if [ -d $BETALIB/bin-unix/ ]
then
    cd $BETALIB/grammars/metagram/current
    $BETALIB/bin-unix/bootdogram metagrammar

    cd $BETALIB/grammars/beta/current
    $BETALIB/bin-unix/bootdogram beta

    cd $BETALIB/grammars/pretty/current
    $BETALIB/bin-unix/bootdogram prettyprint

    cd $BETALIB/grammars/property/current
    $BETALIB/bin-unix/bootdogram property

    cd $BETALIB/grammars/mylang/current
    $BETALIB/bin-unix/bootdogram mylang
else
    cd $BETALIB/grammars/metagram/current
    $BETALIB/bin/bootdogram metagrammar

    cd $BETALIB/grammars/beta/current
    $BETALIB/bin/bootdogram beta

    cd $BETALIB/grammars/pretty/current
    $BETALIB/bin/bootdogram prettyprint

    cd $BETALIB/grammars/property/current
    $BETALIB/bin/bootdogram property

    cd $BETALIB/grammars/mylang/current
    $BETALIB/bin/bootdogram mylang
fi
