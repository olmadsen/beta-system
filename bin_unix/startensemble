#!/bin/sh

BETALIB=${BETALIB-/usr/local/lib/beta}
. $BETALIB/configuration/env.sh

LOCATION=${BETALIB}/distribution

if [ "$MACHINETYPE" = "SGI" ]
then
  LD_LIBRARY_PATH=${LOCATION}:${BETALIB}/lib/${objdir}:${LD_LIBRARY_PATH}
  LD_LIBRARY_PATH=${LOCATION}/${objdir}:${LD_LIBRARY_PATH}
# the latter is necessary if LOCATION is different from objdir
  export LD_LIBRARY_PATH
fi

echo Installing BETA ensemble deamon v1.6 for "$MACHINETYPE".
exec ${LOCATION}/${objdir}/ensembleDeamon

