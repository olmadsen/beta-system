#!/bin/sh

BETALIB=${BETALIB-/usr/local/lib/beta}
export BETALIB   # needed if pathhandler is used
. $BETALIB/configuration/env.sh

if [ "$MACHINETYPE" = "SGI" ]
then
  LD_LIBRARY_PATH=${BETALIB}/system/r4.0_v5.2/${objdir}:${LD_LIBRARY_PATH}
  export LD_LIBRARY_PATH
fi

# try binary first
compiler="$BETALIB"/system/r4.0_v5.2/"$MACHINETYPE"Bbeta
if [ ! -f $compiler ]
then
  # fall back on non-binary
  compiler="$BETALIB"/system/r4.0_v5.2/"$MACHINETYPE"beta
fi

exec $compiler $BETAOPTS $betaopt "$@"

