ORIGIN '~beta/basiclib/betaenv';
-- lib: Attributes --
car:
  (#
     weight: @integer;
     vendor: @text;
     myOwner: ^person;
     print:
       (# 
       do
          ' '->screen.putText;
          vendor[]->screen.PutText;
          ' that weighs '->screen.putText;
          weight->screen.putInt;
          ' kilos'->screen.putText
       #)
  #);
person:
  (#
     name: @text;
     myCar: ^car;
     print:
       (# 
       do
          'Person: '->screen.putText;
          name[]->screen.putText;
          (if myCar[] <> none then
              myCar.print
           else
              ' Has no car'->screen.putText
          if)
       #)
  #)  

