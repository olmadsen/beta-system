ORIGIN '~beta/basiclib/v1.4/betaenv';
INCLUDE '~beta/persistentstore/v1.41/persistentstore';
INCLUDE '~beta/containers/v1.4/hashTable';

---lib: attributes---
TextHashTable: hashTable
  (# element::< Text;
     hashfunction::< (# do e.scanAll (# do ch*26+value -> value #)#);
  #);

--- program : descriptor ---
(# PS: @persistentstore;
   H: ^TextHashTable;
   exists: @Boolean;

do
   'running' -> putLine;
   true -> exists;
   open: 'myStore' -> PS.openWrite
   (# notFound::< 
        (# do 'myStore' -> PS.create; false -> exists; leave open #)
   #);
   'opened' -> putLine;
   
   (if exists //false then
       &TextHashTable[] -> H[]; H.init;
   
       'first' -> H.insert;
       'second' -> H.insert;
       'third' -> H.insert;
       (H[],'TextTable') -> PS.put;
       
       'did put' -> putText;
    else
       ('TextTable', TextHashTable##) -> PS.get -> H[];
       'did get' -> putText;
   if);
   
   H.scan  (# do current[] -> putLine #);
   'did scan' -> putText;
   
   PS.close;
   'closed' -> putLine;
   
   'myStore' -> PS.openWrite;
   'opened' -> putLine;
   
   ('TextTable', TextHashTable##) -> PS.get -> H[];
   
   'fourth' -> H.insert;
   H.scan  (# do current[] -> putLine #);
   (H[],'TextTable') -> PS.put;
   
   PS.close;
   'closed' -> putLine;
#)



