ORIGIN '~beta/basiclib/v1.6/betaenv'
---TextLib:attributes---
findString:
  (# S: ^text; inx: @integer
  enter S[]
  do (if S[] <> NONE then
         (if S.lgth > 0 then
             S.T[1] 
               -> findAll
             (#
             do search: 
                  (#
                  do (if S.lgth <= (lgth - inx + 1) then 
                         (for i: S.lgth-1 repeat
                              (if S.T[i+1] <> T[inx + i ] then leave search if)
                         for);
                         (* match *)
                         inx -> this(findString).inx;
                         INNER findString
                     if)
                  #)
             #)
     if)if)
  #)
             
     
