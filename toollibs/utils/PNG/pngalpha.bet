ORIGIN '~beta/guienv/graphics';
BODY 'private/pngalphabody';
-- pixmapLib: attributes --


readAlpha:
  (* Reads a PNG with a full (8-bit) alpha-channel). Must  be displayed
   * with graphics.drawRasterAlpha
   *)
  (# error:< exception
       (# what: ^Text;
       enter what[]
       do what[] -> msg.puttext;
          INNER;
       #);
     name: ^Text;
  enter name[]
  <<SLOT pixmapReadAlpha: doPart>>
  #);
readRGB:
  (* Reads a PNG but disregards the alpha channel. Can be displayed
   * with either graphics.drawRaster or graphics.drawRasterAlpha 
   *)
  (# error:< exception
       (# what: ^Text;
       enter what[]
       do what[] -> msg.puttext;
          INNER;
       #);
     name: ^Text;
  enter name[]
  <<SLOT pixmapReadRGB: doPart>>
  #);
readAlphaImage:
  (* Reads a PNG with alpha channel, but converts the alpha channel
   * to a gray-scale image, disregarding the RGB channels. Can be displayed
   * with either graphics.drawRaster or graphics.drawRasterAlpha 
   *)
  (# error:< exception
       (# what: ^Text;
       enter what[]
       do what[] -> msg.puttext;
          INNER;
       #);
     name: ^Text;
  enter name[]
  <<SLOT pixmapReadAlphaImage: doPart>>
  #);
-- graphicsLib: attributes --

drawRasterAlpha:
  (* Displays a pixmap that contains a full alpha-channel, that are
   * read using the "pixmap.readAlpha" method.
   *)
  (# pm: ^Pixmap;
     x, y: @integer;
  enter (pm[], x, y)
  <<SLOT graphicsDrawRasterAlpha: doPart>>
  #);
