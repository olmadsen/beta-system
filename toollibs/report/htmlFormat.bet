ORIGIN 'outputFormat'

--- Lib: attributes ---

htmlFormat: outputFormat
  (# writeInt::
       (# do int -> theStream.putint #);

     writeText::
       (# do txt[] -> theStream.puttext #);

     row::
       (# start:: (# do '\n<TR>' -> theStream.puttext; #);
	  end:: (# do '</TR>' -> theStream.puttext; #);
       #);
     cell::
       (# start:: (# do '<TD>' -> theStream.puttext; #);
	  end:: (# do '</TD>' -> theStream.puttext; #);
       #);
     Table::
       (# start::
	    (#
	    do '<CENTER><TABLE BORDER COLS=' -> theStream.puttext;
	       noOfColumns -> theStream.putint;
	       ' WIDTH="100%">\n' -> theStream.puttext;
	    #);
	  sep::
	    (# do '\n<HR SIZE=6>\n\n' -> theStream.puttext; #);
	  end::
	    (#
	    do '<CAPTION ALIGN=BOTTOM>' -> theStream.puttext;
	       (if tableNumbering then 
		   'Table '->theStream.puttext;
		   currentTableNo->theStream.putint;
		   ': '->theStream.puttext;
	       if);
	       theCaption[] -> theStream.puttext;
	       '</CAPTION>' -> theStream.puttext;
	       '\n</TABLE></CENTER>\n' -> theStream.puttext
	    #);
       #)
  #);
