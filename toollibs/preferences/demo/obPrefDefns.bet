ORIGIN '~beta/toollibs/preferences/v1.1/preferencesDB';

(* This is a list of options currently supported by the objectViewer.
 * Options are set by putting them into the global optionDB. (See options.bet)
 *
 * Do not change the value of these constants, since their absolute value
 * is used instead of the pattern name to avoid the objectViewer implementation
 * to be dependent on this fragment. *)

--- preferencesLib: attributes ---

registerObjectbrowserPreferences:
  (# 
  do (* Whether char repetitions should be shown on a single line *) 
     'charRepOnALine'
       ->define(# type:: booleanPreference
	       do true->pref.value;
		  'One Line Char Repetitions'->pref.description[]
	       #);
     (* Whether origins should initially be invisible *) 
     'invisibleOrigins'
       ->define(# type:: booleanPreference
	       do false->pref.value;
		  'Invisible Origins'->pref.description[]
	       #);
     (* Whether objects should be given a serial number *)
     'numberObjects'
       ->define(# type:: booleanPreference
	       do true->pref.value;
		  'Number Objects'->pref.description[]
	       #);
     (* Whether to use truncated pattern names (max 2 pattern names
      * in path) for objects.
      *)
     'shortObjectTitles'
       ->define(# type:: booleanPreference
	       do true->pref.value;
		  'Short Object Names'->pref.description[]
	       #);
     (* Whether an outline of the moveable is dragged on open, or the
      * moveable itself decides a default size
      *)
     'dragOutlineOnOpen'
       ->define(# type:: booleanPreference
	       do true->pref.value;
		  'Outline On Open'->pref.description[]
	       #);
     (* Whether objectviews should by default be in fast browse mode
      *)
     'fastBrowseMode'
       ->define(# type:: booleanPreference
	       do true->pref.value;
		  'Fast Browse Mode'->pref.description[]
	       #)
   #);

charRepOnALine: getBoolean(# #);
invisibleOrigins: getBoolean(# #);
shortObjectTitles: getBoolean(# #);
dragOutlineOnOpen: getBoolean(# #);
fastBrowseMode: getBoolean(# #);
