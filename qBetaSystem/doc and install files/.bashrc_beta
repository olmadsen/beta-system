export foo=bar

echo "Hello from .bashrc_beta"

# Use the latest stable release, e.g. r5.5
alias r5.5='
# BETALIB is the top folder for the BETA code you will use.
export BETALIB="d/_beta_svn_aarhus/r5.5"
# Set the top folder for the BETA code as used when running Cygwin
export cygBETALIB="/cygdrive/d/_beta_svn_aarhus/r5.5"  
export PATH="$cygBETALIB/MiniSystem/bin/:$PATH"
'

# General BETA setup
alias beta-setup='
export BETAOPTS="-s 38"
export MIASDK="ms"
export OLD_BETALIB=$BETALIB
echo   "beta-setup:$foo"
'


#
# HPD: Setup needed to run the Windows/.NET 2003 linker:
#      The .Net linker from 2003 has been copied
#      from the Framework 1.1 directory
#      to the folder $cygBETALIB/MiniSystem/bin,
#      which is already on the PATH.
alias dotnet-setup='
export PATH="\
# /cygdrive/c/WINDOWS/Microsoft.NET/Framework/v1.1.4322:\
# $cygBETALIB/MiniSystem/bin/vs2003/Vc7/bin:\
$cygBETALIB/MiniSystem/bin/vs2003/Vc7/bin:\
$cygBETALIB/MiniSystem/bin/vs2003/Common7/IDE:\
$PATH"
'


# Visual Studio object files directories, needed by the linker
alias msdev-setup='
dotnet-setup 
export LIB="\
$cygBETALIB/MiniSystem/bin/vs2003/Vc7/lib/;\
$cygBETALIB/MiniSystem/bin/vs2003/Vc7/PlatformSDK/Lib;\
$LIB"
echo "msdev-setup: snorf"
'


# Make Cygwin binaries available at the end of the PATH
alias setcyg='export PATH="$PATH:/cygdrive/c/cygwin/bin"'



# Run the setup
r5.5
beta-setup
msdev-setup
setcyg


# Set the bash prompt:
PS1="\n[r5.5-$MIASDK]  \033]0;\w\007\033[32m\]\u@\h \[\033[33m\w\033[0m\]\n$ "


# Position yourself in the top folder
cd $cygBETALIB


echo "done"

