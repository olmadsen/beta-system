ORIGIN '../preprocess';

--LIB:attributes--
fix:
  (# t: ^text;
  enter t[]
  do '/' -> t.findall(# do ('\\', inx) -> t.inxPut #); 
  exit t[]
  #);

--PreprocessBody:descriptor--
(# cmd: ^text;
   e: @diskentry;
do (* FIXME: should use process!!! *)
   
   (* The produced .i file is in local directory when using cl *)
   ifilename[] -> e.path;
   e.path.name -> ifilename[];
   
   'copy /Q '->cmd[];
   (idlfilename[],'') -> ast.thePathhandler.localpath -> fix -> cmd.append;
   ' ' -> cmd.append;
   (cfilename[],'') -> ast.thePathhandler.localpath -> fix -> cmd.append;
   cmd[] -> report;
   cmd -> system;
   
   'cl -nologo -EP -P ' -> cmd[];
   defines.scan
   (# 
   do '-D' -> cmd.append;
      current[] -> cmd.append;
      ' ' -> cmd.append;
   #);
   cfilename[] -> cmd.append;
   cmd[] -> fix -> report;
   '      '->screen.puttext;
   cmd -> system;
   
   (if not preserve then
       'del /Q /Y /F '->cmd[];
       cfilename[] -> fix -> cmd.append;
       cmd[] -> report;
       cmd -> system;
   if);
#)

-- DeleleIFile: descriptor --
(# 
do (if not preserve then
       'del /Q /Y /F '->cmd[];
       ifilename[] -> fix -> cmd.append;
       cmd[] -> report;
       cmd -> system;
   if);
#)
