       #);
     pushbutton24: @letterbutton
       (#
          open::< 
            (# 
            do
               'F'->label;
               borderStyles.shadowOut->border.style;
               (30,20)->size;
               (155,205)->position;
               
            #)
       #);
     Stack: @
       (#
          A: [100] @Integer;
          Top: @integer;
          Push:
            (# e: @integer
            enter e
            do
               top+1->top;
               (if top > A.range then A.range->A.extend if);
               e->A[top]
            #);
          Pop:
            (# e: @integer
            do (if Top <= 0 then 0->e else A[top]->e; top-1->top if); 
            exit e
            #);
          clear: (# do 0->top #);
          isEmpty: booleanValue (#  do (0 = Top)->value #)
       #);
  #);
  

-- PROGRAM: Descriptor --
guienv (# main: @calculator;  do main.open;  #)  

