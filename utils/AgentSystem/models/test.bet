ORIGIN '../AgentSystem';
INCLUDE '~beta/basiclib/randomInteger';
---program:descriptor---
World
(# Observer: @ Agent
     (# 
        create_turtles:
          (# n: @integer; t: ^Turtle;
          enter n
          do (for i: n repeat 
                  Turtle -> T[];
                  (if (i mod 2) = 0  then
                      theWorldW.red -> T.col
                   else
                      theWorldW.gold1 -> T.col
                  if);
                  T[] -> Turtles.insert  
             for)
          #);        
        go: 
          (#
          do 5 -> create_turtles;
             (for i: 5 repeat
                  turtles.ask
                  (#
                  do (*current.print;*)
                     1 -> current.fd;
                     (1,10) -> genunf -> current.rd;
                     (1,10) -> genunf -> current.ld;
                     newline;
                     theWorldW.show;
                     6 -> guienvWait;
                  #);
                  '--------'->putline
             for);
          #)
     #)
do observer.go
#)
