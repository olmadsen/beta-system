*)
---program:descriptor---
World
(# inital_trees,burned_trees: @integer;
   Fires: @Breed(#do 'fire' -> name[] #);
   Embers: @Breed(#do 'ember' -> name[] #);
   setUp:
     (#
     do 'Fire'->putline;
        clear_all;
        'square' -> turtles.set_default_shape;
        patches.ask
        (# with::(# do #)
        do theWorldW.green -> current.c
        #)
     #);
do setUp
#)
