ORIGIN 'minienv';
BUILD pre
      'pre/STcoEx.prc'
      'STcoEx.som'
      'pre-st -o $0 $1';

(* Example of a BETA coroutine used from a Smalltalk class 
 * The Smalltlak class is in file: STcoEx.som
 *)
---lib:attributes---
STcoEx: externalclass
  (# init: 
       (# G: ^ generator
       enter G[]
       #);
     run: (# #)
  do
  #);

generator:
  (# theGenerator: @ |
       (# value: @integer 
       do 1 -> value;
          (for i: 6 repeat 
               suspend;
               value + 2 -> value;
          for)
       exit value
       #);
     
     attach: 
       (# val: @integer
       do thegenerator -> val
       exit val
       #)
  #)
---program:descriptor---
(# STco: ^STcoEx;
   G: @ generator;
do &STcoEx[] -> STco[];
   G[] -> stCO.init;
   STco.run;
   out.newline
#)

          
