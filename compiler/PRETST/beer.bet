ORIGIN 'minienv'
--- program: descriptor ---
(* Display the lyrics to "99 Bottles of Beer"  *)
(# bottles: @integer;
   putBottles: 
     (# high, low: @integer;
        few:
          (# i: @integer;
          enter i
          do (if i
              // 1 then  'one' -> out.puttext;
              // 2 then  'two' -> out.puttext;
              // 3 then  'three' -> out.puttext;
              // 4 then  'four' -> out.puttext;
              // 5 then  'five' -> out.puttext;
              // 6 then  'six' -> out.puttext;
              // 7 then  'seven' -> out.puttext;
              // 8 then  'eight' -> out.puttext;
              // 9 then  'nine' -> out.puttext;
              // 10 then 'ten' -> out.puttext;
              // 11 then 'eleven' -> out.puttext;
              // 12 then 'twelve' -> out.puttext;
              // 13 then 'thirteen' -> out.puttext;
              // 14 then 'fourteen' -> out.puttext;
              // 15 then 'fifteen' -> out.puttext;
              // 16 then 'sixteen' -> out.puttext;
              // 17 then 'seventeen' -> out.puttext;
              // 18 then 'eighteen' -> out.puttext;
              // 19 then 'nineteen' -> out.puttext;
             if);
          #);
     do bottles div 10 -> high;
        bottles mod 10 -> low;
        (if high
         // 0 then
            (if low=0 then 
                'no more' -> out.puttext;
             else 
                bottles -> few;
            if);
         // 1 then bottles   -> few;
         // 2 then 'twenty'  -> out.puttext; low -> few;
         // 3 then 'thirty'  -> out.puttext; low -> few;
         // 4 then 'fourty'  -> out.puttext; low -> few;
         // 5 then 'fifty'   -> out.puttext; low -> few;
         // 6 then 'sixty'   -> out.puttext; low -> few;
         // 7 then 'seventy' -> out.puttext; low -> few;
         // 8 then 'eighty'  -> out.puttext; low -> few;
         // 9 then 'ninety'  -> out.puttext; low -> few;
        if);
        (if bottles=1 then
            ' bottle of beer' -> out.puttext;
         else
            ' bottles of beer' -> out.puttext;
        if);
     #);
do 99->bottles;
   drinking:
     (if bottles>0 then
         putBottles; ' on the wall, '->out.puttext;
         putBottles; '.' -> out.putline;
         'Take one down, pass it around, '->out.puttext;
         bottles-1->bottles;
         putBottles;
         ' on the wall.\n'->out.putline;
         restart drinking
     if);
#)
