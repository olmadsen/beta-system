---link: descriptor ---
(# betaLinkOpt: ^text; ldLibPath: ^text;
   start: @integer;
do 'trap "echo :linking interrupted.; /bin/rm -f '->AFF.puttext;
   objName[]->AFF.puttext;
   '; exit 2" 2 9 10'->AFF.putLine;
   
   '$(BETALINKOPTIONS)'
     ->expandEnvVar
   (# defaultValue::<
        (#
        do '-m elf_i386 -dynamic-linker /lib/ld-linux.so.1 -dc -dp -Bstatic -X'
             ->envvarValue[]
        #)
   #)
     ->betaLinkOpt[];
   (if not switch[41] then ' -s '->betaLinkOpt.append if);
   'ld '->AFF.puttext;
   
   (* FIXME: When sysutils/v1.5 is available, do
    * this instead:
    * 
    * ('LD_LIBRARY_PATH', ';') -> scanSearchPath
    *   (# do ' -L'->AFF.putText; path[]->AFF.puttext #);
    *)
   '$(LD_LIBRARY_PATH)'->expandEnvVar->ldLibPath[];
   (if ldLibPath.length//0 then (* skip *)
    else (* parse ':' separated list of directories *)
       1->start;
       ldLibPath.reset;
       ':'->ldLibPath.findAll
       (#
       do 
          (if (inx-1>start) then 
              ' -L'->AFF.putText; 
              (start,inx-1)->ldLibPath.sub->AFF.putText;
          if);
          inx+1->start;
       #);
       (if start-1<ldLibPath.length // true then
           ' -L'->AFF.putText; 
           (start,ldLibPath.length)->ldLibPath.sub->AFF.putText;
       if);
   if);
   
   ' '->AFF.put;
   betaLinkOpt[]->AFF.putText; ' -o '->AFF.puttext;
   asmlink.ExeExt->objName.copyAppend->AFF.puttext; 
   ' '->AFF.put; cont;
   
   (if switch[29] or switch[30] or switch[31] then
       ' /lib/mcrt0.o /lib/Fcrt1.o '->AFF.puttext
    else
       '/usr/lib/crt1.o' -> AFF.puttext;
       (if common.switch[13] (* full debug (betarun_debug.o) *) then
           ' /usr/lib/crti.o /usr/lib/crtbegin.o'->AFF.puttext;
       if);
   if);
   cont;
#)
