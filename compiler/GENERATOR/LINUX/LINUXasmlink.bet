   if);
#)
---libraries: descriptor ---
(# 
do (if switch[17] then
       (* static X libraries requires -lSM -lICE *)
       ' -lSM -lICE' -> ldA.puttext;
   if);
   ' -lm -lc '->ldA.puttext; (* -lm includes sin, cos, exp,etc *)
   (if common.switch[13] (* full debug (betarun_debug.o) *) then
       ' /usr/lib/crtend.o /usr/lib/crtn.o' -> ldA.putline;
    else
       ldA.newline;
   if);
#)
---linkTrailer: descriptor ---
(# 
do     
   'case $? in'->AFF.putLine;
   '0)'->AFF.putText; AFF.newline;
   (if verboseLevel<=verboseLevel.actions then
        'echo Object program on file: '->AFF.puttext; 
       objname[]->AFF.putLine;
   if);
   (if asmState.tmpCount<>0 then rmTmpFiles; AFF.newLine if);
   ';;'->AFF.putLine;
   '*)'->AFF.putLine; 
   '/bin/rm -f '->AFF.PutText;  
   objName[]->AFF.putLine;
   (if asmState.tmpCount<>0 then rmTmpFiles; AFF.newLine if);
   'esac'->AFF.PutLine;
#)
