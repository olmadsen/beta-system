ORIGIN '~beta/basiclib/betaenv';
--PROGRAM: descriptor--
(# 
   Calculator:
     (# R: @integer;
        set: 
          (# V: @integer enter V do V -> R #);
        add: 
          (# V: @integer enter V do R+V -> R exit R #);
        display:
          (# do 'Value: '->putText; R -> putInt; newline; #);
     #);

   C: @Calculator; 
   X: @integer;
   
   A: ^C.add;
   
do 'Using add as a method' -> putLine;
   12 -> C.set;
   C.display;
   5 -> C.add -> X;
   C.display;
   
   'Using add as a class' -> putLine;
   &C.add[] -> A[];
   17 -> C.set;
   C.display;
   13 -> A -> X;
   C.display;
   10 -> A.V;
   A -> X;
   C.display;

#)
