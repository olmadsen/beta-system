origin 'betaenv';
BUILD clr 'clr/nstringuser.dll' 'nstringuser.cs' 'csc -out:$0 -t:library -r:System.dll $1';
---lib:attributes---
String: externalClass
  (#
  do '[mscorlib]System.String' -> classname
  #);
nstringuser: externalclass
  (# display: proc
       (# S: ^String
       enter S[]
       #);
     get:
       (# S: ^String
       exit S[]
       #);
  do '[nstringuser]nstringuser' -> classname;
  #);
---program:descriptor---
(# X: ^nstringuser;
   T: ^text; 
do &nstringuser[] -> X[];
   'Greetings from BETA' -> X.display;
   'More greetings from BETA' -> T[];
   T[] -> X.display;
   X.get -> T[];
   T[] -> putline;    
#)



