ORIGIN '~beta/basiclib/betaenv';
INCLUDE '~beta/javalib/java/lang/String';
BUILD jvm 'jvm/beta/hellolib.class' 'hellolib.java' 'hellolib.c' 'javac -d jvm hellolib.java; javah -jni -d jvm -classpath jvm beta.hellolib; gcc -Wl,-G -I . -I jvm -I $JAVAHOME/include -I $JAVAHOME/include/solaris -o jvm/libhellolib.so hellolib.c realhello.c'

--LIB:attributes--
hellolib: ExternalClass
  (# hello: proc
       (# who: ^String;
       enter who[]
       #)
  do 'beta/hellolib'->classname; 
  #)

--PROGRAM: descriptor--
(# h: ^hellolib;
do &hellolib[] -> h[];
   'BETA World with blåbærgrød' -> h.hello;
#)
