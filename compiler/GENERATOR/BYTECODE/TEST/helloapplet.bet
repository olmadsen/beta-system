(* Usage:
 *    1. jbeta helloapplet.bet
 * Then either
 *    2a. Open helloapplet.html in browser
 * or
 *    2b. appletviewer [-debug] helloapplet.html
 *)
ORIGIN 'betaenv';
---lib:attributes---
helloapplet: Applet 
  (# __init: 
       (* constructor with no arguments *)
       (#
       #);
     paint: proc   
       (# g: ^Graphics 
       enter g[]  
       do ('Hello Java Applet world from BETA:-)', 50, 24) -> g.drawString
       #);
  #); 

String: ExternalClass
  (#
  do 'java/lang/String' -> classname
  #);
Applet: ExternalClass
  (# paint:< proc
       (# g: ^Graphics 
       enter g[] 
       do inner
       #); 
  do 'java/applet/Applet' -> className;
  #);
Graphics: ExternalClass
  (# drawString: proc
       (# s: ^String;
          x, y: @integer;
       enter (s[], x, y) 
       #);
  do 'java/awt/Graphics' -> className;
  #);

