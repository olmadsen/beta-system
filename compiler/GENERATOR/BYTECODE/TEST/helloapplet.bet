(* Usage:
 *    1. jbeta helloapplet.bet
 * Then either
 *    2a. Open helloapplet.html in browser
 * or
 *    2b. appletviewer [-debug] helloapplet.html
 *)
ORIGIN '~beta/basiclib/betaenv';
INCLUDE '~beta/javalib/java/lang/String';
INCLUDE '~beta/javalib/java/awt/Graphics';
(*INCLUDE '~beta/javalib/java/applet/Applet'; not yet ready *)

---LIB:attributes---

helloapplet: Applet 
  (# __init: 
       (* constructor with no arguments *)
       (#
       do %setup 'betaenv'
       #); 
     paint: proc   
       (# g: ^Graphics 
       enter g[]  
       do 'Calling helloapplet::paint' -> puttext;
          ('Hello Java Applet world from BETA:-)', 50, 24) -> g.drawString_String_I_I;
          newline
       #); 
  #); 

Applet: ExternalClass
  (# paint:< proc
       (# g: ^Graphics 
       enter g[] 
       do inner
       #); 
  do 'java/applet/Applet' -> className;
  #);


