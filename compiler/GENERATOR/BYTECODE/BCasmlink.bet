---linkObj:descriptor ---
(# e: @diskentry;
   path, name: ^text;
   pwd: ^text;
   ldAputText:
     (# T: ^text
     enter T[]
     do asmstate.link_line_length+T.lgth->asmstate.link_line_length;
        T[] -> ldA.puttext;
     #);
   addClassFile:
     (# name: ^text
     enter name[]
     do ' -C ' -> ldAputtext;
        path[] -> quote -> ldAputtext;
        ' ' -> ldA.putText;
        (if hostIsWindows then
            name[] -> quote -> ldAputtext;
            ' ^\n\t' -> ldAputtext
         else
            name[] -> escDollar -> quote -> ldAputtext;
            ' \\\n\t' -> ldAputtext
        if);
     #);
do 
   (if true
    // isJava then
       (if asmstate.link_line_length>4096 then
           '\n\njar uf ' -> ldA.puttext;
           jarfilename -> ldA.puttext;
           ' '-> ldA.put;
           0 -> asmstate.link_line_length;
       if);
       lObj[] -> unquote -> name[];
       '.J.class' -> name.stripExtension;
       '.class' -> name.AppendExtension;
       name[] -> e.path;
       (* Extract path of lObj as a relative path from current directory *)
       e.path.head -> path[];
       thePathHandler.CurrentDirectory -> pwd[];
       (if hostIsWindows then
           (* Make sure drive name is same case *)
           path.T[1] -> ascii.upcase -> path.T[1];
           pwd.T[1]  -> ascii.upcase -> pwd.T[1];
       if);
       (path[], pwd[]) -> thePathHandler.localPath -> path[];
       e.path.name -> name[] -> addClassFile;
       (if 'BetaObject.class'->name.equal then
           (* Add ExOException.class too *)
           'ExOException.class' -> addClassFile;
           (* Add Structure.class too *)
           'Structure.class' -> addClassFile;
           (* Add BetaArray.class too *)
           'BetaArray.class' -> addClassFile;
       if);
    // isIL then
       (if use_clr_modules then
           (* lObj = '"foo.il.netmodule"' *)
           '.il.netmodule"' -> lObj.stripExtension;
           '.netmodule"' -> lObj.appendExtension;
           ' '->ldA.puttext;
           (if not hostIsWindows then
               lObj[] -> escDollar -> quote -> ldA.putText; 
           if);
        else
           (* lObj = '"foo.il.dll"' *)
           '.il.dll"' -> lObj.stripExtension;
           '.dll"' -> lObj.appendExtension;
           (* File not inserted *)
       if);
    else
       'linkObj' -> TODO;
   if);
#)
