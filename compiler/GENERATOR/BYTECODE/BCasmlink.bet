---linkObj:descriptor ---
(# e: @diskentry;
   path, name: ^text;
   ldAputText:
     (# T: ^text
     enter T[]
     do asmstate.link_line_length+T.lgth->asmstate.link_line_length;
        T[] -> ldA.puttext;
     #);
   addClassFile:
     (# path: ^text;
        jvmpath: ^text;
        start,end: @integer;
     enter path[]
     do path.copy -> path[]; (* avoid aliasing *)
        (* Find jvm directory in path *)
        (if path[] -> asmstate.jvmregexp.match(# do matchPos->(start,end) #) then
            (1,end) -> path.sub -> jvmpath[];
            (end+1, path.length) -> path.sub -> path[]
        if);
        
        (if jvmpath[]<>none then
            ' -C ' -> ldAputtext;
            jvmpath[] -> quote -> ldAputtext;
        if);
        
        (if false then
            (* NO - does not work with dot notation for packages here! *)
            path[] -> slashToDot -> path[]; 
        if);
        ' ' -> ldA.putText;
        (if hostIsWindows then
            path[] -> quote -> ldAputtext;
            ' ^\n\t' -> ldAputtext
         else
            path[] -> escDollar -> quote -> ldAputtext;
            ' \\\n\t' -> ldAputtext
        if);
     #);
   addDllFile:
     (# lObj: ^text;
        e: @diskentry;
     enter lObj[]
     do (* lObj = '"foo.il.dll"' *)
        '.il.dll"' -> lObj.stripExtension;
        '.dll"' -> lObj.appendExtension;
        lObj[] -> e.path;
        'copy ' -> ldA.puttext;
        lObj[] -> ldA.append;
        ' ' -> ldA.append;
        applicationbase -> quote -> ldA.puttext;
        ' >NUL' -> ldA.putline;
     #)
do (if true
    // isJava then
       (if asmstate.link_line_length>4096 then
           '\n\njar uf ' -> ldA.puttext;
           jarfilename -> ldA.puttext;
           ' \\\n\t' -> ldA.puttext;
           0 -> asmstate.link_line_length;
       if);
       lObj[] -> unquote -> path[];
       '.J.dep' -> path.stripExtension; (* When coming from a newly generated file *)
       '.dep'   -> path.stripExtension; (* When coming from a .clst file *)
       '.class' -> path.AppendExtension;
       path[] -> addClassFile;
       path[] -> e.path;
       e.path.name -> name[];
       (if true
        // 'program.class'->name.equal then
           e.path.head -> asmstate.program_path[];
        // 'BetaObject.class'->name.equal then
           (* Add compiler generated special classes too *)
           (* Get directory of BetaObject.class as full path *)
           e.path.head -> path[]; 
           (# packagepath: ^text;
           do (if path.length>0 then
                  path.copy -> packagepath[];
                  '/' -> packagepath.append;
               else
                  '' -> packagepath[];
              if);
              'ExOException.class' -> (packagepath.copy).append -> addClassFile;
              (* Add Structure.class too *)
              'Structure.class' -> (packagepath.copy).append -> addClassFile;
              (* Add BetaArray.class too *)
              'BetaArray.class' -> (packagepath.copy).append -> addClassFile;
              (if not common.ComponentDotCJ then
                  (* Add Component.class too *)
                  'Component.class' -> (packagepath.copy).append -> addClassFile;
              if);
           #);
       if);
    // isIL then
       lObj[] -> addDllFile;
    else
       'linkObj' -> TODO;
   if);
#)
