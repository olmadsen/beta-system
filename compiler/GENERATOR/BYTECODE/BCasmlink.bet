                            echo; 'Creating directory ' -> AFF.puttext; bd.path -> AFF.putline;
                            bd.path -> (&directory[]).touchDir
                        if);
                        echo; 'Building ' -> AFF.puttext; e.path -> AFF.putline;
                        csc;
                    if);
                    'copy ' -> AFF.puttext; e.path -> AFF.puttext; ' .' -> AFF.putline;
                if)
            if)
        if)
     #);
        
do (if true
