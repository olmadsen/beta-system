unQuote:
  (# t: ^text;
  enter t[]
  do (if ((1 -> t.inxGet) = '"') AND ((t.length -> t.inxGet) = '"') then
         (2, t.length - 1) -> t.sub -> t[];
     if);
  exit t[]
  #);
escDollar:
  (# T,S: ^text
  enter T[]
  do &text[] -> S[];
     T.scanAll
     (#
     do (if ch = '$' then
            '\\' -> S.put
        if);
        ch -> S.put
     #);
  exit S[]
  #);
sh2cmd:
  (* Hack used to replace unix sh commends with cmd.exe commands when host is windows *)
  (# cmd: ^text;
     colon2amp: @pcre;
     mv2move: @pcre;
     success: @boolean;
  enter cmd[]
  do ';' -> colon2amp;
     'mv ' -> mv2move;
     (cmd[], '&&') -> colon2amp.replaceAll -> (success, cmd[]);
     (cmd[], 'move ') -> mv2move.replaceAll -> (success, cmd[]);
  exit cmd[]
  #);

TODO: 
  (# T: ^text enter T[] 
  do 'TODO: ' -> screen.puttext;
     T[] -> screen.putline 
  #);
AppendExe:
  (# objname: ^text;
  enter objname[]
  do '.exe' -> objname.appendExtension
  exit objname[]
  #);
SlashToBackslash: 
  (# T: ^Text;
  enter T[]
  do (for i:T.lgth repeat
          (if T.T[i] = '/' then '\\' -> T.T[i] if)
     for);
  exit T[]
  #);
BackslashToSlash: 
  (# T: ^Text;
  enter T[]
  do (for i:T.lgth repeat
          (if T.T[i] = '\\' then '/' -> T.T[i] if)
     for);
  exit T[]
  #);
containerlist: list(# #);

