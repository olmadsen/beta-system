ORIGIN '~beta/basiclib/file';
INCLUDE '~beta/basiclib/numberio';
--PROGRAM: descriptor--
(# f: @file;
   i: @integer;
do 2 -> Arguments -> f.name;
   f.name -> screen.putline;
   f.openread;
   read:
     (if not f.eos then
         '0x' -> screen.puttext;
         i -> screen.puthex;
         i+1 -> i;
         ': 0x' -> screen.puttext;
         f.get -> screen.puthex;
         screen.newline;
         restart read;
     if);
   f.close;
#)
