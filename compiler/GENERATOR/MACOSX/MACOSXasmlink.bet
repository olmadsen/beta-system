  exit name[]
  #);


continue:
  (#
  do '\\' -> AFF.put; AFF.newLine; ascii.ht -> AFF.put;
  #);
strip:
  (# in: ^Text;
     out: ^Text;
     slash: @integer;
  enter in[]
  do in.scanAll
     (# inx: @integer;
     do inx+1 -> inx;
        (if ch = '/' then
            inx -> slash;
        if);
     #);
     
     (slash+1, in.length-1) -> in.sub -> out[];
     'macosx/' -> out.prepend;
     out[] -> quote -> out[];
  exit out[]
  #);

