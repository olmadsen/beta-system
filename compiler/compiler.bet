ORIGIN '~beta/basiclib/basicsystemenv';
LIB_DEF 'interactive' '../lib';
(*INCLUDE '~beta/betaast/betacfl';*)
INCLUDE 'CONTROL/system';
INCLUDE 'CONTROL/argumenthandler';
INCLUDE 'CONTROL/translateWithErrorHandling';
INCLUDE 'GENERATOR/runJobFile';
BODY 'SYNTHESIZER/synthesizer';
MDBODY sun4s   'GENERATOR/SUN4S/SUN4Sbeta'
       sgi     'GENERATOR/SGI/SGIbeta'
       linux   'GENERATOR/LINUX/LINUXBbeta'
       x86sol  'GENERATOR/X86SOL/X86SOLbeta'
       hpux9pa 'GENERATOR/HPUXPA/HPUX9PAbeta'
       ppcmac  'GENERATOR/PPCMAC/PPCMACbeta'
       nti_ms  'GENERATOR/NTI_MS/NTIMSbeta'
       nti_gnu 'GENERATOR/NTI_GNU/NTIGNUbeta'
