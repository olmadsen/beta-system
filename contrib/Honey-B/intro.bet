ORIGIN '~beta/guienv/guienv';
INCLUDE '~beta/guienv/multimedia/movieplayer';
--guienvLib:Attributes--

introWindow: window
(#
	type::windowTypes.palette;    			

	movieViewer: @moviePlayer
	(#
		controllerVisible::  (#  do false->value;  #);
		eventHandler:: 
		(#
			onKeyDown::  (#  do THIS(window).close;  #);
			onMouseDown::  (#  do THIS(window).close;  #);
		#);
	#);
	theMovie: @Movie;
	movieName: @Text;
	w,h: @integer;
	open::
	(# 
	do
		(200,200)->position;
		'Intro'->title;
		movieViewer.open;
		'intro.avi'->movieName.putText;
		movieName[]->theMovie.read;
		theMovie.displaySize->size;
		theMovie[]->movieViewer.Contents;
		hide;
	#);       
	eventHandler::
     (# 
     	onAboutToClose:: (# do terminate #);
	#); 
#);


