ORIGIN '~beta/guienv/guienv';



-- guienvLib: attributes --

sound:
	(* A sound represents music files (midi) that can be
	 * played in a soundPlayer.
	 *)
	(# <<SLOT soundLib: attributes>>;
		read:
			(* Read the specified sound file. *)
			(# theFileName: ^text;
			enter theFileName[]
			<<SLOT soundRead: doPart>>
			#);
		userSelectFile:
			(* Let the user select a sound file in a standard file
			 * dialog.
			 *)
			(# success: @boolean;
			<<SLOT soundUserSelectFile: doPart>>
			exit success
			#);
		length:
		   (* Return the length of the sound. *)
			(# theLength: @integer;
			<<SLOT soundLength: doPart>>
			exit theLength
			#);
		fileName:
			(* The name of the sound file. *)
			(# theFileName: ^text;
			<<SLOT soundFilename: doPart>>
			exit theFileName[]
			#);
		private: @<<SLOT soundPrivate: descriptor>>;
	#);
	

soundPlayer:
	(# <<SLOT soundPlayerLib: attributes>>;
	
		contents:
		   (* The sound that are selected in the soundPlayer. *)
			(#
			enter (# enter  theSound[] <<SLOT soundPlayerSetContents: doPart>> #)
			exit theSound[]
			#);
		read:
			(* Read the specified sound file. This is a shortcut for initialising a 
			 * Sound.
			 *)
			(# theFileName: ^text;
			enter theFileName[]
			<<SLOT soundplayerRead: doPart>>
			#);
		userSelectFile:
			(* Let the user select a sound file in a standard file
			 * dialog.This is a shortcut for initialising a 
			 * Sound.
			 *)
			(# success: @boolean;
			<<SLOT soundplayerUserSelectFile: doPart>>
			exit success
			#);
			
		soundPosition:
			(# thePosition: @real;
			enter (# enter thePosition <<SLOT soundPlayerSetSoundPosition: doPart>> #)
			exit (# <<SLOT soundPlayerGetSoundPosition: doPart>> #)
			#);
			
		start:
			(* Start playing. *)
			(# <<SLOT soundPlayerStart: doPart>> #);
		stop:
			(* Stop playing. *)
			(# <<SLOT soundPlayerStop: doPart>> #);
		pause:
			(* Pause playing. *)
			(# <<SLOT soundPlayerPause: doPart>> #);
		theSound: ^sound;
		private: @<<SLOT soundPlayerPrivate: descriptor>>;
	#);