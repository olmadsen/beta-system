 * The intent of this fragment is that is should contain verious
 * standard dialogs, such as noteUser, alertUser, fileSelectionDialog,
 * etc.
 *)
-- guienvLib: attributes --
(* idx=1 *)
noteUser: 
  (* brings up a simple dialog with the text 'message' in a modal
   * dialog. The dialog will be centered in the rectangle of the owner
   * - the screen if owner is None.  The dialogs title will be
   * dialogTitle, wich will be visible in the dialogs titlebar, if it
   * has any.
   *)
  (# message: ^text;
     owner: ^window;
     dialogTitle: ^text;
  enter (owner[],message[],dialogTitle[])
  do <<SLOT noteUserBody: descriptor>>
  #);
alertUser:
  (* brings up a simple dialog with the text 'message' in a modal
   * dialog. The dialog will be centered in the rectangle of the owner
   * - the screen if owner is None.  The dialogs title will be
   * dialogTitle, wich will be visible in the dialogs titlebar, if it
   * has any.
   *)
  (# message: ^text;
     owner: ^window;
     dialogTitle: ^text;
  enter (owner[],message[],dialogTitle[])
  do <<SLOT alertUserBody: descriptor>>
  #);
fileSelectionDialog:
  (* brings up a standard file selection dialog *)
  (# owner: ^window;
     filename: ^text;
     filter: ^text;
     (* e.g.: 'Write Files(*.WRI)|*.wri|Word Files(*.DOC)|*.doc|' *)     
  enter owner[]
  do <<SLOT fileSelectionDialogBody:descriptor>>
  exit filename[]
  #);

fileCreationDialog:
  (# (* brings up a standard save file dialog *)
     owner: ^window;
     filename: ^text;
     filter: ^text;  
     (* e.g.: 'Write Files(*.WRI)|*.wri|Word Files(*.DOC)|*.doc|' *)
  enter owner[]
  do <<SLOT fileCreationDialogBody: descriptor>>
  exit filename[]
  #);
