ORIGIN '~beta/guienv/v1.6/guienv';
INCLUDE '~beta/guienv/v1.6/controls';
-- program: descriptor --
GUIenv
(# mainWindow: @window
     (# resizeable:: (# do false -> value #);
        aScrollbar: @scrollbar
          (# eventHandler::
               (# onValueChanged::
                    (# aText: ^text;
                    do &text[] -> aText[];
                       'Scrollbar value = ' -> aText.putText;
                       value -> aText.putInt;
                       aText[] -> THIS(window).title;
                    #);
               #);
             open::
               (# 
               do (13, 13) -> position;
                  (200, 16) -> size;
                  200 -> maxValue;
                  50 -> value;
                  1 -> scrollAmount;
                  20 -> pageScrollAmount;
               #);
          #);
        open::
          (# width, height: @integer;
          do '' -> title;
             aScrollbar.open;
             aScrollbar.size -> (width, height);
             (width+ 26, height + 26) -> size;
          #);
        close::
          (#
          do terminate
          #);
     #);		
do mainWindow.open;
#)
