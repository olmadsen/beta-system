ORIGIN '~beta/guienv/guienv';
INCLUDE '~beta/guienv/controls';

-- program: descriptor -- 
GUIenv
(# 
   aWindow: @Window 
     (#
        (*the window eventhandler *) 
        eventHandler:: 
          (# 
             (*the windows events*)
             onAboutToClose:: 
               (# do 'the onAboutToClose event called'-> putLine; #);
             onActivate:: (# do 'the onActivate event called'-> putLine #);
             (* the InterfaceObjects events*)
             onMouseDown:: (# do 'Mouse button down' ->putLine; #);
             onMouseUp:: (# do 'Mouse button up'-> putLine #);
             onKeyDown:: (# temp: @Text; 
                         do
                            'OnKeyDown event called, "'-> putText;
                            ch-> putInt;
                            '" (in ASCII) was pressed'-> putLine
                         #)
          #);
     #);
do aWindow.open;
#)
