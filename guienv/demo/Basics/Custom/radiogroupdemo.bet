ORIGIN '~beta/guienv/v1.6/demo/Basics/Custom/radiogroup';

-- program: descriptor --
GUIenv
 (# theWindow: @window
     (# resizeable:: (# do False -> value #);
         theRadioGroup: @radioGroup
           (# radio1: @radio
		       (# open::
			       (#
				   do 'English' -> label;
				   #);
			   #);
			  radio2: @radio
			   (# open::
			       (#
				   do 'Danish' -> label;
				   #);
			   #);
			  radio3: @radio
			   (# open::
			       (#
				   do 'French' -> label;
				   #);
			   #);
			  open::
			   (#
			   do ' Language: ' -> caption;
			      radio1.open;
			   	  radio2.open;
				  radio3.open;
				  radio1[] -> currentRadio;
				  (10, 10) -> position;
				  (300, 150) -> size;
			   #);
           #);
        open::
         (# width, height: @integer;
         do 'Simple Radiogroup Demo' -> Title;
            theRadioGroup.open;
            theRadioGroup.size -> (width, height);
            (width + 20, height + 20) -> size;
         #);
        close::
         (# do Terminate; #);
     #);
 do theWindow.open;
 #)