ORIGIN '~beta/guienv/guienv';
INCLUDE '~beta/guienv/utils/guienvadds'
        '~beta/guienv/controls'
        './iconNameTranslator';
-- WindowLib: Attributes --
iconCursorCanvas: canvas 
  (#
     uglyIconButton: @pushbutton
       (#
          open::< 
            (# 
            do
               'Set ugly icon'->label;
               (130,30)->size;
               (175,50)->position;
               INNER
            #);
          eventHandler::< 
            (#
               onMouseUp::< 
                 (# 
                 do
                    'images/ugly.png'->loadWindowIcon;
                    INNER
                 #)               
            #)
       #);
     mjolnerIconButton: @pushbutton
       (#
          open::< 
            (# 
            do
               'Set Mjolner icon'->label;
               (130,30)->size;
               (25,50)->position;
               INNER
            #);
          eventHandler::< 
            (#
               onMouseUp::< 
                 (# 
                 do
                    'images/mjolner.png'->loadWindowIcon;
                    INNER
                 #)               
            #)
       #);
     nextCursorButton: @pushbutton
       (#
          open::< 
            (# 
            do
               'next >'->label;
               (50,25)->size;
               (220,180)->position;
               INNER
            #);
          eventHandler::< 
            (#
               onMouseUp::< 
                 (#  
                 do 
                    currentCursorNum + 2 -> currentCursorNum; 
                    (if currentCursorNum > 152 then 152->currentCursorNum if);
                    INNER;
                    currentCursorLabel.updateLabel;
                    currentCursorNum->setMouseCursor;
                 #)               
            #)          
       #);
     prevCursorButton: @pushbutton
       (#
          open::< 
            (# 
            do
               '< prev'->label;
               (50,25)->size;
               (25,180)->position;
               INNER
            #);
          eventHandler::< 
            (#
               onMouseUp::< 
                 (#  
                 do 
                    currentCursorNum - 2 -> currentCursorNum; 
                    (if currentCursorNum < 0 then 0->currentCursorNum if);
                    INNER;
                    currentCursorLabel.updateLabel;
                    currentCursorNum->setMouseCursor;
                 #)               
            #)          
       #);
     currentCursorLabel: @statictext
       (#
          updateLabel: 
            (# 
            do currentCursorNum->cursorNumToName->label; 
            #);
          open::< 
            (# 
            do
               currentCursorNum->cursorNumToName->label;
               (140,16)->size;
               (80,185)->position;
               INNER
            #)
       #);
     cursorLabel: @statictext
       (#
          open::< 
            (# 
            do
               'Cursors:'->label;
               (60,16)->size;
               (25,150)->position;
               INNER
            #)
       #);
     iconsLabel: @statictext
       (#
          open::< 
            (# 
            do
               'Icons:'->label;
               (60,16)->size;
               (25,20)->position;
               INNER
            #)
       #);
     
     currentCursorNum: @integer;
     open::< 
       (# x,y: @integer
       do
          father.size->(x,y);
          (x-10,y-10)->size;
          uglyIconButton.open;
          mjolnerIconButton.open;
          prevCursorButton.open;
          nextCursorButton.open;
          currentCursorLabel.open;
          cursorLabel.open;
          iconsLabel.open;
          XC_crosshair->currentCursorNum;
          currentCursorLabel.updateLabel;
          XC_crosshair->setMouseCursor;
          INNER
       #);
  #)





