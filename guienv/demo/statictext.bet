ORIGIN '~beta/guienv/controls'
-- program: descriptor --
GUIenv
(# mainWindow: @window
     (# resizeable:: (# do false -> value #);
        helloWorld: @statictext
          (# open::
               (# aTextStyle: ^textStyle;
               do &textStyle[] -> aTextStyle[];
                  'Times' -> aTextStyle.name;
                  24 -> aTextStyle.size;
                  textFaces.bold -> aTextStyle.face;
                  aTextStyle[] -> style;
                  
                  'Hello, World!' -> label;
                  (0xffff,0,0)->foregroundColor;
                  fitToContents
               #)
          #);
        open::
          (#
          do '' -> title;
             helloWorld.open;
             helloWorld.size -> size;
          #);
        close::
          (#
          do terminate 
          #);
     #);		
do mainWindow.open;
#)
