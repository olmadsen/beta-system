-- filecreationdialogbody: descriptor --
(# fileBox: @integer;
   defaultButton: @integer;
   textField: @integer;
   cancelButton: @integer;
   defaultButtonActivate1: external
     (# w,client_data,call_data: @integer;
     enter (w,client_data,call_data)
     do cExternalEntry;
        (1,XmNvalue,@@stringAddress) -> args.set;
        (textField,args[],1) -> XtGetValues;
        stringAddress -> cStringToCharRep -> t;
        t.copy -> fileName[];
        stringAddress-> XtFree;
        fileBox -> XtUnmanageChild;
        true -> done;
     #);
   cancelButtonActivate1: external
     (# w,client_data,call_data: @integer;
     enter (w,client_data,call_data)
     do cExternalEntry;
        fileBox -> XtUnmanageChild;
        true -> done;
     #);
   done: @boolean;
   args: @argList;
   t: @text;
   stringAddress: @integer;
do (1,XmNdialogStyle,XmDIALOG_FULL_APPLICATION_MODAL) -> args.set;
   (owner.widgetID,'FileSelectionDialog',args[],1) -> XmCreateFileSelectionDialog -> fileBox;
   (fileBox,XmDIALOG_DEFAULT_BUTTON) -> XmFileSelectionBoxGetChild -> defaultButton;
   (fileBox,XmDIALOG_TEXT) -> XmFileSelectionBoxGetChild -> textField;
   (fileBox,XmDIALOG_CANCEL_BUTTON) -> XmFileSelectionBoxGetChild -> cancelButton;
   (defaultButton,XmNActivateCallback,defaultButtonActivate1##,0) -> XtAddCallback;
   (cancelButton,XmNActivateCallback,cancelButtonActivate1##,0) -> XtAddCallback;
   fileBox -> XtManageChild;
   l: (if done//false then
          (this(guienv).private.appCon,XtIMAll) -> XtAppProcessEvent;
          restart l;
      if);
   fileBox -> XtDestroyWidget;
#)

