-- noteUserBody: descriptor --
(# args: @argList;
   parent: @integer;
   warningDialog: @integer;
   done: @boolean;
   
   noteButtonActivate: external
     (# w,client_data,call_data: @integer;
     enter (w,client_data,call_data)
     do cExternalEntry;
        warningDialog -> XtUnmanageChild;
        true -> done;
     #);
   okButtonID: @integer;
   cancelButtonID: @integer;
   helpButtonID: @integer;
   mstr: @motifString;
   mtitle: @motifString;
   dialogShell: @integer;
   XtAppCreateShell: external
     (# name: [1] @char;
        class: [1] @char;
        widgetClass: @integer;
        display: @integer;
        args: ^argList;
        nArgs: @integer;
        newWidget: @integer;
     enter (name,class,widgetclass,display,args[],nArgs)
     do callC
     exit newWidget
     #);
do owner.widgetID -> parent;
   (parent,'',args[],0) -> XmCreateDialogShell -> dialogShell;
   (* (1,XtNtransient,True) -> args.set;
    *    (2,XtNallowShellResize,True) -> args.set;
    *    (private.appClass,private.appName,overrideShellWidgetClass,private.display,args[],2) 
    *      -> XtAppCreateShell -> dialogShell;
    *)
   
   message[] -> mstr.setText;
   dialogTitle[] -> mtitle.setText;
   (1,XmNmessageString,mstr) -> args.set;
   (2,XmNdialogStyle,XmDIALOG_FULL_APPLICATION_MODAL) -> args.set;
   (3,XmNdialogTitle,mtitle) -> args.set;
   (4,XmNdefaultPosition,False) -> args.set;
   (dialogShell,'',args[],4) -> XmCreateMessageBox -> warningDialog;
   mstr.destroy;
   mtitle.destroy;
   (warningDialog,XmDIALOG_CANCEL_BUTTON) -> XmMessageBoxGetChild -> cancelButtonID;
   (warningDialog,XmDIALOG_OK_BUTTON) -> XmMessageBoxGetChild -> okButtonID;
   (warningDialog,XmDIALOG_HELP_BUTTON) -> XmMessageBoxGetChild -> helpButtonID;
   (okButtonID,XmNActivateCallback,noteButtonActivate##,0) -> XtAddCallback;
   (cancelButtonID,XmNActivateCallback,noteButtonActivate##,0) -> XtAddCallback;
   cancelButtonID -> XtUnmanageChild;
   helpButtonID -> XtUnmanageChild;
   warningDialog -> XtManageChild;
   l: (if done//false then
          (this(guienv).private.appCon,XtIMAll) -> XtAppProcessEvent;
          restart l;
      if);
   dialogShell -> XtDestroyWidget;
#)
