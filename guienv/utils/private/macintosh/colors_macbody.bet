ORIGIN '../colorsbody';
INCLUDE '../../../private/macintosh/guienv_macprivate';

-- GUIENVwindowItemEnterForegroundColor: doPart --
do

-- GUIENVwindowItemExitForegroundColor: doPart --
do

-- GUIENVwindowItemEnterBackgroundColor: doPart --
do assertOpen;
	(if value[] = NONE then
		NONE -> private.background[];
	else
		&color[] -> private.background[];
		value -> private.background;
	if);
	

-- GUIENVwindowItemExitBackgroundColor: doPart --
do assertOpen;
	&color[] -> value[];
	(if private.background[] <> NONE then
		private.background -> value;
	else
		this(guienv).private.background -> value;
	if);