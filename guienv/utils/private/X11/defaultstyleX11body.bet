ORIGIN '../defaultstylebody';
MAKE default 'external/defaultfont.make';
OBJFILE default '$/defaultfont.o';

INCLUDE '../../../private/X11/guienv_unixprivate';
INCLUDE '~beta/Xt/v1.8.1/xlib';

-- lib: attributes --
GetDefaultFont: external
  (# font: [0] @char
  exit font
  #);

-- GUIenvDefaultStyle: doPart --
do (# fontname: @text;
      dpy: @integer;
   do &textStyle[] -> style[];
      GetDefaultFont -> fontname;
      this(GUIenv).private.display -> dpy;
      (dpy, fontname) -> XLoadQueryFont -> style.private.fontStruct;
   #)
