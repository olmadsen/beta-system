-- graphicsIsInClip: doPart --
do (if private.clip[] = NONE then
       true -> value;
    else
       (# aRectangle: @rectangle;
       do (r, private.clip) -> aRectangle.intersection -> value;
       #);
   if);
   
-- graphicsSetClipRectangle: doPart --
do &rectangle[] -> private.clip[];
   r -> private.clip;
   r -> setClipRect;
   
-- graphicsDrawIcon: doPart --
do 'graphicsDrawIcon: doPart' -> putLine;

