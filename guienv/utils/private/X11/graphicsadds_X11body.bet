INCLUDE '../../../private/X11/graphics_unixbody';



-- graphicsSetClipChildren: doPart --
do (# subWindowMode: @integer;
   do (if doClipByChildren then
          ClipByChildren -> subWindowMode;
       else
          IncludeInferiors -> subWindowMode;
      if);
      (private.display,private.gc,subWindowMode) -> XSetSubWindowMode;
   #)
   
-- graphicsIsInClip: doPart --
do (if private.clip[] = NONE then
       true -> value;
    else
       (# aRectangle: @rectangle;
       do (r, private.clip) -> aRectangle.intersection -> value;
       #);
   if);
   
-- graphicsSetClipRectangle: doPart --
do &rectangle[] -> private.clip[];
   r -> private.clip;
   r -> setClipRect;

-- GUIENVGraphicsdrawRectangle: doPart --
do (private.display,private.window,private.gc,
   r.left, r.top, r.right - r.left, r.bottom - r.top) -> XDrawRectangle;
   
