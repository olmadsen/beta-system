wglMakeCurrent:external
  (# 
     hdc,hglrc:@integer;(*HDC, HGLRC*)
     result:@integer;
  enter (hdc,hglrc)
  exit result
  #);

wglShareLists:external
  (# 
     hglrc1,hglrc2:@integer; (*HGLRC, HGLRC*)
     result:@integer;
  enter (hglrc1,hglrc2)
  exit result
