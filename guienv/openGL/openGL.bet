ORIGIN '~beta/guienv/v1.6/guienv';
LINKOPT sun4s '-lGLw -lGL';
INCLUDE '~beta/guienv/v1.6/private/X11/guienv_unixprivate';
INCLUDE 'openGLlib';
INCLUDE 'openGLXlib';

BODY 'private/openGLbody.bet';
--windowlib:attributes--
openGLarea:windowitem
  (# 
     Doublebuffer:@boolean; (* True if this windowitem has doublebuffer *)
     glBSwapBuffers:
       <<SLOT openGLglBSwapBuffers:descriptor>>;
     openGLprivate:@<<SLOT openGLareaprivate:descriptor>>;
     open::<
       (#
          create::<
            (# 
               <<SLOT openGLarealib:attributes>>;
            <<SLOT openGLareaCreateDoPart:doPart>>
            #); 
       do (200,200)->size;
          INNER open
       #);
  #);
