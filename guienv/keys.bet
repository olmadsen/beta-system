-- Lib: Attributes --

(* this is common constant for all platforms.
 * No similarities intended *)
(* standard keys comes in the range 2^32+ch, 0<ch<255 *)

SpecialKeys:
  (#
     PG_UP: (#  exit 66001 #);
     PG_DOWN: (#  exit 66002 #);
     HOME: (#  exit 66003 #);
     END: (#  exit 66004 #);
     INSERT: (#  exit 66005 #);
     F1: (#  exit 66011 #);
     F2: (#  exit 66012 #);
     F3: (#  exit 66013 #);
     F4: (#  exit 66014 #);
     F5: (#  exit 66015 #);
     F6: (#  exit 66016 #);
     F7: (#  exit 66017 #);
     F8: (#  exit 66018 #);
     F9: (#  exit 66019 #);
     (* The following are normal ASCII characters, i.e. value<255
      * but they are added for convenience and for printing their
      * textual name. *)
     BACKSPACE: (#  exit 8 #);
     TAB: (#  exit 9 #);
     RETURN: (#  exit 13 #);
     ESCAPE: (#  exit 27 #);
     LEFT: (#  exit 28 #);
     RIGHT: (#  exit 29 #);
     UP: (#  exit 30 #);
     DOWN: (#  exit 31 #);
     SPACE: (#  exit 32 #);
     DELETE: (#  exit 127 #);
     
     (* Exits the name of the key, e.g. to be shown as a shortcut key 
      * in a menu. This name could be changed, as it is in principle
      * only cosmetic. *)
     keyToText:
       (# key: @integer; spk: @specialkeys; name: ^text
       enter key
       <<SLOT keyToText: doPart>>
       exit name[]
       #);
     
     (* Exits the platform specific textual name of a key. If this name 
      * is changed, shortcut keys defined hereby will not work. *)
     platformKeyToText:
       (# key: @integer; spk: @specialkeys; name: ^text
       enter key
       <<SLOT platformKeyToText: doPart>>
       exit name[]
       #);
     
  #)  

