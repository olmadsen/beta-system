ORIGIN '_BindingFlags';
ON 19 (* Disable warnings about runtime qualification tests *);
INCLUDE '~beta/dotnetlib/System/_Enum';
--LIB: attributes--

(* .NET BindingFlags class. *)
BindingFlags: _BindingFlags
  (#
     (* Enum Literals *)

     Default:
       (# exit 0 #);
     IgnoreCase:
       (# exit 1 #);
     DeclaredOnly:
       (# exit 2 #);
     Instance:
       (# exit 4 #);
     Static:
       (# exit 8 #);
     Public:
       (# exit 16 #);
     NonPublic:
       (# exit 32 #);
     FlattenHierarchy:
       (# exit 64 #);
     InvokeMethod:
       (# exit 256 #);
     CreateInstance:
       (# exit 512 #);
     GetField:
       (# exit 1024 #);
     SetField:
       (# exit 2048 #);
     GetProperty:
       (# exit 4096 #);
     SetProperty:
       (# exit 8192 #);
     PutDispProperty:
       (# exit 16384 #);
     PutRefDispProperty:
       (# exit 32768 #);
     ExactBinding:
       (# exit 65536 #);
     SuppressChangeType:
       (# exit 131072 #);
     OptionalParamBinding:
       (# exit 262144 #);
     IgnoreReturn:
       (# exit 16777216 #);
  do 'valuetype [mscorlib]System.Reflection.BindingFlags' -> className;
  INNER;
  #);

(* Utility function to ease casting to fully specified class. *)
asBindingFlags:
  (# _B: ^_BindingFlags;
     B: ^BindingFlags;
  enter _B[]
  do _B[]->B[];
  exit B[]
  #);
