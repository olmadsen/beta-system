ORIGIN '_ParameterInfo';
ON 19 (* Disable warnings about runtime qualification tests *);
INCLUDE '~beta/dotnetlib/System/_Type';
INCLUDE '~beta/dotnetlib/System/Reflection/_MemberInfo';
INCLUDE '~beta/dotnetlib/System/Reflection/_ParameterAttributes';
INCLUDE '~beta/dotnetlib/System/_String';
--LIB: attributes--

(* .NET ParameterInfo class. *)
ParameterInfo: _ParameterInfo
  (#
     (* Public/family CLS compliant methods *)

     IsDefined: proc
       (# result: @boolean;
          arg1: ^_Type;
          arg2: @boolean;
       enter (arg1[], arg2)
       exit result
       #);
     GetCustomAttributes_boolean: proc (* GetCustomAttributes *)
       (# result: [0]^Object;
          arg1: @boolean;
       enter (arg1)
       do 'GetCustomAttributes' -> procname;
       exit result[]
       #);
     GetCustomAttributes_Type_boolean: proc (* GetCustomAttributes *)
       (# result: [0]^Object;
          arg1: ^_Type;
          arg2: @boolean;
       enter (arg1[], arg2)
       do 'GetCustomAttributes' -> procname;
       exit result[]
       #);
     get_Member: proc
       (# result: ^_MemberInfo;
       exit result[]
       #);
     get_DefaultValue: proc
       (# result: ^Object;
       exit result[]
       #);
     get_Attributes: proc
       (# result: ^_ParameterAttributes;
       exit result[]
       #);
     get_Position: proc
       (# result: @int32;
       exit result
       #);
     get_Name: proc
       (# result: ^_String;
       exit result[]
       #);
     get_ParameterType: proc
       (# result: ^_Type;
       exit result[]
       #);
     get_IsIn: proc
       (# result: @boolean;
       exit result
       #);
     get_IsOut: proc
       (# result: @boolean;
       exit result
       #);
     get_IsLcid: proc
       (# result: @boolean;
       exit result
       #);
     get_IsRetval: proc
       (# result: @boolean;
       exit result
       #);
     get_IsOptional: proc
       (# result: @boolean;
       exit result
       #);
  do '[mscorlib]System.Reflection.ParameterInfo' -> className;
  INNER;
  #);

(* Utility function to ease casting to fully specified class. *)
asParameterInfo:
  (# _P: ^_ParameterInfo;
     P: ^ParameterInfo;
  enter _P[]
  do _P[]->P[];
  exit P[]
  #);
