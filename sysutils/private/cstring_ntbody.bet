ORIGIN  'cstringbody.bet';

MAKE    nti 'external/convert_nti.make';
OBJFILE nti '$/convert_nti.obj';

--LIB: attributes--

convert_to_winnt: External
  (# src,dst: @integer;
     nl: @char
  enter (src,nl)
  do CallC
  exit dst
  #);
  
convert_from_winnt: External
  (# src,dst: @integer;
     nl: @char
  enter (src,nl)
  do CallC
  exit dst
  #);

--ConvertFromLocal: dopart--
do &CString[]->new[];
   (charPtr,ascii.newline)->convert_from_winnt->new;

--ConvertToLocal: dopart--
do &CString[]->new[];
   (charPtr,ascii.newline)->convert_to_winnt->new;

