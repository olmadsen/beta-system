ORIGIN '~beta/sysutils/v1.5/pathhandler';
--PROGRAM:descriptor--

(* An example of using PathHandler to find local paths. *)

(# handler: @pathhandler;
do handler.init;
   'Some simple examples of local paths:\n' -> puttext;
   '\n\t''/users/beta/basiclib/current/pathhandler''\n' -> puttext;
   'converted local to ''/users/beta'' yields\n\t''' -> puttext;
   ('/users/beta/basiclib/current/pathhandler', '/users/beta')
     -> handler.localpath -> puttext;
   '''\n' -> puttext;
   
   '\n\t''/usr/lib/beta/basiclib/current/pathhandler''\n' -> puttext;
   'converted local to ''/usr/lib/beta/process/v1.0'' yields\n\t''' -> puttext;
   ('/usr/lib/beta/basiclib/current/pathhandler', '/usr/lib/beta/process/v1.0')
     -> handler.localpath -> puttext;
   '''\n' -> puttext;
   
   '\n\t''~foo/bar/tmp''\n' -> puttext;
   'converted local to ''~foo'' yields\n\t''' -> puttext;
   ('~foo/bar/tmp', '~foo')
     -> handler.localpath -> puttext;
   '''\n' -> puttext;
   
   '\nAn example of a conversion that fails:\n' -> puttext;
   '\n\t''/foo/bar/tmp''\n' -> puttext;
   'converted local to ''~foo'' yields\n\t''' -> puttext;
   ('/foo/bar/tmp', '~foo')
     -> handler.localpath -> puttext;
#)
   
