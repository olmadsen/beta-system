                              current[] -> currentDcl[];
                              currentDcl.NS.scan
                              (#
                              do current[] -> currentND[];
                                 inner scanDecls
               #)if)#)if)if)
            #);
          getOriginOff:< (# off: @integer do inner exit off #);
          scanAllDecls:
            (# origin:<
                 (# name: ^text;
                    off: @integer
                 enter(name[],off)
                 do inner
                 #);
               currentDcl: ^decl;
               currentND: ^nameDecl;
               superDesc,oldDesc: ^objectDesc;
               orgOff,superOrgOff,level: @integer
            do sup.desc->superDesc[];
               (if true then
                   (if (superDesc[] <> none) 
                       and (this(objectDesc)[] <> superDesc[]) then
                       (* for some unknown reason, 
                        * superDesc.desc becomes superDesc
                        * and we loop if we dont check for this??
