                            #);
                       do currentDcl[] -> this(scanAllDecls).currentDcl[];
                          currentND[] -> this(scanAllDecls).currentND[];
                          inner scanAllDecls
                       #)
                         -> (superOrgOff,level)
                   if);
                else
                   superLoop:
                     (* for some unknown reason, 
                      * superDesc.desc becomes superDesc
                      * and we loop if we dont check for this??
                      *)
                     (if (superDesc[] <> none) and (oldDesc[] <> superDesc[]) then
                         superDesc.scanDecls
                         (# 
                         do currentDcl[] -> this(ScanAllDecls).currentDcl[];
                            currentND[] -> this(ScanAllDecls).currentND[];
                            inner scanAllDecls
                         #);
                         superDesc[] -> oldDesc[];
                         superDesc.desc -> superDesc[];
                         restart superLoop
                     if);
               if);

               (if (getOriginOff -> orgOff) <> superOrgOff then
                   ('origin',orgOff) -> origin;
