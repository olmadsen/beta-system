          if);
          sup[] -> append;
          true -> sup.isSuper; 
          (if lex.symb = lex.symbols.begin then
              lex;
              (if lex.symb = lex.symbols.with then
                  lex;
                  WithPart -> with[] -> Append;
              if);
              (if lex.symb = lex.symbols.prim then
