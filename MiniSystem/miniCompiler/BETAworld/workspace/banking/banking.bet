banking: @
(# Person:
     (# name: ^Text;
        init:
          (# value: ^Text;
          enter value[]
          do value[] -> name[];
          #);
     #);
   
   Account:
     (# owner: ^Person;
        balance: @integer;
        
        init:
          (# aPerson: ^Person;
          enter aPerson[]
          do aPerson[] -> owner[];
          #);
        
        deposit:
          (# amount: @integer;
          enter amount
          do balance + amount -> balance;
          #);
        withdraw:
          (# amount: @integer;
          enter amount
          do balance - amount -> balance;
          #);
     #);
   joe: ^Person;
   account1: ^Account;
   jane: ^Person;
   
do &Person[] -> joe[];
   'Joe Smith' -> joe.init;
   &Account[] -> account1[];
   joe[] -> account1.init;
   100 -> account1.deposit;
   
   &Person[] -> jane[];
   'Jane Doe' -> jane.init;
#)
