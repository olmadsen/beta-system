Reader: @
  (# % OSDvisibility=SkipInternal %
     
     T: ^text;
     
     init:
       (#
       do 'Hello! $Here we go!%' -> T[]; 0 -> T.setPos
       #);
     nextCh: 
       (# ch: @ char 
       do T.getx -> ch; 
          (*get -> ch*) 
       exit ch 
       #);
     SkipWhiteSpace: 
       (# n: @ integer
       do Loop:
            (if ch <=  ' ' then
                n + 1 -> n;
                nextCh -> ch;
                restart Loop
            if);
          (if n > 0 then
              Breaker.addSep
          if)
       #);
     ch: @ char;
     start: 
       (# 
       do Loop:
            (if true then
                nextCh -> ch;
                SkipWhiteSpace;
                (if ch
                 // '$' then
                    Breaker.addPar; restart Loop
                 // '%' then
                    Breaker.clear
                 else
                    ch -> Breaker.add; restart Loop
                if)
            if)
       #)
  #)
