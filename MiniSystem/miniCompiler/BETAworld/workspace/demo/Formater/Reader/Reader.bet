Reader: @
  (# nextCh: (# ch: @ char do get -> ch exit ch #);
     SkipWhiteSpace: 
       (# n,nlCount: @ integer
       do 
          Loop:
            (if true
             // ch = ascii.newline then 
                nlCount + 1 -> nlCount; 
                (if nlCount = 2 then Breaker.addPar if); 
                nextCh -> ch;
                restart Loop 
             // ch <=  ' ' then 
                n + 1 -> n; 
                nextCh -> ch;
                restart Loop
            if);
          (if n > 0 then Breaker.addSep if)
       #);
     ch: @ char
  do Loop: (if true then nextCh -> ch; SkipWhiteSpace; ch -> Breaker.add; restart Loop if)
  #)
