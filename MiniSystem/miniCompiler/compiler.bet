   FN: ^text;
   VM: @betaVM
     (# putCh:: (# do ch -> put #);
        getCh:: (# do get -> ch #);
        (*startEvent:: (#do '\n***Start:' -> RTT.puttext #);
        allocEvent::
            (#
            do '\n***Alloc:' -> RTT.puttext;
            #);
          doEvent::
            (#
            do '\n***Do:' ->  RTT.puttext;
            #);
          rtnEvent::
            (#
            do '\n***Rtn:' ->  RTT.puttext;
         #);*)
        errorEvent:: (# do msg[] -> putline; done #);
