---lib:attributes---
generator: checker
  (# traceModules: (# exit false #);
     MkCom: 
       (# t1,t2: ^text enter (t1[],t2[]) do t2[] -> T1.append -> cd.comment #);
     
     Module::
       (# gen::
            (#
            do ('Comp',newDesc.noOfDescs) -> cd.newComponent;
               SO.gen;
            #);
            findNextImp:: (# do bcp -> SO.OG.IS.findNextImp -> impx[] #);
       #);
     ModuleItem::
       (# gen::
            (#
            do 
               (if MD.isIncluded then
                   ('ModuleItem:gen',sig.dopt) -> cd.com2;
                   (useReturnValue,superAdj,staticOff) -> MD.SO.gen
                else
                   (if traceModules then
                       'Module not included: ' -> puttext; sig.doPT -> putline
               if)if);

            #);
          pushThis:: (# do cd.pushThis #);
          load:: (# do '\nModuleItem:load'->putline #);
          store:: (# do '\nModuleItem:store'->putline #);
          pushOff:: (# do MD.SO.pushOff #);
          popReturn:: (# do '\nModuleItem:popReturn'->putline #);
          findNextImp:: (# do bcp -> md.findNextImp -> impx[] #);          
       #);
     StaticObject::
       (# gen::
            (#
            do 
               (if not OG.super.isBasic or not OG.IS.isEmpty then 
                   (if origin[] <> none then 
                       ('staticObject:',sig.doPT) -> cd.com2; 
                       cd.bcPos -> beginBCP;
                       (false,0,this(StaticObject).off) -> OG.gen;
                       (*cd.pushThis;
                        (sig.id[],this(StaticObject).off) -> cd.rstoreg;*)
                       cd.bcPos -> endBCP;
                    else 
                       (* A module object *)
                       ('StaticObject is Basic:', sig.doPt) -> cd.com2;
                       (if not OG.IS.isEmpty then
                           (sig.id[],none,OG[],OG.super[]) ->  ObjTmpStack.add
                       if)   
                   if)
               if);

            #);
          pushThis:: (# do cd.pushThis #);
          load::
            (* called when not receiver - i.e. value to be pushed *)
            (#
            do (if OG.super.isBasic then 
                   (sig.id[],off) -> cd.pushg
                else
                   'StaticObj:load' -> cd.comment;
                   (sig.id[],off) -> cd.rpushg
               if)               
            #);
          pushOff::
            (#
            do (if OG.super.isBasic and OG.IS.isEmpty then 
                   ('StaticObj:pushOff:isBasic:',sig.id[]) -> cd.com2;
                   (if next[] <> none then
                       ('SO:pushOff:',next.doP) -> cd.com2;
                       (if next.ATd.primNo = cmpAndSwap_prim then 
                           off -> cd.pushConst
                       if)
                   if);
                   (*'\n!!! StaticObj:LoadOff:basic: ' -> puttext;
                    dopt -> putline;*)
                   (* May happen for V := 117 where := is assignment 
                    * - no offset
                    * shall be pushed for V since V is assigned afterwards
                    * For R ++ 117 offset for R should be pushed since it
                    * is origin
                    *)
                else
                   (sig.id[],off) -> cd.rpushg
               if)
            #);
          store::
            (* Called from Signature::StoreParameters *)
            (#
            do (* 'StaticObject:store: '->putline;*)
               (if OG.super.isBasic then 
                   (sig.id[],off) -> cd.storeg
                else
                   (sig.id[],off) -> cd.rstoreg
               if)
            #);
          popReturn::
            (#
            do (if OG.super.isBasic then 
                   cd.vpop
                else
                   cd.rpop
               if)
            #)
       #);
     DynamicObject::
       (# gen:: (# do #);
          pushThis:: (# do cd.pushThis #);
          load:: 
            (# 
            do 'DynObj:load' -> cd.comment;
               (sig.id[],this(DynamicObject).off) -> cd.rpushg               
            #);
          pushOff:: (# do (sig.id[],off) -> cd.rpushg #);
          store:: 
            (# 
            do (if not noSwap then cd.rswap if); 
               (sig.id[],off) -> cd.rstoreg
            #);
          popReturn:: (# do cd.rpop #)            
       #);
     Signature::
       (# 
          storeParameters:
            (#
            do (*cd.setThisStack;*)
               (* 'storeParameters: ' -> puttext;*)
               scanParametersReverse
               (# D: ^Decl
               do (*currentPar.dopt -> puttext; ' ' -> put;*)
                  (if not (currentPar[] -> D[]).isVirtual then
                      cd.pushThis;
                      true -> currentPar.store
                  if)
               #)
            #);
          pushReturnValues:
            (#
            do (if val[] <> none then
                   cd.setThisStack;
                   val.scanSons
                   (# D: ^Decl
                   do current[] -> D[];
                      cd.pushThis;
                      D.load
                   #)
                else
                   cd.setThisStack;
                   cd.pushThis;
               if)
            #);
          popReturn:
            (# 
            do (if val[] <> none then
                   val.scanSons
                   (# D: ^Decl
                   do (current[] -> D[]).popReturn
                   #)
                else
                   cd.rpop
               if)
            #)
       #);
     ObjectGenerator::
       (# gen::
            (# name,T,T1: ^text
            do (*('OG: ',OI.inv.compoundSymb[]) -> MkCom;*)
               (*IS.inv.ATd.doPT -> putline*)
               'OG:staticOff: '-> T[]; staticOff -> T.putint; 
               
               cd.bcPos -> beginBCP;
               (*'OG:beginBCP: '->puttext;
                beginBCP -> putint; newline;
                'beginBCP: '->T1[];
                cd.bcPos -> T1.putint;
                T1[] -> cd.comment;*)
               (if IS.isEmpty 
                   and not super.hasVirtualArgs 
                   or (super.isBasic and IS.isEmpty) then
                   (* check this - called when R.foo *)
                   ':empty' -> T.append;
                   T[] -> cd.comment;
                   (useReturnValue,superAdj,staticOff) -> super.gen
                else
                   ':singular' -> T.append;
                   T[] -> cd.comment;                   
                   (* called when R.foo{ } *)
                   (* (if super.hasVirtualArgs then
                       'ObjectGenerator:gen:hasVirtualArgs: ' -> putline;
                       super.doP -> putline;
                       'descNo: ' -> puttext; IS.descNo -> putint; newline;
                       'SuperDesc: ' -> putline; IS.superDesc.doP -> putline;
                       'Super.descNo: ' -> puttext;
                       IS.superDesc.descNo -> putint; 
                       '\n---'->putline
                    if);*)
                   cd.pushThis; (* origin for a singular object *)
                   (if singularName[] <> none then
                       singularName[] -> name[]
                    else
                       (if super.ATd[] = none then 
                           '' -> name[]
                        else
                           Super.ATd.sig.id.copy -> name[]
                       if);
                       '#S#' -> name.append;
                       IS.descNo -> name.putint;
                   if);
                   
                   (name[],IS.descno,staticOff,true) -> cd.invoke;

                   (if not useReturnValue  then cd.rpop if);
                   
                   (name[],none,this(ObjectGenerator)[],super[]) -> ObjTmpStack.add
               if);
               cd.bcPos -> endBCP;
               (* 'OG:endBCP: '->puttext; label -> puttext; ' ' -> put;
                endBCP -> putint; newline;*)
            #);
          genClass::
            (#
            do (N[],sig[],IS.descNo,super[]) -> IS.genClass
            #)
       #);
     PatternId::
       (# gen::
            (#
            do 'PatternId:gen: ' -> puttext; dopt ->putline;
               IV.gen
            #)
       #);
     items::
       (# genClass:
            (# N: ^text; sig: ^Signature; descNo: @integer; super: ^Invocation;
               T: @text; ptn: ^Pattern;
               vSuperDesc: ^Items;
               nd: ^Node
            enter(N[],sig[],descNo,Super[])
            do (*'GenClass: ' -> puttext; N[] -> putline;*)
               (if (superDesc[] <> none) then
                   superDesc.father.father -> nd[];
                   (*'Super: ' -> puttext; nd.doPP->putline;*)
                   nd[] -> ptn[];
                   (if not superDesc.done then
                       (* 'HasSuper: ' -> puttext; *)
                       (* super is always a pattern - I think!*)
                       (# 
                       do (ptn.sig.id[],ptn.sig[],superdesc.descNo,ptn.OD.super[]) 
                            -> superDesc.genClass
                       #)
               if)if);
               (if not done then
                   true -> done;
                   (N[],descNo,false, (topSuper).descNo,originOff) -> cd.class;
                   (* thisObj = the new instance of this class 
                    * thisStack = caller
                    * Possible arguments on callerStack
                    *)
                   cd.bcPos -> beginBCP;
                   (* store parameters + origin *)
                   (if sig[] <> none then sig.storeParameters if);
                   ('origin',originOff) -> cd.rstore;
                   not doHasCode -> cd.allocEventQ;
                   
                   (if (superDesc[] <> none) and not superDesc.isBasic then
                       (ptn.sig.id[],superDesc.descNo)  -> cd.super; 
                       superDesc.descNo -> cd.vdtTableCopy;
                       (if superDesc.innerInx > 0 then
                           (superDesc.innerInx,descno) -> cd.vdtTable;
                           true -> hasSuperAndInner
                       if);
                       (* push super arguments *)
                       
                       (if superApl.isImplSuper then
                           (*'Implicit super:\n' -> puttext; doP -> putline;*)
                           (if superApl.isSingularImplSuper then
                               cd.pushThis;
                               ('iOrigin',originOff) -> cd.rpushg
                            else
                               (*'Non singular Implict super:\n'->puttext;
                               doP -> putline;*)
                               superApl.ATd[] -> ptn[];
                               origin[] -> vSuperDesc[]; (* find desc enclosing vDcl *)
                               (for i: superApl.pn repeat
                                    vSuperDesc.superDesc[] -> vSuperDesc[]
                               for);
                               (*'vSuperDesc: ' -> putline; 
                                * (0,true) -> vSuperDesc.doP -> putline;*)
                               cd.pushThis;
                               ('origin',originOff) -> cd.rpushg; 
                               ptn.OD.super.on -> vSuperDesc.goOrigin
                           if)                                   
                        else
                           'super.gen: push arguments' -> cd.comment;
                           (*'super.gen: push arguments: ' -> puttext;
                            super.doP -> putline;*)
                           (# E,rec: ^Exp;
                              loadOrigin:
                                (# superAdj: @integer; E,rec: ^Exp
                                enter superAdj
                                do super.scanSons
                                   (#
                                   do current[] -> E[];
                                      (if isFirst then 
                                          superAdj -> E.loadOrigin 
                                      if);
                                      (if true or not isLast then
                                          E.pushOff;
                                          E[] -> rec[]
                                      if);
                                   #);
                                exit(rec[],E[])
                                #)
                           do L:
                                super.scanSons 
                                (# E: ^Exp;
                                do current[] -> E[];
                                   (*'arg: ' -> puttext; E.doP -> putline;*)
                                   E.pushThis;
                                   leave L
                                #);
                              originOff -> loadOrigin -> (rec[],E[]);
                              originOff -> E.loadArgs 
                           #);
                       if);
                       superDesc.descNo -> cd.toSuper;
                       cd.markEnterE;  
                   if);   
                   (if (superDesc[] <> none) and not superDesc.isBasic  then
                    else cd.mvStack
                   if);
                   scanSons
                   (# I: ^Item
                   do current[] -> I[];
                      (if I.isDecl then (false,0,0) -> current.gen if) 
                   #);
                   (if innerInx > 0 then innerInx -> cd.innerA if);
                   (if (superDesc[] <> none) and not superDesc.isBasic  then
                       cd.rtnInner 
                    else
                       (if doHasCode then 
                           1 -> cd.rtnEventQ 
                        else
                           0 -> cd.rtnEventQ 
                       if)
                   if);
                   
                   (* Code for action part *)
                   (false,doHasCode) -> cd.actions;
                   restartLab.new;
                   leaveLab.new;
                   restartLab -> cd.defLab;
                   scanSons
                   (# I: ^Item; 
                   do current[] -> I[];
                      (if not I.isDecl then (false,0,0) -> current.gen if) 
                   #);
                   leaveLab -> cd.defLab;
                   (* we must push return values *)
                   (* push return value 
                    * - for staticObject: R: @Foo
                    *   Foo should return (this(Foo)
                    *   perhaps default?
                    * - otherwise push variables in -> 
                    *)
                   (if (superDesc[] <> none) and not superDesc.isBasic then
                    else
                       0 -> cd.rtnEventQ;
                       (if sig[] <> none then 
                           sig.pushReturnValues 
                        else
                           (* ad hoc *)
                           cd.setThisStack;
                           cd.pushThis
                   if)if);

                   (if (superDesc[] <> none) and not superDesc.isBasic then
                       cd.rtnInner
                    else
                       (*0 -> cd.rtnEventQ;*)
                       'D' -> cd.rtn;
                   if);
                   (vsize,rsize,1) -> CD.endClass;
                   cd.bcPos -> endBCP
               if)
            #);
          goOrigin:
            (# on: @integer; org: ^Items
            enter on
            do (if on > 0 then
                   (if basicNo = ifthen_prim then
                       on  -> (origin[]->org[]).goOrigin -> org[]
                    else
                       ('origin',originOff) -> cd.rpushg;
                       on - 1 -> (origin[]->org[]).goOrigin -> org[]
                   if)
                else
                   this(Items)[] -> org[]
               if)
            exit org[]
            #); 
          hasSuperAndInner: @Boolean;
          restartLab,leaveLab: @LabelHandler.label;

          findNextImp::
            (#
            do L:
                 scanSons
                 (#
                 do (if (bcp -> current.findNextImp -> impx[]) <> none then
                        leave L
                 if)#);
            #)
            
       #);
     UnaryPattern::
       (# gen:: (# do (sig.id[],sig[],OD[],OD.super[]) -> objTmpStack.add #);
          pushThis:: (# do cd.pushThis #);
          load::
            (#
            do ('UnaryPattern:load: ',sig.doPT) -> cd.com2; 
               (sig.id[],OD.IS.descno,staticOff,not OD.IS.doHasCode) -> cd.invoke;
               (if not useReturnValue then
                   sig.popReturn
                   (* reconsider if return values *)
               if)               
            #);
          store::
            (#
            do 'Pattern:store: '->puttext; doPT -> putline;
            #);   
       #);
     BasicUnaryPattern::
       (# load::
            (# org: ^Items
            do (if OD.primNo (*OD.IS.props.basicProp.primNo*)
                // inner_prim then
                   E.origin[] -> org[];
                   org.innerInx -> cd.innerx; 
                // none_prim then 
                   cd.pushNone
                // suspend_prim then
                   cd.suspendd
                // resume_prim then
                   ('Resume','D') -> cd.call;
                   cd.rpop
                // disable_prim then
                   ('disable',disable_prim) -> cd.callPrim
                // enable_prim then  
                   ('enable',enable_prim) -> cd.callPrim   

               if);
            #);
          loadX::
            (#
            do (if OD.primNo (*OD.IS.props.basicProp.primNo*)
                // thisCore_prim then 
                   ('thisCore',thisCore_prim) -> cd.callPrim
               if)
            #);          
       #);
     VirtualPattern::
       (# gen::
            (#
            do(* 'Gen Virtual: ' -> puttext; sig.doPT -> putline;*)
               (if OD.IS.isEmpty then
                   (*  'Empty virtualPTN: ' -> putline;*)
                   (off,(OD.super.desc).descNo) -> cd.vdtTable
                else
                   (sig.id[],sig[],OD[],OD.super[]) -> objTmpStack.add;
                   (off,OD.IS.descNo) -> cd.vdtTable
               if)
            #);
          pushThis:: (# do cd.pushThis #);
          load::
            (#
            do ('VirtualPtn:load: ',sig.doPT) -> cd.com2; 
               (sig.id[],off) -> cd.sendVirtual;
               (if not useReturnValue then
                   sig.popReturn
                   (* reconsider if return values *)
               if);               
            #);
          store::
            (#
            do 'VirtualPattern:store: '->puttext; doPT -> putline;
            #);          
       #);
     FurtherPattern::
       (# gen:: (# do '\n\n**** Further pattern is not implemented!\n' -> putline #);
       #);
     FinalPattern::
