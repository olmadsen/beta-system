            do 'Pattern:store: '->puttext; doPT -> putline;
            #); 
       #);
     BasicBinaryPattern::
       (# load:: 
            (# 
            do OD.primNo (*OD.IS.props.basicProp.primno*) -> cd.op
            #);          
       #);
     FunctionalPattern::
       (# gen:: (# do (sig.id[],sig[],OD[],OD.super[]) -> objTmpStack.add #);
          pushThis:: (# do cd.pushThis #);
          load:: 
            (# 
            do ('FunctionalPattern:load: ',sig.doPT) -> cd.com2;
               (sig.id[],OD.IS.descno,staticOff,false) -> cd.invoke;
               (if not useReturnValue then
                   sig.popReturn
               if);               
            #);
       #);
     BasicFunctionalPattern::
       (# load:: 
            (# 
            do (if OD.primNo (*OD.IS.props.basicProp.primNo*)
                // put_prim then 
                   ('put',OD.primNo (*OD.IS.props.basicProp.primNo*)) -> cd.Callprim
                // attach_prim then
                   ('attach',OD.primNo(*OD.IS.props.basicProp.primNo*)) -> cd.callPrim;
                   cd.rPop;
                // cmpAndSwap_prim then
                   (# I: ^Invocation
                   do E.father -> I[];
                      L:
                        I.scanSons
                        (# R: ^Exp
                        do current[] -> R[];
                           cd.swap;
                           ('cmpAndSwap',OD.primNo (*OD.IS.props.basicProp.primNo*)) -> cd.callPrim;
                           leave L
                        #)
                   #)
                // fork_prim then
                   ('fork',OD.primNo (*OD.IS.props.basicProp.primNo*)) -> cd.callPrim
                // sleep_prim then
                   ('sleep',OD.primNo (*OD.IS.props.basicProp.primNo*)) -> cd.callPrim;
               if)
            #);
       #);
     KeyWordPattern::
       (# gen:: (# do (sig.id[],sig[],OD[],OD.super[]) -> objTmpStack.add #);
          pushThis:: (# do cd.pushThis #);
          loadArgs::
            (# args: [6]^ObjectGenerator; top: @integer;
            do (*'KeyWordPtn:LoadArgs: ' -> puttext; *)
               E.args.scanArgs
               (#
               do (if (top+1 -> top) > args.range then 
                      args.range -> args.extend 
                  if);
                  current[] -> args[top][];
               #);
               sig.args.scanArgs
               (# D: ^Decl; i: @integer; OG: ^ObjectGenerator; name: ^text;
               do i + 1 -> i;
                  current[] -> D[]; 
                  (if D.isVirtual then
                      D.sig.id.copy -> name[];
                      '#SB#' -> name.append;
                      (args[i].desc).descno -> name.putint;
                      (name[],none,args[i][],args[i].super[]) 
                        -> ObjTmpStack.add;
                      E.father.father[] -> OG[]; (* need OG.descNo for VDT *)
                      (D.off,(args[i].desc).descno,(OG.desc).descNo) 
                        -> cd.vdtTableAt
                   else
                      (true,superAdj,0) -> args[i].gen
                  if);
               #);               
            #);
          loadAdr::
            (# args: [6]^ObjectGenerator; top: @integer;
            do (*'KeyWordPattern:loadAdr: ' -> puttext; sig.doPT -> putline;*)
               E.scanSons
               (# isArg: @boolean
               do (if isArg then
                      (*'Actual arg: ' -> puttext; current.doPT -> putline;*)
                      (if (top+1 -> top) > args.range then 
                          args.range -> args.extend 
                      if);
                      current[] -> args[top][]
                  if);
                  not isArg -> isArg                  
               #);
               sig.args.scanArgs
               (# D: ^Decl; i: @integer; OG: ^ObjectGenerator; name: ^text
               do i + 1 -> i;
                  current[] -> D[]; 
                  (*D.doPt -> putline;
                   args[i].dopt -> putline;*)
                  (if D.isVirtual then
                      'SingularBinding#' -> name[];
                      (args[i].desc).descno -> name.putint;
                      (* (args[i].desc).doPT -> putline;
                       (args[i].desc).descno -> putint;newline;*)
                      E.father.father[] -> OG[]; 
                      (* 'Binding: ' -> putline; args[i].doPT -> putline;*)
                      (name[],none,args[i][],args[i].super[]) -> ObjTmpStack.add;
                      
                      (*(OG.desc).descNo -> putint; newline;*)
                      
                      (D.off,(args[i].desc).descno,(OG.desc).descNo) -> cd.vdtTableAt
                   else
                      args[i].gen
                  if);
               #);
            #);
          load::
            (# args: [6]^ObjectGenerator; top: @integer;
               hasVirtualArgs: @boolean
            do (* 'KWP:load: ' -> puttext; sig.dopt -> putline;*)
               E.args.scanArgs
               (# 
               do (*'Actual arg: ' -> puttext; current.doP -> putline;*)
                  (if (top+1 -> top) > args.range then 
                      args.range -> args.extend 
                  if);
                  current[] -> args[top][]
               #);
               sig.args.scanArgs
               (# D: ^Decl; i: @integer
               do i + 1 -> i;
                  current[] -> D[]; (*D.doP -> putline;*)
                  (if D.isVirtual then
                      true -> hasVirtualArgs
                   else
                      args[i].gen
                  if);
               #);
               (if hasVirtualArgs then 
                   '\n>>> Has Virtual arguments'->putline;
                   (* father.father[] -> OG[];
                    ('KeyWord',none,OG[],OG.super[]) -> ObjTmpStack.add*)
                else
                   (sig.id[],OD.IS.descno,staticOff,false) -> cd.invoke;
                   (if not useReturnValue then
                       sig.popReturn
                   if)
               if)               
            #)
       #);
     BasicKeyWordPattern::
       (# load::
            (# exitLab: @labelHandler.label
            do (if OD.primNo (*OD.IS.props.basicProp.primNo*)
                // ifthen_prim then
                   exitLab.new;                   
                   E.args.scanSons
                   (# N: @integer
                   do N + 1 -> N;
                      (if N
                       // 1 // 3 then
                       // 2 then 
                          (true,0,staticOff) -> current.gen;
                          exitlab -> cd.jmpFalse;
                       // 4 then
                          current.gen;
                          exitLab -> cd.defLab;
                       else
                          'load:%if%then: too many arguments' -> putline;
                          E.doPt -> putline
                      if)
                   #);   
                // this_prim then
                   (* Must check that argument is the name of an enclosing 
                    * object or the name of the superpattern of an enclosing
                    * object 
                    *)
                   E.args.scanArgs
                   (# A: ^ObjectGenerator; org: ^Items
                   do current[] -> A[]; 
                      cd.pushThis;
                      A.super.on - 1 -> (E.origin[]->org[]).goOrigin; 
                   #);
                // inner_prim then
                   E.args.scanArgs
                   (# A: ^ObjectGenerator; org: ^Items
                   do current[] -> A[]; 
                      cd.pushThis;
                      A.super.on - 1 -> (E.origin[]->org[]).goOrigin -> org[]; 
                      org.innerInx -> cd.innerP; 
                      cd.rpopThisObj
                   #)
               if);
            #)
       #);            
     Invocation::
       (* E1.E2.E3
        *    E1.pushThis
        *    E1.on -> gorigin
        *    E1.pushOff
        *    E2.pushOff
        *    E3.execute
        * R.foo
        * R.foo{...}
        * X:= y + 12
        * R ++ E  -- problem E1 = R ++ E , i.e. first = true 
        * perhaps same problem for keyWord
        * We must reconsider parsing/AST and/or gen below
        *)
       (# gen:: 
            (# rec,E: ^Exp; T: ^Text
            do cd.bcPos -> beginBCP;
               L:
                 scanSons 
                 (#
                 do current[] -> E[];
                    E.pushThis;
                    (* cd.pushThis does not work, 
                     * E may be a constant or basic pattern,
                     * where pushThis shall not be generated
                     *)
                    leave L
                 #);
               superAdj -> loadOrigin -> (rec[],E[]);
               (rec[],useReturnValue,staticOff) -> E.execute;
               cd.bcPos -> endBCP
            #);
          loadOrigin:
            (# superAdj: @integer;
               rec,E,nE: ^Exp;
            enter superAdj
            do scanSons
               (# Ex: ^Exp
               do current[] -> E[]; 
                  (*current.doP -> cd.comment;*)
                  (if isFirst then superAdj -> E.loadOrigin if); 
                  (if not isLast then
                      current.doP -> cd.comment;
                      (if not (next -> nE[]).isAssign then
                          ('next not assign:',(next).doP) -> cd.com2;
                          (next).doP -> cd.comment;
                          E.doP -> cd.comment;
                          next -> Ex[];
                          Ex.doP -> cd.comment;
                          Ex[] -> E.pushOff
                      if);
                      E[] -> rec[]
                  if);
               #)
            exit(rec[],E[])
            #);
       #);
     adjustOrigin:
       (# originOff: @integer
       enter originOff
       do (if originOff > 0 then
              ('origin',originOff) -> cd.rpushg
          if)
       #);
     Unary::
       (* May be 
        *  A simple variable X declared as X:@integer; 
        *  An object R declared as R: @Foo
        *  A pattern Foo declared as Foo: Bar{ ... }
        *  ATd = operator.Decl
        *)
       (# pushThis:: (# do cd.bcPos -> beginBCP; ATd.pushThis #);; 
          loadOrigin::
            (# org: ^Items
            do (if ATd## <> BasicUnaryPattern## then
                   superAdj -> AdjustOrigin;
                   (*'Unary: on:' -> puttext; on -> putint; ' ' -> put; M.T[] -> putline;*)
                   on -> (origin[]->org[]).goOrigin; 
                else
                   ATd.loadX (* quite ad hoc *)
               if)
            #);
          pushOff:: (# do next[] -> ATd.pushOff #);
          execute:: 
            (# 
            do 
               (this(Exp)[],useReturnValue,staticOff) -> ATd.load;
               cd.bcPos -> endBCP
            #);
       #);
     Binary::
       (# pushThis:: (# do cd.bcPos -> beginBCP; ATd.pushThis #);
          loadOrigin::
            (# org: ^Items
            do superAdj -> AdjustOrigin;
               on -> (origin[]->org[]).goOrigin;               
            #);
          loadArgs:: (# do args.scanSons(# do (true,0,0) -> current.gen #) #);
          execute::
            (#
            do 
               (if isAssign then 
                   loadArgs; 
                   rec.ATd.store
                else
                   (if rec.ATd.isBasic then 
                       (this(Exp)[],useReturnValue,staticOff) -> rec.ATd.load
                   if);
                   loadArgs;
                   (this(Exp)[],useReturnValue,staticOff) -> ATd.load
               if);
               cd.bcPos -> endBCP
            #)
       #);
     Function::
       (# pushThis:: (# do cd.bcPos -> beginBCP; ATd.pushThis #);
          loadOrigin::
            (# org: ^Items
            do (if ATD.primNo = 0 then 
                   superAdj -> AdjustOrigin;
                   on -> (origin[]->org[]).goOrigin;   
               if)
            #);
          loadArgs:: 
            (# 
            do (*'Function:loadArgs: ' -> puttext; superAdj -> putint; 
               ' ' -> put; doP -> putline;*)
               args.scanArgs
               (# 
               do (true,superAdj,0) -> current.gen;
               #);
            #);
          execute::
            (# 
            do 
               loadArgs;
               (this(Exp)[],useReturnValue,staticOff) -> ATd.load;
                cd.bcPos -> endBCP
            #)          
       #);
     KeyWord::
       (# pushThis:: (# do ATd.pushThis #);
          loadOrigin::
            (# org: ^Items
            do (if (ATD.primNo = 0) (*or (ATd.primNo = ifThen_prim)*) then 
                   superAdj -> AdjustOrigin;
                   on  -> (origin[]->org[]).goOrigin
                else
                   (if ATd.primNo = this_prim then
                       (* AD hoc and clumsy !*)
                        (this(Exp)[],true,0) -> ATd.load
                   if)
               if)
            #);
          loadArgs::
            (* OBS! Is not handled as Function::loadArgs
             * Here we use ATd.loadArgs
             *)
            (# 
            do (*'Keyword:loadArgs: ' -> putline; doP -> putline;*)
               (this(Exp)[],superAdj) -> ATd.loadArgs
            #);               
          execute::
            (# doBreak:
                 (# OD: ^Items; E : ^ObjectGenerator; on: @integer;
                    primNo: @integer
                 enter primNo
                 do args.scanSons
                    (# isArg: @boolean
                    do (* current.doP -> puttext;  ' ' -> put; *)
                       (if isArg then
                           current[] -> E[];
                           E.super.on -> on;
                           (*  on -> putint; ' ' -> put *)
                       if);
                       noT isarg -> isarg
                    #);
                    (* ' on:' -> puttext; on -> putint; newline;*)
                    origin[] -> OD[];
                    (for i: ON - 1 repeat 
                         (if OD.basicNo = ifthen_prim then OD.origin[] -> OD[] if);
                         OD.origin[] -> OD[] 
                    for);
                    (if OD.basicNo = ifthen_prim then OD.origin[] -> OD[] if);
                    (*OD.doP -> putline;
                     ' descNo:' -> puttext; OD.descNo -> putint;*)
                    (if primNo
                     // restart_prim then 
                        (if on = 1 then
                            OD.restartLab -> cd.jmp
                         else
                            (on - 1, OD.restartLab) -> cd.break
                        if)
                     // leave_prim then 
                        (if on = 1 then
                            OD.leaveLab -> cd.jmp
                         else
                            (on - 1, OD.leaveLab) -> cd.break
                        if)
                    if)
                 #);
            do (*'KeyWord:execute: ' -> puttext; doPt -> putline;*)
               (if ATd.primNo
                // restart_Prim then
                   (*'Restart: ' -> puttext;*) restart_Prim -> doBreak
                // leave_Prim then 
                   (*'Leave: ' -> puttext;*) leave_Prim -> doBreak
                // this_prim then
                else
                   (this(Exp)[],useReturnValue,staticOff) -> ATd.load
               if)
            #);
       #);
     BracketedExp::
       (# pushThis:: (# do E.pushThis #);
          loadOrigin:: (# do superAdj -> E.loadOrigin #);
          loadArgs:: (# do superAdj -> E.loadArgs #);
          execute:: (# do (rec[],useReturnValue,staticOff) -> E.execute #);
       #);
     Const::
       (# gen:: (# do execute #);
          pushOff:: (# do execute #);
          execute:: (# do T.setpos; T.getInt -> cd.pushConst #);
       #);
     CharObj::
       (# gen:: (# do execute #);
          pushOff:: (# do execute #);
          execute:: 
            (# ch: @char
            do (if T.length = 1 then
                   1 -> T.inxget -> cd.pushConst 
                else
                   (if  2 -> T.inxget -> ch
                    // 'n' then 10 -> cd.pushConst
                    else
                       'CharObj:Special symbol: ' -> puttext; ch -> putint;
                       ':' -> put; '"' -> put; ch -> put; '"' -> put;
                       newline;
                       ch -> cd.pushConst
                   if)
               if)
            #);
       #);
     StringObj::
       (# gen:: (# do execute #);
          execute::
            (#
            do '\n!!! StringObj:execute: not implemented: ' -> puttext;
               '"' -> put; T[] -> puttext; '"' -> put; newline;
               0 -> cd.pushConst
            #)
       #);
     ObjTmpStack: @
       (# item: 
            (# N: ^text; sig: ^Signature; OT: ^ObjectGenerator; super: ^Invocation
            enter(N[],sig[],OT[],super[])
            exit this(item)[]
            #);
          add:
            (# N: ^text; sig: ^Signature; OT: ^ObjectGenerator; super: ^Invocation
            enter(N[],sig[],OT[],super[])
            do (if (top+1-> top) > OTL.range then OTL.range -> OTL.extend if);
               (N[],sig[],OT[],super[]) -> item -> OTL[top][]
            #);          
          next:
            (# inx: @integer
            do Loop:
                 (#
                 do inx + 1 -> inx;
                    (if inx <= top then
                        (OTL[inx].N[],OTL[inx].sig[],OTL[inx].super[]) -> OTL[inx].OT.genClass;
                        restart Loop
                    if);
                 #)
            #); 
          OTL: [10] ^Item; top: @integer;
       #);
     labelHandler: @
       (# labCount: @integer;
          label:
            (# labNo: @integer;
               new: (# do  labCount + 1 -> labCount -> labNo #);
            enter labNo
            exit labNo
            #);
          init: (# do 0 -> labCount #);
       #);
     markIncludes,EPpath: @ ModulePath;
     
     ModulePath:
       (* mark all modules used by main module,and
        * find origin offsets for the nested modules enclosing main
        * We dont seem to use the origin offsets for QBETA 
        * -- needed for BETA, but for QBETA Alloc executes the object,
        * -- i.e. allocation of Main in BETAworld executes Main
        * -- with correct origin
        *)
       (# find:
            (# md: ^module;
               MI: ^ModuleItem;
               org: ^TopNode;
               D: ^Items;
               trace: (#exit false #);
            enter md[]
            do (if md[] <> none then
                   (if false then
                       '\nModule: ' -> puttext; md.SO.sig.doPT -> puttext;
                       ' descNo: ' -> puttext; (md.desc).descNo -> putint; 
                       ' imports: ' -> putline;
                   if);
                   md.mark;
                   (if md.origin[] <> none then
                       md.SO.off -> addOff;
                       (* else top module BETAworld *)
                   if);    
                   md.origin[] -> org[];
                   FindModule: (* same as encModule?*)
                     (if org[] <> none then 
                         (if org## <> Module## then 
                             org.father[] -> org[]; restart FindModule 
                         if);
                         org[] -> find 
                      else 
                         md[] -> topModule[] 
                     if)
               if)
            #);
          
          topModule: ^module; (* BETAworld *)
          orgOff: [6] @integer; top: @integer;
          addOff: (* not needed, see above *)
            (# off: @integer
            enter off
            do (if (top+1 -> top) > orgOff.range then 
                   orgOff.range -> orgOff.extend 
               if);
               off -> orgOff[top];
               (*' addOff: ' -> puttext; off -> putint; ' ' ->put*)
            #);
          main: ^Module
       enter main[]
       do 0 -> top;
          main[] -> find;
       #);
     genStubs:
       (# genMain:
            (# descno: @integer
            do ('main',newDesc,false,1,0) -> cd.class;
               cd.pushThis;
               (if false then
                   'TopModule: ' -> puttext;
                   markIncludes.topModule.SO.sig.doPT -> putLine;
                   'Main: ' -> puttext; main.doPt -> putline
               if);
               ('BETAworld',(markIncludes.topModule.desc).descno,0,true) 
                 -> cd.invoke;
               cd.stop; (* We should generate stop here and not in betaVM *)
               (0,0,0) -> CD.endClass;
               
               (if markIncludes.main## <> Module## then
                   '\n\n***** Only Modules can be executed *****\n\n'
                     -> putline
               if)
            #);
          genThreadStub:
            (# descNo: @integer;
            do newDesc -> descNo;
               ('ThreadStub',descNo,false,descNo,0) -> cd.class;
               (false,false) -> cd.actions;
               ('ThreadStub','D') -> cd.call;
               cd.stop
            #);
          genEventProcessor:
            (#
            do ('EventProcessor',newDesc,false,1,0) -> cd.class;
               cd.stop (* we should generate stop here and not in betaVM *)
            #);                   
       do genMain;
          genEventProcessor;     
          genThreadStub;
       #);

