ORIGIN '~beta/basiclib/betaenv'
---lib:attributes---
chdir: external
  (# dir: [0] @char; res: @integer
  enter dir
  do callC
  exit res
  #);
system: external
  (# cmd: [0] @char; res: @integer
  enter cmd
  do callC
  exit res
  #);
popen: external
  (# cmd,mode: [0]@char; res: @integer
  enter(cmd,mode)
  do callC
  exit res
  #);
fgetc: external
  (# F: @integer; ch: @char
  enter F
  do callC
  exit ch
  #);
--- program:descriptor ---
(# WS: ^text;
   exe:
     (# cmd,subPath,input: ^text; 
        withB,withC,background: @boolean;
        TB,TC,TT: ^Text;
        V: @integer
     enter(cmd[],subPath[], withB,withC,background,input[])
     do subPath[] -> (WS.copy).append -> TB[]; 
        cmd[] -> (TB.copy).append -> TB[]; 
        (if (TB -> chdir -> V) <> 0 then
            '\n!!!! chdir failed: ' -> puttext; V -> putint; ' ' -> put;
            TB[] -> putline;
            stop;
        if);
        'xbeta ' -> TB[];
        'xbeta ' -> TC[];
        ' -c ' -> TC.append;
        cmd[] -> TB.append;
        cmd[] -> TC.append;
        
        (if first then
            ' > ' -> TB.append; ' >> ' -> TC.append;
            false -> first
         else
            ' >> ' -> TB.append; ' >> ' -> TC.append
        if);
        log[] -> TB.append;
        log[] -> TC.append;
        (if background then '&' -> TB.append; '&' -> TC.append if);
        (if withB then TB[] -> putline; TB -> system if);
        (if withC then TC[] -> putline; TC -> system if);
        WS -> chdir;
     #); 
