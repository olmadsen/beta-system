CoArg: =
   %include LIB.String
   Fool(S: ? String):
       doResume(T: ?String) -> V: ?integer:
           S := S + T
           (%this Fool).resume
           V := S.length
       loop: =
          S.print	
          (%this Fool).suspend
          %restart loop
   N: ?integer
   F: = Fool("Jimmy ")
   put(10)
   N := F.doResume("Hendrix ")
   putint(N)
   put(10)
   N := F.doResume("plays ")
   putint(N)
   put(10)
   N := F.doResume("the guitar ")
   putint(N)
   put(10)



   
           
