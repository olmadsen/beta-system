TempEx: obj LIB.SimpleConcurrentProcesses.System
   Temperature: Process
      stop:: 
         console.display
            "\nStop Temp: ".print
            id.print
            "\n".print
         Controller.stop
      loop: 
         @for 1 :to 100 
         :do 
            V: var integer
            V := V * inx + 11
      @for 1 :to 10 
      :do 
         controller.send(inx)
         sleep(500)
         --(%this Temperature).suspend
         
      stop
   T1: obj Temperature("Temp1")
   T2: obj Temperature("Temp2")
   T3: obj Temperature("Temp3")
   Controller: obj Process("Controller")
      send: entry
         in T: var integer
         display.show(T)
         @if T < 2 :then 
            heater.go(T) 
         :else 
            @if T > 8 :then 
               cooler.go(t)
      stop:: 
         console.display
            "\nStop Controller\n".print
         heater.stop
         cooler.stop
         display.stop
   Display: obj Process("Display")
      show: entry
         in T: var integer
         console.display
            "\nTempature: ".print
            putint(T)
            newline
      stop:: 
         console.display
            "\nStop display".print
   heater: obj process("Heater")
      go: entry
         in T: var integer
         console.display
            "\nheater.go: ".print
            putint(T)
            newline
      stop:: 
         console.display
            "\nStop heater:".print
   cooler: obj process("Cooler")
      go: entry
         in T: var integer
