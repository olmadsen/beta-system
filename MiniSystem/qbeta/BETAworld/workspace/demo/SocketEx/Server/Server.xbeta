Server: =
   thisServer: = LIB.Socket.Socket  -- Ref=none without LIB - adr(Socket) 
   aClient: ?Lib.socket.Socket
   T: ?String.string
   ch: ?char
   "Server:\n".print
   thisServer.init(3000)
   thisServer.bind
   thisServer.listen
   aClient:= thisServer.accept
   T := aClient.receive
   "Server:received: ".print
   T.print
   newline
   aClient.send("Got your message:-)");
   "Type a char to termiante server: ".print
   ch := _iget
   put(ch)
   newline


 
