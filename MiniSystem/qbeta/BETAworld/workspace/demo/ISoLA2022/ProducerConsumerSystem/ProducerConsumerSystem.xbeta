ProducerConsumerSystem: obj 
   %include BufferModule, ProducerModule, ConsumerModule,String
   b: obj Buffer
   P: obj Producer("P1")
   C: obj Consumer("Cx")
   Message:
      %unique
      in T: ref String
      print:
        T.print
   run:
      "ProducerConsumerSystem\n".print
   "GO\n".print
   P.buf := b
   C.buf := b
   P.start
   C.start