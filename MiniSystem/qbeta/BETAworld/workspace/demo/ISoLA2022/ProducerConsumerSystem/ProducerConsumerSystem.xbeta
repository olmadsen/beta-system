ProducerConsumerSystem: obj
   %module BufferModule, ProducerModule, ConsumerModule,LIB.String
   %visible BufferModule, ProducerModule, ConsumerModule
   b: obj Buffer
   P: obj Producer("Producer",b)
   C: obj Consumer("Consumer",b)
   run:
      "ProducerConsumerSystem:run\n".print
      B.init
      P.start
      C.start
      "end-run\n".print
   "ProducerConsumerSystem\n".print