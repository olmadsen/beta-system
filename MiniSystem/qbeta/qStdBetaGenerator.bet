     BetaBinaryExp::
       (# gen::
            (#
            do cd.fcom(#do 'BinExp:gen:'->TT #);
               lE.load; rE.load; 
               (if op
                // lex.symbols.eq then
                   (if true
                    // (lE.exitType).isRef then
                       cd.req
                    // (lE.exitType).isStrucRef then
                       cd.seq
                    else
                       op ->  cd.op;
                   if)
                // lex.symbols.ne then
                   (if true 
