     NameApl::
       (# gen::
            (#
            do (if false then
                   cd.fcom(#do 'nameApl:gen:'->TT; N.dopt-> TQ #);
                   ATd.gen
               if)
            #);
          load::
            (#
            do cd.fcom(#do 'NameApl:load:'-> TT; ATd.label->TT; dopt->TQ #);
               cd.pushThis;
               on -> origin.goOrigin;
               (if ATd[] <> none then
                   ATd.load
                else
                   cd.fcom(#do 'NameApl:gen:ATd=none:'-> TT; dopt->TQ #)
            if)#);
          store::
            (#
            do cd.fcom(#do 'NameApl:store:'-> TT; dopt->TQ #);
               cd.pushThis;
               (if origin[] = none then 'NameApl:origin is none'-> dumpt;
                   dopt -> dumpTN;
               if);
               on -> origin.goOrigin;
               (if ATd[] = none then
                   'NameApl:ATd is none'->dumpT; dopt -> dumptn
               if);
               ATd.store;
            #);
          doAlloc::
            (#
            do cd.fcom(#do 'NameApl:doAlloc:' -> TT; dopt->TT; 
                         ATd[] = none -> BB; (*ATd.label -> TT*)  #);
               ATd.doAlloc
            #);
       #);   
