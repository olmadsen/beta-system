     StaticItem::
       (# loadItem::
            (#
            do cd.fcom
               (#
               do 'StaticItem:loadItem:'->TT; id[]->TQ; 
                  (if NS.theDesc <> none then
                      (NS.theDesc).doPT -> TT;
                      (NS.theDesc).isPrimitive->BB;
                  if); 
