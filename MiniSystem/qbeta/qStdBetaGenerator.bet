     ActionPart::
       (# gen::
            (#
            do cd.bcPos -> beginBCP;
               (*enterP.gen;*)
               (if imps[] <> none then 
                   (* cd.actions; is invoked in genclass *)
                   cd.mvStack;
                   imps.gen 
                   
               if);
               (*exitP.gen;*)
               cd.bcPos -> endBCP
