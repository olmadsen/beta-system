     (*label:: (#do 'Fragment'-> lab[] #); bound in subpatterns *)
     entity:: (# do this(Fragment)[] -> E[] #);
     (*sort:: (# do this(Fragment)[] -> S[] #);*)
     kind:: (# do '-' -> ch #);
     skind:: (# do ': -' -> S[] #);
     replaceEntity::<
       (#
       do '**** Fragment:replaceEntry: ' -> putline;
          inner
       #);
     theName,cat,language: ^BetaName
  enter(theName[]->append,cat[]->append,language[]->append)
  (*do inner*)
  #);
