ORIGIN '~beta/guienv/guienv';
INCLUDE '~beta/guienv/controls';
INCLUDE '~beta/guienv/utils/framer';
---windowlib:attributes---
runPanel: framer
  (# open::<
       (#
       do (190,95) -> size;
          stepButton.open;
          stepOverButton.open;
          stepOverbutton.hide;
          continueButton.open;
          keepStacksBox.open;          
          clearStacksButton.open;
          threads.open;
          inner
       #);
     stepButton: @stepPushButton;
     stepPushButton:< pushButton
       (# eventHandler::<
            (# onMouseUp::<
                 (#
                 do true -> step;
                    inner
                 #);
            #);
          open::<
            (#
            do 'Step' -> label;
               (10,10) -> position;
               (70,20) -> size;
               inner
            #)
       #);
     stepOverButton: @stepOverPushButton;
     stepOverPushButton:< pushButton
       (# eventHandler::<
            (# onMouseUp::<
                 (#
                 do true -> step;
                    inner
                 #);
            #);
          open::<
            (#
            do 'StepOver' -> label;
               (10,35) -> position;
               (70,20) -> size;
               inner
            #)
       #);
     continueButton: @continuePushButton;
     continuePushButton:< pushButton
       (# eventHandler::<
            (# onMouseUp::<
                 (#
                 do true -> continue;
                    inner
                 #);
            #);
          open::<
            (#
            do
               'Continue' -> label;
               (10,60) -> position;
               (70,20) -> size;
               inner
            #)
       #);
     keepStacksBox: @keepStacksCheckBox;
     keepStacksCheckBox:< checkBox
       (# eventHandler::<
            (# onMouseUp::<
                 (#
                 do (if state then
                        clearStacksButton.hide
                     else
                        clearStacksButton.show
                    if);
                    inner
                 #)
            #);
          open::<
            (# 
            do 'Keep Stacks' -> label;
               (90,10) -> position;
               true -> state;
               INNER;
               fitToContents
            #);
       #);
     clearStacksButton: @clearStacksPushButton;
     clearStacksPushButton:< pushButton
        (# eventHandler::<
            (# onMouseUp::<
                 (#
                 do 
                    inner
                 #);
            #);
          open::<
            (#
            do
               'Clear Stacks' -> label;
               (90,35) -> position;
               (70,20) -> size;
               inner               
            #);
        #);
     threads: @threadsButton;
     threadsButton:< pushButton
        (# eventHandler::<
            (# onMouseUp::<
                 (#
                 do true -> continue;
                    inner
                 #);
            #);
          open::<
            (#
            do
               'Threads' -> label;
               (90,60) -> position;
               (70,20) -> size;
               inner
               
            #)
       #);
     step,continue: @boolean;
  #)

