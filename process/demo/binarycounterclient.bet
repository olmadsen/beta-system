ORIGIN '~beta/basiclib/systemenv';
INCLUDE '~beta/process/binarysocket';

--- program:descriptor ---
systemEnv
(# 
   port: (# exit 7899 #);
   host: (# do 'Enter server hostname: '->putText; exit getLine #);
   
   s: @BinarySocket;

do s.init;
   (10, host, port) -> s.connect;
   
   waitForever -> s.getInt -> putInt; newLine;
   s.close;
#)
