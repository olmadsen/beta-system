ORIGIN '~beta/process/v1.5/processmanager';
[[
--- program:descriptor ---
(#
   compiler: @process;
   aPipe: @pipe;
do
   '/usr/local/lib/beta/bin/beta' -> compiler.init;
   aPipe.init;

   (* The write end of the pipe is a stream  *) 
   (* denoting the compilers input stream    *)
   aPipe.writeEnd[] -> compiler.redirectFromChannel;

   (* The read end and the actual input stream of *)
   (* the compiler are connected  *) 
   aPipe.readEnd[] -> compiler.redirectToChannel;
   compiler.start;

   (* supplying input to the compiler through the pipe *)
   'betaProgram' -> aPipe.writeend.putText;
   aPipe.writeend.newLine;
   (* aPipe.writeend.flush; -- !!! Flush not accessible anymore /EE *)
#)
---]]

