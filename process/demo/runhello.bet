ORIGIN '~beta/basiclib/systemenv';
INCLUDE '~beta/process/processmanager';
INCLUDE '~beta/toollibs/utils/fileExtensions';

(* Simple demonstration of how to invoke hello in current directory.
 * Be carefull to compile ./hello.bet first.
 *)

--PROGRAM: descriptor--
systemenv
(# ls: @Process;
do './hello' -> (exeFileExtension).prepend -> ls.init;
   'Starting ./hello' -> putline; 
   ls.start;
   ls.awaitStopped;
   (*'done' -> putline;*)
#)
