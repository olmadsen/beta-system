ORIGIN '~beta/process/v1.4.1/processmanager';
[[
--- program:descriptor ---
(#
   hund: @process;
   x: @integer
do 'igor' -> hund.init;
   'rottweiler' -> hund.argument.append;
   hund.start;
   (for i:10 repeat 
      (if hund.stillRunning // true then 
          'vov-vov ' -> screen.putText; 
          (for j:1000000 repeat j*j->x for)
   if);for);

   (* Do not stop THIS process until "hund" has stopped *)
   hund.awaitStopped;
#)
---]]
