--- Lib: attributes ---

OutErrHandler: Thread
  (# 
     is: ^InputStream;
     
     (* old-fashioned constructor *)
     _init: (*cons*)
       (# s: ^InputStream;
       enter s[]
       do s[]->is[];
       #);
     
     (* new style constructor *)
     _init_InputStream: cons
       (# s: ^InputStream;
       enter s[]
       do s[]->is[];
       exit THIS(OutErrHandler)[]
       #);
     
     run:
       (# br: ^BufferedReader;
          temp: ^String;
       do is[] 
            -> InputStreamReader._init_InputStream
            -> BufferedReader._init_Reader -> br[];
          read:
            (if (br.readLine->temp[])<>NONE then
                temp[] -> screen.putline;
                restart read;
            if);
          is.close;
       #);
  #);


--- ProcessPrivate:descriptor ---
(# jp: ^JavaProcess;
   out, err: ^OutErrHandler;
#)


--- ProcessStartMDBody:descriptor---
(# cmd: ^text
do name.copy -> cmd[];
   argument.scanArguments(# do ' '->cmd.put; current[]->cmd.append #);
   (* Start external process *)
   cmd[] -> (Runtime.getRuntime).exec_String -> private.jp[];
   (* Handle stdout and stderr from external process *)
   (if true then
       (* Use new-style constructor *)
       private.jp.getInputStream 
         -> OutErrHandler._init_InputStream
         -> private.out[];
       private.jp.getErrorStream 
         -> OutErrHandler._init_InputStream
         -> private.err[];
    else
       (* Use old-style constructor *)
       private.jp.getInputStream 
         -> &OutErrHandler[]
         -> private.out[];
       private.jp.getErrorStream 
         -> &OutErrHandler[]
         -> private.err[]; 
   if);
   private.out.start;
   private.err.start;
#)


--- ProcessStopMDBody:descriptor ---
(#
do private.jp.destroy;
#)


--- ProcessAwaitStopped:dopart ---
do private.jp.waitFor;
   INNER;
   

