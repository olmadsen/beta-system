     prettyPrintForm:
       (# ff: ^mps.fragmentForm; node: ^mps.ast
       enter (ff[],node[])
       do (* ff.root.dump;*)
          (if astDump then
              (if node[] = none then
                  (depth,outStream[])->ff.root.dump; 
               else
                  (depth,outStream[])->node.dump; 
              if)
           else
              (if node[] = none then
                  (ff.root[],depth)->astView.pp.present; 
               else
                  (node[],depth)->astView.pp.present; 
              if)
          if);
          
       #);
