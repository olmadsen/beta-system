       (#
          g: ^mps.fragmentGroup;
          t: ^text;
          no,noOfFrags: @integer;
          grammarName: ^text;
          firstTime: @boolean;
          
       enter g[]
       do
          true->firstTime;
          (if g.fragmentlist[] <> none then
              g.fragmentList.scan
                (# 
                do
                   no+1->no;
                   (if current.type
                    // mps.formType then
                         (# ff: ^mps.fragmentForm
                         do
                            (if not onlyProperties then
                                (if firstTime then
                                    false->firstTime
                                 else
                                    astView.out.Newline
