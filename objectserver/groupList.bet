BODY 'private/groupListBody';

--- lib: attributes ---
groupElement:
  (# groupName: ^Text;
     inx: @Integer;
  #);

groupList: 
  (# element:< groupElement;
     init:< (# do <<SLOT groupListInitBody:descriptor>>; INNER #);
     findGroupByInx:
       (# group: @Integer;
          elm: ^groupElement;
       enter group
       <<SLOT groupListfindInxBody:dopart>>
       exit elm[]
       #);
     findGroupByName:
       (# doIt: @<<SLOT groupListfindGroupBody:descriptor>>;
          groupName: ^Text;
          elm: ^groupElement;
       enter groupName[]
       do doIt
       exit elm[]
       #);
     insert:<
       (# doIt: @<<SLOT groupListInsertBody:descriptor>>;
          elm: ^groupElement;
       enter elm[]
       do doIt; INNER
       #);
     size: IntegerValue
       (# <<SLOT groupListSizeBody:dopart>> #);
     scan:
       (# cur: ^groupElement;
       do <<SLOT groupListScanBody:descriptor>>
       #);
     clear: (# doIt: @<<SLOT groupListClearBody:descriptor>> do doIt #);
     glPrivate: @<<SLOT groupListPrivate:descriptor>>;
  #)
